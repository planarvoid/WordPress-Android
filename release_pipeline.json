{
  "stages": [
    {
      "name": "build",
      "jobs": [
        [
          {
            "build_pre_release_apks_for_testing": {
              "artifacts": [
                "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-preRelease-*.apk",
                "app/build/outputs/apk/*androidTest*.apk"
              ],
              "cmd": "BUILD_TYPE=preRelease ./gradlew buildPreRelease assembleAcceptanceTest"
            }
          },
          {
            "build_debug_apks_for_ads_testing": {
              "artifacts": [
                "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-debug-*.apk",
                "app/build/outputs/apk/*androidTest*.apk"
              ],
              "cmd": "BUILD_TYPE=debug ./gradlew assembleDebugApk assembleAcceptanceTest"
            }
          }
        ]
      ],
      "next-stages": [
        "automated_tests",
        "manual_tests"
      ]
    },
    {
      "name": "automated_tests",
      "jobs": [
        [
          {
            "unit_tests": {
              "cmd": "./gradlew clean runUnitTests",
              "test-reports": "**/build/test-results/**/*.xml",
              "no-clean": true,
              "plugins": {
                "htmlReports": [
                  {
                    "reportDir": "app/build/reports/tests/devDebug/",
                    "reportFiles": "index.html",
                    "reportName": "Unit test report"
                  }
                ]
              }
            }
          },
          {
            "acceptance_tests": {
              "cmd": "BUILD_TYPE=preRelease ./gradlew runMarshmallowTestsRelease",
              "test-reports": "results/xml/*.xml",
              "plugins": {
                "htmlReports": [
                  {
                    "reportDir": "results/",
                    "reportFiles": "index.html",
                    "reportName": "Test Results"
                  },
                  {
                    "reportDir": "results/",
                    "reportFiles": "collection_index.html",
                    "reportName": "Collection Results"
                  }
                ],
                "extEmail": {
                  "content": "&lt;p&gt;${SCRIPT, template=&quot;random-gif.template&quot;}&lt;/p&gt;${SCRIPT, template=&quot;ios.template&quot;}"
                }
              }
            }
          },
          {
            "ads_tests_(debug_build)": {
              "cmd": "BUILD_TYPE=debug ./gradlew runMarshmallowAdsTestsRelease",
              "test-reports": "results/xml/*.xml",
              "plugins": {
                "htmlReports": [
                  {
                    "reportDir": "results/",
                    "reportFiles": "index.html",
                    "reportName": "Ads Test Results"
                  },
                  {
                    "reportDir": "results/",
                    "reportFiles": "collection_index.html",
                    "reportName": "Ads Collection Results"
                  }
                ],
                "extEmail": {
                  "content": "&lt;p&gt;${SCRIPT, template=&quot;random-gif.template&quot;}&lt;/p&gt;${SCRIPT, template=&quot;ios.template&quot;}"
                }
              }
            }
          }
        ]
      ],
      "next-stages": [
        "deploy_beta"
      ]
    },
    {
      "name": "manual_tests",
      "jobs": [
        {
          "create_regression_tests_tasks": {
            "cmd": "./gradlew openRegressionTasks",
            "manual": true,
            "localBranch": true
          }
        }
      ]
    },
    {
      "name": "deploy_beta",
      "jobs": [
        {
          "build_beta_apk": {
            "cmd": "BUILD_TYPE=beta ./gradlew buildBeta",
            "artifacts": [
              "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-beta-*.apk"
            ]
          }
        },
        {
          "deploy_beta": {
            "cmd": "ln -s /home/mobile/installs/client_secrets.json client_secrets.json \nBUILD_TYPE=beta ./gradlew deployBeta versionizeFollowUpBeta commitVersionBump",
            "manual": true,
            "localBranch": true,
            "artifacts": [
              "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-beta-*.apk"
            ]
          }
        }
      ],
      "next-stages": [
        "rollout_release"
      ]
    },
    {
      "name": "rollout_release",
      "jobs": [
        [
          {
            "build_release_apk": {
              "cmd": "BUILD_TYPE=release ./gradlew buildRelease",
              "artifacts": [
                "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-release-*.apk"
              ]
            }
          },
          {
            "build_follow_up_beta_apk": {
              "cmd": "BUILD_TYPE=beta ./gradlew buildFollowUpBeta",
              "artifacts": [
                "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-beta-*.apk"
              ]
            }
          }
        ],
        {
          "rollout_release_1_percent_and_followup_beta": {
            "cmd": "ln -s /home/mobile/installs/client_secrets.json client_secrets.json \nBUILD_TYPE=release ./gradlew deployReleaseOnePercent deployFollowUpBeta",
            "manual": true,
            "localBranch": true,
            "artifacts": [
              "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-*-*.apk"
            ]
          }
        },
        {
          "rollout_release_20_percent": {
            "cmd": "ln -s /home/mobile/installs/client_secrets.json client_secrets.json \nBUILD_TYPE=release ./gradlew deployReleaseTwentyPercent",
            "manual": true,
            "localBranch": true,
            "artifacts": [
              "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-release-*.apk"
            ]
          }
        },
        {
          "rollout_release_100_percent": {
            "cmd": "ln -s /home/mobile/installs/client_secrets.json client_secrets.json \nBUILD_TYPE=release ./gradlew deployReleaseRolloutFull",
            "manual": true,
            "localBranch": true,
            "artifacts": [
              "app/build/outputs/apk/soundcloud-android-*-${PIPELINE_VERSION}-release-*.apk"
            ]
          }
        }
      ]
    }
  ],
  "settings": {
    "default-name": "Android_Listeners_Release",
    "git-branch": "release",
    "git-url": "git@github.com:soundcloud/android-listeners.git",
    "github-url": "https://github.com/soundcloud/android-listeners/",
    "jenkins-server": "http://mobile-jenkins.int.s-cloud.net",
    "owner-emails": "android-dev@soundcloud.com",
    "slave-label": "android"
  }
}
