<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.soundcloud.android"
      android:versionName="2.4-BETA"
      android:installLocation="internalOnly"
      android:versionCode="49">

    <supports-screens android:anyDensity="true" />
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- needed for pre 2.2: automatic call muting -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <!-- c2dm -->
    <permission android:name="com.soundcloud.android.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="com.soundcloud.android.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application android:icon="@drawable/launcher"
                 android:logo="@drawable/ic_bulleted_list"
                 android:label="@string/app_name"
                 android:theme="@style/Theme.Next"
                 android:configChanges="orientation|keyboardHidden|keyboard"
                 android:hardwareAccelerated="true"
                 android:name="SoundCloudApplication">

        <!-- activities -->
        <activity android:name=".activity.Launch"
                  android:noHistory="true"
                  android:theme="@style/Theme.Next.NoActionBar"
                  android:launchMode="singleTask"
                  android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="soundcloud.com"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https" android:host="soundcloud.com"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="snd.sc"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https" android:host="snd.sc"/>
            </intent-filter>

            <!-- soundcloud:users:12345#show | soundcloud:tracks:12345#play -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="soundcloud"/>
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.STREAM"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.MESSAGE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.PROFILE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.MY_PROFILE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.USER_BROWSER"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.ACCOUNT_PREF"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.PLAYER"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.landing.ScSearch" android:launchMode="singleTask">
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.landing.Stream" android:launchMode="singleTask"  />
        <activity android:name=".activity.landing.News" android:launchMode="singleTask" />
        <activity android:name=".activity.landing.You" android:launchMode="singleTask" />


        <activity android:name=".activity.auth.Start" android:label="@string/app_name" android:exported="true" android:theme="@style/Theme.ScAuth" />
        <activity android:name=".activity.auth.Login" android:label="@string/app_name" android:configChanges="orientation" android:theme="@style/Theme.ScAuth"  />
        <activity android:name=".activity.auth.SignUp" android:label="@string/app_name" android:configChanges="orientation" android:theme="@style/Theme.ScAuth"  />
        <activity android:name=".activity.auth.SignupDetails" android:label="@string/app_name" android:configChanges="orientation" android:theme="@style/Theme.ScAuth" />
        <activity android:name=".activity.auth.Recover" android:label="@string/app_name" android:configChanges="orientation" android:theme="@style/Theme.ScAuth"  />
        <activity android:name=".activity.auth.Facebook" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.auth.FacebookWebFlow" android:theme="@style/Theme.Next.NoActionBar" android:label="@string/app_name" android:configChanges="orientation"/>
        <activity android:name=".activity.auth.FacebookSSO" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.auth.SuggestedUsers" android:label="@string/app_name" android:configChanges="orientation"/>

        <activity android:name=".activity.auth.Connect"
            android:label="Connect"
            android:configChanges="orientation|keyboardHidden">

            <intent-filter>
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
              <category android:name="android.intent.category.BROWSABLE" />
              <data android:scheme="soundcloud" android:host="auth" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ScPlayer"
                  android:windowSoftInputMode="adjustPan"
                  android:theme="@style/Theme.ScDark" />

        <activity android:name=".activity.auth.Tour" android:screenOrientation="portrait" />
        <activity android:name=".activity.track.TrackLikers" />
        <activity android:name=".activity.track.TrackComments" />
        <activity android:name=".activity.track.TracksByTag" />

        <activity android:name=".activity.settings.Settings" android:label="Settings" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.settings.AccountSettings" android:theme="@style/Theme.Next.NoActionBar" />
        <activity android:name=".activity.settings.NotificationSettings" android:label="Notifications Settings" android:theme="@style/Theme.Next.NoActionBar" />
        <activity android:name=".activity.UserBrowser" android:label="Profile"/>
        <activity android:name=".activity.create.EmailPicker" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.create.LocationPicker" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.auth.EmailConfirm"/>
        <activity android:name=".activity.create.ScCreate"
                  android:theme="@style/Theme.ScCreate"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.RECORD"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.RECORD_START"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.RECORD_STOP"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".cropimage.CropImage" />
        <activity android:name=".activity.create.UploadMonitor"
                  android:launchMode="singleTask"
                  android:theme="@style/Theme.Next.NoActionBar">
            <intent-filter>
                <action android:name="com.soundcloud.android.actions.upload.monitor"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="vnd.soundcloud/recording"/>

            </intent-filter>
        </activity>

        <activity android:name=".activity.create.ScUpload"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/Theme.ScCreate" >
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <data android:mimeType="audio/*"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.SHARE"/>
                <!--<data android:mimeType="audio/*"/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.settings.About" android:theme="@style/Theme.Next.NoActionBar"/>

        <!-- for testing purposes -->
        <activity android:name="com.soundcloud.android.activity.test.ShareSound">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- hockey app -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <!-- providers -->
        <provider android:name=".provider.ScContentProvider"
                  android:authorities="com.soundcloud.android.provider.ScContentProvider"/>


        <!-- services -->
        <service android:name=".service.sync.ApiSyncService"/>
        <service android:name=".service.record.SoundRecorderService"/>
        <service android:name=".service.playback.CloudPlaybackService"
                 android:exported="false">
            <intent-filter>
                <action android:name="com.soundcloud.android.playback.play"/>
                <action android:name="com.soundcloud.android.playback.togglepause"/>
                <action android:name="com.soundcloud.android.playback.pause"/>
                <action android:name="com.soundcloud.android.playback.next"/>
                <action android:name="com.soundcloud.android.playback.previous"/>
                <action android:name="com.soundcloud.android.playback.close"/>
                <action android:name="com.soundcloud.android.playback.reset"/>
            </intent-filter>
        </service>

        <service android:name=".service.upload.UploadService" android:exported="false">
            <intent-filter>
                <action android:name="com.soundcloud.android.actions.upload"/>
                <action android:name="com.soundcloud.android.actions.upload.cancel"/>
            </intent-filter>
        </service>

        <service android:name=".service.auth.AuthenticatorService"
                 android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data android:name="android.accounts.AccountAuthenticator"
                       android:resource="@xml/authenticator"/>
        </service>

        <service android:name=".service.sync.SyncAdapterService" android:exported="false">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync" />
        </service>

        <!-- receivers -->
        <receiver android:label="SoundCloud Player"
                  android:name=".service.playback.PlayerAppWidgetProvider">
          <intent-filter>
              <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
          </intent-filter>

          <meta-data android:name="android.appwidget.provider"
                     android:resource="@xml/widget_player" />
        </receiver>

        <receiver android:name=".activity.settings.AlarmClock$Receiver">
            <intent-filter>
                <action android:name="com.soundcloud.android.actions.ALARM"/>
                <action android:name="com.soundcloud.android.actions.CANCEL_ALARM"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.provider.Telephony.SECRET_CODE" />
                <!-- *#*#ALARM#*#* -->
                <data android:scheme="android_secret_code" android:host="25276"/>
            </intent-filter>
        </receiver>

        <receiver android:label="SoundCloud Recorder"
              android:name=".service.record.RecordAppWidgetProvider">

             <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget_record" />
        </receiver>

        <!-- headphone + remoteclient control -->
        <receiver android:name=".service.playback.RemoteControlReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".c2dm.C2DMReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.soundcloud.android"/>
            </intent-filter>

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.soundcloud.android" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.ACCOUNT_ADDED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".CodeReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SECRET_CODE"/>
                <!-- *#*#SCPLAYDEBUG#*#* -->
                <data android:scheme="android_secret_code" android:host="12345"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".provider.ScContentProvider$TrackUnavailableListener">
            <intent-filter>
                <action android:name="com.soundcloud.android.trackunavailable"/>
            </intent-filter>
        </receiver>

        <meta-data android:name="android.app.default_searchable"
                   android:value=".activity.landing.ScSearch"/>
    </application>

</manifest>
