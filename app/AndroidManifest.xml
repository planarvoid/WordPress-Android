                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/side_menu_stream" android:name=".activity.MainActivity" android:theme="@style/Theme.SoundCloud"
