<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.soundcloud.android"
      android:versionName="2.6.4-BETA1"
      android:installLocation="auto"
      android:versionCode="67">

    <supports-screens android:anyDensity="true" />
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- needed for pre 2.2: automatic call muting -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <!-- allows non-flash, non-autofocus devices to use app -->
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- c2dm -->
    <permission android:name="com.soundcloud.android.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="com.soundcloud.android.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application android:icon="@drawable/ic_launcher"
                 android:logo="@drawable/empty"
                 android:label="@string/app_name"
                 android:theme="@style/Theme.Next"
                 android:configChanges="orientation|keyboardHidden|keyboard"
                 android:hardwareAccelerated="true"
                 android:allowBackup="true"
                 android:name="SoundCloudApplication">

        <activity android:name=".activity.Launch"
                  android:noHistory="true"
                  android:theme="@style/Theme.Next.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.landing.Home" android:label="@string/side_menu_stream">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.STREAM"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter  android:priority="10">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/stream"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/stream"/>
            </intent-filter>
        </activity>

        <!-- activities -->
        <activity android:name=".activity.ResolveActivity"
                  android:noHistory="true"
                  android:theme="@style/Theme.Next.NoActionBar"
                  android:windowSoftInputMode="adjustPan">

            <intent-filter android:priority="1">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="soundcloud.com" />
                <data android:scheme="https" android:host="soundcloud.com" />
                <data android:scheme="http" android:host="snd.sc"/>
                <data android:scheme="https" android:host="snd.sc"/>
                <data android:scheme="http" android:host="m.soundcloud.com"/>
                <data android:scheme="https" android:host="m.soundcloud.com"/>
            </intent-filter>

            <!-- kee this separate, if combined with above, Android accepts ALL urls -->
            <intent-filter android:priority="1">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="soundcloud" android:host="*" />
            </intent-filter>

        </activity>

        <activity android:name=".activity.landing.ScSearch" android:label="@string/title_search">
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:mimeType="vnd.soundcloud/search_item"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.media.action.MEDIA_PLAY_FROM_SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <intent-filter  android:priority="10">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/search"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/search"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/search/sounds"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/search/sounds"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/search/people"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/search/people"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/search/sets"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/search/sets"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/search/groups"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/search/groups"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/people/search"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/people/search"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/tracks/search"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/tracks/search"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/groups/search"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/groups/search"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.landing.News" android:label="@string/side_menu_activity">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.landing.You" android:label="" android:theme="@style/Theme.Next.NoBg">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.YOU"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.YOUR_INFO"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.YOUR_SOUNDS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.YOUR_LIKES"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.YOUR_FOLLOWERS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.YOUR_FOLLOWINGS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- new suggested users -->
        <activity android:name=".activity.landing.SuggestedUsersActivity"
                  android:theme="@style/Theme.Onboard"
                  android:label="" />
        <activity android:name=".activity.landing.SuggestedUsersCategoryActivity"
                  android:theme="@style/Theme.Onboard"
                  android:label="" />
        <activity android:name=".activity.landing.SuggestedUsersSyncActivity"
                  android:theme="@style/Theme.Onboard"
                  android:label="" />

        <!-- old suggested users -->
        <activity android:name=".activity.landing.WhoToFollowActivity" android:label="@string/side_menu_who_to_follow">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.WHO_TO_FOLLOW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter android:priority="10">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/people"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/people"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.landing.FriendFinder" android:label="@string/side_menu_friend_finder"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.FRIEND_FINDER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


        <activity android:name=".activity.auth.Onboard" android:windowSoftInputMode="adjustResize"
                  android:label="@string/app_name" android:exported="true" android:theme="@style/Theme.ScAuth"/>
        <activity android:name=".activity.auth.Recover" android:label="@string/app_name" android:configChanges="orientation" android:theme="@style/Theme.Recover"  />
        <activity android:name=".activity.auth.FacebookSwitcherActivity" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.auth.FacebookWebFlow" android:theme="@style/Theme.Next.NoActionBar" android:label="@string/app_name" android:configChanges="orientation"/>
        <activity android:name=".activity.auth.FacebookSSO" android:theme="@style/Theme.Next.NoActionBar"/>

        <activity android:name=".activity.auth.Connect"
                  android:theme="@style/Theme.Next.NoActionBar"
                  android:label="Connect"
                  android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity android:name=".activity.ScPlayer"
                  android:windowSoftInputMode="adjustPan"
                  android:launchMode="singleTask"
                  android:label=""
                  android:theme="@style/Theme.Next.Dark.NoBg">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.PLAYER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <!-- play with content uri, e.g. ME_STREAM -->
            <intent-filter>
                <action android:name="com.soundcloud.android.action.PLAY"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="content"
                      android:host="com.soundcloud.android.provider.ScContentProvider"
                        />
            </intent-filter>


            <!-- play with playlist uri -->
            <intent-filter>
                <action android:name="com.soundcloud.android.action.PLAY"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="content"
                      android:host="com.soundcloud.android.provider.ScContentProvider"
                        />
                <data android:mimeType="vnd.soundcloud.playable/playlist"/>
            </intent-filter>

            <!-- play with track extra -->
            <intent-filter>
                <action android:name="com.soundcloud.android.action.PLAY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activity.landing.Home"/>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:mimeType="vnd.soundcloud.playable/track"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.UserBrowser" android:label="" android:theme="@style/Theme.Next.NoBg">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.USER_BROWSER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:mimeType="vnd.soundcloud/user"/>
            </intent-filter>
        </activity>

        <activity  android:label="@string/side_menu_record"
                   android:launchMode="singleTask"
                   android:name=".activity.create.ScCreate"
                   android:theme="@style/Theme.ScCreate">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.RECORD"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.RECORD_START"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.soundcloud.android.action.RECORD_STOP"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter android:priority="10">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="soundcloud.com" android:path="/upload"/>
                <data android:scheme="https" android:host="soundcloud.com" android:path="/upload"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.create.UploadMonitor"
                  android:theme="@style/Theme.Next.NoActionBar">
            <intent-filter>
                <action android:name="com.soundcloud.android.actions.upload.monitor"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="vnd.soundcloud/recording"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.create.ScUpload"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/Theme.ScCreate" >
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <data android:mimeType="audio/*"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.SHARE"/>
                <!--<data android:mimeType="audio/*"/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.track.TrackInteractionActivity" />
        <activity android:name=".activity.track.TracksByTag" />

        <activity android:name=".activity.track.PlaylistActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.PLAYLIST"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="vnd.soundcloud.playable/playlist"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:mimeType="vnd.soundcloud.playable/playlist"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.track.PlaylistInteractionActivity" />

        <!-- settings -->
        <activity android:name=".activity.settings.Settings"
                  android:label="@string/title_settings"
                  android:theme="@style/Theme.Next.Settings"/>

        <activity android:name=".activity.settings.AccountSettings"
                  android:theme="@style/Theme.Next.Settings">
            <intent-filter>
                <action android:name="com.soundcloud.android.action.ACCOUNT_PREF"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.settings.NotificationSettings" android:label="Notifications Settings" android:theme="@style/Theme.Next.Settings" />
        <activity android:name=".activity.settings.About" android:theme="@style/Theme.Next.Settings"/>
        <activity android:name=".activity.settings.Legal" android:theme="@style/Theme.Next.Settings"/>

        <!-- settings -->

        <activity android:name=".activity.create.EmailPicker" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.create.LocationPicker" android:theme="@style/Theme.Next.NoActionBar"/>
        <activity android:name=".activity.auth.EmailConfirm"/>
        <activity android:name=".cropimage.CropImageActivity" android:hardwareAccelerated="false"/>

        <!-- for testing purposes -->
        <activity android:name="com.soundcloud.android.activity.test.ShareSound">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.WebViewActivity" android:theme="@style/Theme.Next.NoActionBar"/>

        <!-- hockey app -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />


        <!-- providers -->
        <provider android:name=".provider.ScContentProvider"
                  android:authorities="com.soundcloud.android.provider.ScContentProvider"/>

        <!-- services -->
        <service android:name=".service.sync.ApiSyncService"/>
        <service android:name=".service.record.SoundRecorderService"/>
        <service android:name=".service.playback.CloudPlaybackService"
                 android:exported="false">

            <intent-filter>
                <action android:name="com.soundcloud.android.playback.start"/>
                <data android:scheme="content"
                      android:host="com.soundcloud.android.provider.ScContentProvider"/>
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.playback.start"/>
                <action android:name="com.soundcloud.android.playback.togglepause"/>
                <action android:name="com.soundcloud.android.playback.pause"/>
                <action android:name="com.soundcloud.android.playback.next"/>
                <action android:name="com.soundcloud.android.playback.previous"/>
                <action android:name="com.soundcloud.android.playback.close"/>
                <action android:name="com.soundcloud.android.playback.reset"/>
                <action android:name="com.soundcloud.android.playback.stop"/>
                <action android:name="com.soundcloud.android.reloadqueue"/>
                <action android:name="com.soundcloud.android.loadTrackInfo"/>
            </intent-filter>

          <intent-filter>
              <action android:name="com.soundcloud.android.playback.start"/>
              <action android:name="com.soundcloud.android.like.add"/>
              <action android:name="com.soundcloud.android.like.remove"/>
              <action android:name="com.soundcloud.android.repost.add"/>
              <action android:name="com.soundcloud.android.repost.remove"/>
              <data android:scheme="content"
                    android:mimeType="vnd.soundcloud.playable/*"
                    android:pathPrefix=""
                    android:host="com.soundcloud.android.provider.ScContentProvider"/>
          </intent-filter>
        </service>

        <service android:name=".service.upload.UploadService" android:exported="false">
            <intent-filter>
                <action android:name="com.soundcloud.android.actions.upload"/>
                <action android:name="com.soundcloud.android.actions.upload.cancel"/>
            </intent-filter>
        </service>

        <service android:name=".service.auth.AuthenticatorService"
                 android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data android:name="android.accounts.AccountAuthenticator"
                       android:resource="@xml/authenticator"/>
        </service>

        <service android:name=".service.sync.SyncAdapterService" android:exported="false">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync" />
        </service>

        <!-- receivers -->
        <receiver android:label="SoundCloud Player"
                  android:name=".service.playback.PlayerAppWidgetProvider">
          <intent-filter>
              <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
          </intent-filter>

          <meta-data android:name="android.appwidget.provider"
                     android:resource="@xml/widget_player" />
        </receiver>

        <receiver android:name=".activity.settings.AlarmClock$Receiver">
            <intent-filter>
                <action android:name="com.soundcloud.android.actions.ALARM"/>
                <action android:name="com.soundcloud.android.actions.CANCEL_ALARM"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.provider.Telephony.SECRET_CODE" />
                <!-- *#*#ALARM#*#* -->
                <data android:scheme="android_secret_code" android:host="25276"/>
            </intent-filter>
        </receiver>

        <receiver android:label="SoundCloud Recorder"
              android:name=".service.record.RecordAppWidgetProvider">

             <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget_record" />
        </receiver>

        <!-- headphone + remoteclient control -->
        <receiver android:name=".service.playback.RemoteControlReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".c2dm.C2DMReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.soundcloud.android"/>
            </intent-filter>

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.soundcloud.android" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.soundcloud.android.action.ACCOUNT_ADDED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".provider.ScContentProvider$TrackUnavailableListener">
            <intent-filter>
                <action android:name="com.soundcloud.android.trackunavailable"/>
            </intent-filter>
        </receiver>

        <meta-data android:name="android.app.default_searchable"
                   android:value=".activity.landing.ScSearch"/>
    </application>

</manifest>
