<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayerCloseBase.PlayerClose">
        <item name="android:background">@drawable/circular_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerLikeBase.PlayerLike">
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerMore" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:src">@drawable/player_overflow</item>
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerShare" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:src">@drawable/ic_share_white_24dp</item>
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerShareTextBase.PlayerShareText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerPlay" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/pc_player_play</item>
        <item name="android:background">@drawable/circular_ripple</item>
    </style>

    <style name="PlayerNext" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/pc_player_skip_next</item>
        <item name="android:layout_margin">@dimen/player_skip_margin</item>
        <item name="android:background">@drawable/circular_ripple</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
    </style>

    <style name="PlayerPrevious" parent="PlayerNext">
        <item name="android:src">@drawable/pc_player_skip_previous</item>
        <item name="android:background">@drawable/circular_ripple</item>
    </style>

</resources>
