<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EmptyViewImage">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ExploreGridItemImageView" parent="ExploreGridItemImageViewBase">
        <item name="movement">-8dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Link">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="EmptyCollectionButton">
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

</resources>