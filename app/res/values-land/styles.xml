<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GridItemImageView" parent="GridItemImageViewBase">
        <item name="movement">-8dp</item>
    </style>

    <style name="PlayerTrackArtworkHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PlayerTrackArtwork">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="ariv_aspectRatioEnabled">true</item>
        <item name="ariv_dominantMeasurement">width</item>
    </style>

    <style name="PlayerTitle" parent="ShrinkWrap.Primary.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Stations -->
    <style name="StationInfo.HeaderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/stations_blur_overlay</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="StationInfo.LikeButton" parent="Cards.ToggleButton">
        <item name="android:drawableLeft">@drawable/ic_like_station</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textOff">@string/btn_like</item>
        <item name="android:textOn">@string/btn_unlike</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
