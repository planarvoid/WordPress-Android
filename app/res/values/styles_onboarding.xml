<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OnboardSuggestedUserCategoryText">
        <item name="android:textColor">@color/list_text_value</item>
        <item name="android:textSize">@dimen/list_txt_main_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="OnboardSuggestedUserCategoryUsernamesText">
        <item name="android:textColor">@color/list_text_secondary</item>
        <item name="android:textSize">@dimen/list_txt_sub_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="OnboardActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Tour"/>
    <style name="Tour.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/tour_buttons_height</item>
        <item name="android:layout_weight">1</item>

        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tour_text_color</item>
        <item name="android:gravity">center</item>

        <item name="android:background">@drawable/next_button_white</item>
    </style>

    <style name="Tour.NextButton" parent="Tour.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/next_button_white</item>
    </style>

    <style name="Tour.CancelButton" parent="Tour.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/cancel_button_999</item>
    </style>

    <style name="Tour.BottomButton" parent="Tour.Button">
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="Tour.SignupButton" parent="Tour.BottomButton">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/next_button_orange</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="Tour.SocialButton" parent="Tour.Button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:paddingLeft">43dp</item>
    </style>

    <style name="Tour.FacebookButton" parent="Tour.SocialButton">
        <item name="android:background">@drawable/btn_facebook</item>
    </style>

    <style name="Tour.GooglePlusButton" parent="Tour.SocialButton">
        <item name="android:background">@drawable/btn_google_plus</item>
    </style>

    <style name="Tour.CallToAction.Base" parent="BlackOverlayText">
        <item name="android:layout_height">wrap_content</item>
        <item name="custom_font">fonts/Interstate-Light.ttf</item>
    </style>

    <style name="Tour.CallToAction" parent="Tour.CallToAction.Base">

    </style>

    <style name="Tour.Headline.Base" parent="Tour.CallToAction">
        <item name="android:paddingTop">1sp</item>

        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>

        <item name="custom_font">fonts/Interstate-Regular.ttf</item>
    </style>

    <style name="Tour.Headline" parent="Tour.Headline.Base">

    </style>

    <style name="Tour.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/tour_radio_button</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="txt_tour_title" parent="txt_tour_start">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="txt_tour_start">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#dd222222</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>
    <style name="txt_tour_start_1" parent="txt_tour_start">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_tour_start_2" parent="txt_tour_start">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_tour_start_3" parent="txt_tour_start">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="txt_tour_subject">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="txt_tour_message">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignUp"/> <!-- and Login, too! -->

    <style name="SignUp.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">matrix</item>
    </style>

    <style name="SignUp.Overlay">
        <item name="android:background">@color/tour_overlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SignUp.ScrollViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignUp.ScrollView" parent="SignUp.ScrollViewBase">

    </style>

    <style name="SignUp.Content.Stub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignUp.ContentBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SignUp.Content" parent="SignUp.ContentBase">
    </style>

    <style name="SignUp.TermsText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLargeInverse</item>
        <item name="android:textColorLink">@drawable/txt_blue_states</item>
    </style>

    <style name="SignUp.TermsMessage" parent="SignUp.TermsText">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SignUp.Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColorLink">@drawable/txt_blue_states</item>
    </style>

    <style name="SignUp.Header" parent="SignUp.Info">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignUp.LoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_field</item>

    </style>

    <style name="SignUp.LabelRow" />

    <style name="SignUp.SeparatorRow">
        <item name="android:background">@color/signup_separator</item>
        <item name="android:layout_span">2</item>
    </style>

    <style name="SignUp.SeparatorView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/signup_separator</item>
    </style>

    <style name="SignUp.SeparatorView.Vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">@dimen/signup_label_height</item>
    </style>

    <style name="SignUp.Label">
        <item name="android:layout_width">@dimen/signup_label_width</item>
        <item name="android:layout_height">@dimen/signup_label_height</item>
        <item name="android:layout_weight">0</item>

        <item name="android:padding">@dimen/signup_label_padding</item>
        <item name="android:layout_margin">4dp</item>

        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>

        <item name="android:background">@null</item>
    </style>

    <style name="SignUp.AddImageLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:padding">10dp</item>

        <item name="android:background">@drawable/info_upload_image_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/list_text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignUp.MultiLineInfoLabel" parent="SignUp.Label">
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
    </style>

    <style name="SignUp.TextEntry" parent="SignUp.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="custom_font">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SignUp.EmailEntry" parent="SignUp.TextEntry">
        <item name="android:inputType">textNoSuggestions|textEmailAddress</item>
        <item name="android:dropDownSelector">@drawable/ak_list_selector_gray</item>
    </style>

    <style name="SignUp.PasswordEntry" parent="SignUp.TextEntry">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="auth_input">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">20dip</item>
    </style>

    <style name="auth_label">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_auth_title" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="txt_auth_input" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>
    <style name="txt_auth_msg">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
    </style>

    <style name="UserToggleButton">
        <item name="android:background">@null</item>-->
        <item name="android:button">@drawable/btn_check_round</item>-->
    </style>

    <style name="UserToggleButton.Suggested">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:focusable">false</item>
        <item name="android:text">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
    </style>

    <style name="TourOverlayTextHolderLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:tag">parallax</item>
        <item name="android:layout_marginBottom">@dimen/tour_bottom_bar_height</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>
