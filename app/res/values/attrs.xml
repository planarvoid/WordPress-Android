<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayerTimeView">
        <attr name="show_arrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="JaggedTextView">
        <attr name="jagged_background" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="CustomFontTextView">
        <attr name="custom_font" format="string" />
    </declare-styleable>

    <declare-styleable name="AspectRatioImageView">
        <attr name="ariv_aspectRatio" format="float" />
        <attr name="ariv_aspectRatioEnabled" format="boolean" />
        <attr name="ariv_dominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SquareFrameLayout">
        <attr name="sfl_dominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ParallaxImageView">
        <attr name="movement" format="dimension" />
        <attr name="focalPoint" format="float" />
    </declare-styleable>

    <declare-styleable name="OptimisedImageView">
        <attr name="showGradient" format="boolean" />
        <attr name="gradientStart" format="float" />
        <attr name="gradientStartColor" format="reference|color" />
        <attr name="gradientEndColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="fixedTabs" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaveformView">
        <attr name="progressAboveStart" format="color" />
        <attr name="progressAboveEnd" format="color" />
        <attr name="progressBelow" format="color" />
        <attr name="unplayedAbove" format="color" />
        <attr name="unplayedBelow" format="color" />
        <attr name="widthRatio" format="float" />
        <attr name="barWidth" format="dimension" />
        <attr name="spaceWidth" format="dimension" />
        <attr name="baseline" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DownloadImageView">
        <attr name="downloaded" format="integer" />
        <attr name="downloading" format="integer" />
        <attr name="unavailable" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundedColorButton">
        <attr name="backgroundColorStateList" format="reference" />
    </declare-styleable>
</resources>
