<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GoOnboarding" parent="TextAppearance.SoundCloudLightFont" />

    <style name="GoOnboarding.WelcomeBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/go_onboarding_background</item>
    </style>

    <style name="GoOnboarding.WelcomeContainer">
        <item name="android:layout_marginTop">@dimen/android_status_bar_stub_height</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GoOnboarding.Text" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxWidth">320dp</item>
    </style>

    <style name="GoOnboarding.Text.Header">
        <item name="android:textSize">@dimen/go_onboarding_header_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/android_status_bar_stub_height</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="GoOnboarding.Text.Title">
        <item name="android:textSize">@dimen/go_onboarding_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoOnboarding.Text.SubText">
        <item name="android:textSize">@dimen/go_onboarding_sub_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="GoOnboarding.Tooltip" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_marginBottom">@dimen/go_onboarding_tooltip_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/go_onboarding_tooltip_margin_top</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GoOnboarding.Button" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="GoOnboarding.PrimaryButton" parent="GoOnboarding.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
    </style>

    <style name="GoOnboarding.SecondaryButton" parent="GoOnboarding.Button">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="textColor">@color/black</item>
        <item name="loadingColor">@color/ak_sc_orange</item>
    </style>

    <!-- Go Onboarding Settings -->
    <style name="GoOnboarding.SettingsBackground">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/go_onboarding_background</item>
    </style>

    <style name="GoOnboarding.SettingsContainer">
        <item name="android:layout_marginTop">@dimen/android_status_bar_stub_height</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GoOnboarding.SettingsTooltip">
        <item name="android:layout_marginTop">@dimen/go_onboarding_settings_tooltip_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/go_onboarding_settings_tooltip_margin_bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/go_onboarding_offline_settings_icon</item>
    </style>

    <style name="GoOnboarding.SettingsTitle">
        <item name="android:textSize">@dimen/go_onboarding_settings_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GoOnboarding.SettingsSubText">
        <item name="android:textSize">@dimen/go_onboarding_settings_sub_title_text_size</item>
        <item name="android:textColor">#B2FFFFFF</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">@dimen/go_onboarding_settings_sub_title_line_spacing</item>
        <item name="android:layout_marginTop">@dimen/go_onboarding_settings_sub_title_margin_top</item>
    </style>

    <style name="GoOnboarding.SettingsContinueButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/go_onboarding_settings_button_text_size</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
