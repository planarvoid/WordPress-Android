<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SuggestedCreators" parent="TextAppearance.SoundCloudLightFont" />

    <style name="SuggestedCreators.Heading">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/suggested_creators_heading</item>
    </style>

    <style name="SuggestedCreators.Blurb">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/suggested_creators_blurb</item>
    </style>

    <style name="SuggestedCreators.Reason">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/suggested_creators_reason</item>
    </style>

    <style name="SuggestedCreators.Artist" parent="ShrinkWrap.Primary.Small" />

    <style name="SuggestedCreators.Location" parent="ShrinkWrap.Secondary.Small" />

    <style name="SuggestedCreators.Card">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SuggestedCreators.BackgroundCard" parent="SuggestedCreators.Card">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="SuggestedCreators.ForegroundCard" parent="SuggestedCreators.Card">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="SuggestedCreators.Button" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_toggle</item>
        <item name="android:drawableLeft">@drawable/ic_toggle_follow_grey</item>
        <item name="android:textColor">@drawable/toggle_txt_btn_toggle</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textOff">@string/btn_follow</item>
        <item name="android:textOn">@string/btn_following</item>
    </style>

    <style name="SuggestedCreators.FollowButton" parent="SuggestedCreators.Button" />

</resources>
