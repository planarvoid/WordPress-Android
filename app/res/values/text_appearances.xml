<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" />

    <style name="TextAppearance.ScTabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <style name="TextAppearance.ScTitlePageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextAppearance.Light.AutoCompleteTextView" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">?textColorPrimaryInverse</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.ScActionBarTitle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/abs__primary_text_holo_dark</item>
    </style>


    <style name="TextAppearance.Light.AutoCompleteTextView" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">?textColorPrimaryInverse</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ****** Adapter View Base styles ****** -->

    <style name="TextAppearance.List" />
    <style name="TextAppearance.List.Main">
        <item name="android:textColor">@drawable/txt_list_main_states</item>
        <item name="android:textSize">@dimen/list_txt_main_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.List.Main.Dark">
        <item name="android:textColor">@drawable/txt_list_main_dark_states</item>
    </style>
    <style name="TextAppearance.List.Main.Inactive">
        <item name="android:textColor">@drawable/txt_list_inactive_states</item>
    </style>
    <style name="TextAppearance.List.Secondary">
        <item name="android:textColor">@drawable/txt_list_secondary_states</item>
    </style>
    <style name="TextAppearance.List.Sub">
        <item name="android:textColor">@drawable/txt_list_main_states</item>
        <item name="android:textSize">@dimen/list_txt_sub_size</item>
    </style>
    <style name="TextAppearance.List.Sub.Secondary">
        <item name="android:textColor">@drawable/txt_list_secondary_states</item>
    </style>
    <style name="TextAppearance.List.CreatedAt" parent="TextAppearance.List.Sub">
        <item name="android:textColor">@drawable/txt_list_created_at_states</item>
    </style>

    <style name="TextAppearance.Playable" />
    <style name="TextAppearance.Playable.Username">
        <item name="android:textColor">@drawable/txt_list_track_user_states</item>
        <item name="android:textSize">@dimen/list_txt_sub_size</item>
    </style>

    <style name="TextAppearance.Playable.Reposter"  parent="@style/TextAppearance.Playable.Username">
        <item name="android:textSize">@dimen/list_txt_sub_2_size</item>
    </style>


    <!-- ****** Adapter View Components ****** -->

    <style name="TextAppearance.EmptyView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.PullToRefresh">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_txt_pull_size</item>
    </style>

    <style name="TextAppearance.PullToRefreshSub">
        <item name="android:textSize">@dimen/list_txt_sub_size</item>
    </style>

    <!-- ****** Comment Panel ****** -->

    <style name="TextAppearance.Comment">
        <item name="android:textSize">@dimen/comment_panel_main_size</item>
    </style>
    <style name="TextAppearance.Comment.User">
        <item name="android:textColor">@drawable/txt_list_secondary_states</item>
    </style>
    <style name="TextAppearance.Comment.Timestamp" parent="TextAppearance.Comment.User">
        <item name="android:textColor">#ffe36711</item>
    </style>
    <style name="TextAppearance.Comment.CreatedAt" parent="TextAppearance.Comment.User">
        <item name="android:textSize">@dimen/comment_panel_created_at_size</item>
    </style>
    <style name="TextAppearance.Comment.Body">
        <item name="android:textColor">@drawable/txt_list_main_states</item>
        <item name="android:textSize">@dimen/comment_panel_main_size</item>
    </style>

</resources>