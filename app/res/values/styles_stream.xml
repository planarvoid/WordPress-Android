<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Stream" />

    <style name="Stream.Card.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@color/page_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Stream.Card">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Stream.Card.Header">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="Stream.Card.Footer" />

    <style name="Stream.Image" parent="GridItemImageView"/>

    <style name="Stream.Image.Track" parent="Stream.Image">
        <item name="ariv_aspectRatio">.50</item>
    </style>

    <style name="Stream.Image.Playlist" parent="Stream.Image">
        <item name="ariv_aspectRatio">.83</item>
    </style>

    <style name="Stream.ArtistText" parent="BlackOverlayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/overlay_subtext</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="Stream.TitleText" parent="BlackOverlayText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Stream.PlaylistTracks">
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:antialias">true</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Stream.PlaylistTracks.Count">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Stream.PlaylistTracks.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Stream.PrimaryHeaderText" parent="ListItemText.PrimaryText">
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="Stream.SecondaryHeaderText" parent="ListItemText.SecondaryText">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="Stream.SecondaryHeaderText.Separator">
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="Stream.StatsItem" parent="ListItemText">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="Stream.ToggleButton" parent="ListItemText">
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/toggle_button_text_states</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="Stream.NowPlaying" parent="Stream.StatsItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

</resources>
