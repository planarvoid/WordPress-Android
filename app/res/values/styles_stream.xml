<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Stream" />

    <style name="Stream.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:minHeight">@dimen/stream_header_min_height</item>
    </style>

    <style name="Stream.Image.Track" parent="Cards.Image">
        <item name="ariv_aspectRatio">.50</item>
    </style>

    <style name="Stream.NowPlaying" parent="Cards.StatsItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

</resources>
