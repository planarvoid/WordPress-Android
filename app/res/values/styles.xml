<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Divider">
        <item name="android:background">#1e000000</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_vertical_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_horizontal_height</item>
    </style>

    <!-- shared widget styles -->

    <style name="DropDownListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/list_selector_dark</item>
    </style>

    <style name="DropDownNav" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

     <style name="Spinner" parent="android:Widget.Spinner">
         <item name="android:background">@drawable/spinner_background_holo_light</item>
         <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
     </style>

     <style name="SpinnerDropDownItem" parent="android:Widget.DropDownItem.Spinner">
         <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
     </style>

    <style name="RadioButton.Dark" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BlackOverlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:antialias">true</item>

        <item name="jagged_background">@color/overlay_text_background</item>
        <item name="android:background">@color/overlay_text_background</item>
        <item name="custom_font">fonts/Interstate-Light.ttf</item>
    </style>

    <style name="BlackOverlayText.Regular">
        <item name="android:textSize">18sp</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="BlackOverlayText.RegularSubtext">
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/overlay_subtext</item>
    </style>
    <style name="BlackOverlayText.RegularSubtext.Clickable">
        <item name="android:textColor">@color/clickable_overlay_text</item>
        <item name="jagged_background">@color/clickable_overlay_background</item>
    </style>

    <style name="btn_default" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@drawable/txt_btn_light_states</item>
        <item name="android:shadowColor">#4DFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- misc -->

    <style name="stat_pipe">
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:background">@drawable/stat_divider</item>
    </style>

    <style name="txt_share_header">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/share_user_header_text_size</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>
    <style name="txt_share_header_username" parent="txt_share_header">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_share_header_title" parent="txt_share_header">
        <item name="android:shadowColor">#ff777777</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="btn_sc_comment_reply">
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="btn_sc_menu">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
    </style>

    <style name="btn_sc_track">
        <!--    <item name="android:background">@drawable/btn_sc_track_states</item>-->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:layout_height">52dip</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:layout_marginLeft">1dip</item>
        <item name="android:layout_marginRight">1dip</item>
    </style>

    <style name="dark_button_bar">
        <item name="android:layout_height">@dimen/button_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dark_bg</item>
    </style>

    <style name="txt_main_menu" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="txt_details_table_label" parent="android:Widget.TextView">
        <item name="android:padding">3dip</item>
    </style>
    <style name="txt_refresh_bar" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_details_table_value" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="txt_details_table_value_desc" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScProgressBarRound">
        <item name="android:background">@drawable/progress_bar_round_bg</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:progressDrawable">@drawable/progress_bar_round</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
    </style>
    <style name="ScProgressBarRoundLeft" parent="ScProgressBarRound">
        <item name="android:progressDrawable">@drawable/progress_bar_round_left</item>
        <item name="android:background">@drawable/progress_bar_round_bg_left</item>
    </style>
    <style name="ScProgressBarRoundRight" parent="ScProgressBarRound">
        <item name="android:progressDrawable">@drawable/progress_bar_round_right</item>
        <item name="android:background">@drawable/progress_bar_round_bg_right</item>
    </style>

    <style name="ScSeekBarRound" parent="ScProgressBarRound">
        <item name="android:thumb">@drawable/empty</item>
    </style>

    <style name="ScProgressBar">
        <item name="android:background">@drawable/progress_bar_bg</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">60dip</item>
        <item name="android:minWidth">250dip</item>
        <item name="android:maxWidth">5000dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
    </style>

    <style name="ScProgressBarLand" parent="ScProgressBar">
        <item name="android:background">@drawable/progress_bar_land_bg</item>
        <item name="android:drawable">@drawable/progress_bar_land</item>
    </style>

    <style name="ZoomControls">
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@drawable/txt_gray_states</item>
    </style>

    <style name="UnderlinedListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/sc_orange</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/divider_list_orange</item>
    </style>

    <style name="ItemSelector">
        <item name="android:background">@drawable/list_selector_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Tablet layouts -->

    <style name="MarginLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/margin_left_bg</item>
    </style>

    <style name="MarginRight" parent="MarginLeft">
        <item name="android:background">@drawable/margin_right_bg</item>
    </style>

    <style name="MarginedContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="TabBarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/tab_bar_divider</item>
    </style>

    <!-- Misc -->

    <style name="CustomToggle">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

</resources>
