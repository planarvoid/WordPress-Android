<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@drawable/divider_list_grey</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/list_selector_gray</item>
    </style>

    <style name="GridView" parent="@android:style/Widget.GridView">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">@dimen/gridview_padding_left_right</item>
        <item name="android:paddingRight">@dimen/gridview_padding_left_right</item>
        <item name="android:paddingTop">@dimen/gridview_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/gridview_padding_top_bottom</item>
        <item name="android:horizontalSpacing">@dimen/grid_view_spacing_inside_horizontal</item>
        <item name="android:verticalSpacing">@dimen/grid_view_spacing_inside_vertical</item>
        <item name="android:listSelector">@drawable/grid_view_item_selector</item>
        <item name="android:numColumns">@integer/grid_view_num_columns</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="Animation.Popup">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="DropDownListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/list_selector_dark</item>
    </style>

    <style name="DropDownNav" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
         <item name="android:button">@drawable/btn_check_holo_light</item>
     </style>

     <style name="Spinner" parent="android:Widget.Spinner">
         <item name="android:background">@drawable/spinner_background_holo_light</item>
         <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
     </style>

     <style name="SpinnerDropDownItem" parent="android:Widget.DropDownItem.Spinner">
         <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
     </style>

    <style name="CheckBox.Dark" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>

    <style name="RadioButton.Dark" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_dark</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BlackOverlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:antialias">true</item>

        <item name="jagged_background">@color/overlay_text_background</item>
        <item name="android:background">@color/overlay_text_background</item>
        <item name="custom_font">fonts/Interstate-Light.ttf</item>
    </style>

    <style name="BlackOverlayText.Regular">
        <item name="android:textSize">18sp</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="BlackOverlayText.RegularSubtext">
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/overlay_subtext</item>
    </style>
    <style name="BlackOverlayText.RegularSubtext.Clickable">
        <item name="android:textColor">@color/clickable_overlay_text</item>
        <item name="jagged_background">@color/clickable_overlay_background</item>
    </style>

    <!-- Standard animations for a non-full-screen window or activity. -->
    <style name="Animation"/>
    <style name="Animation.AddCommentDialog">
        <item name="android:windowEnterAnimation">@anim/add_comment_enter</item>
        <item name="android:windowExitAnimation">@anim/add_comment_exit</item>
    </style>

    <style name="btn_default" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@drawable/txt_btn_light_states</item>
        <item name="android:shadowColor">#4DFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="stat_pipe">
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:background">@drawable/stat_divider</item>
    </style>

    <style name="txt_share_header">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/share_user_header_text_size</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>
    <style name="txt_share_header_username" parent="txt_share_header">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_share_header_title" parent="txt_share_header">
        <item name="android:shadowColor">#ff777777</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="txt_search" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/slm_item_text_size</item>
        <item name="android:paddingTop">@dimen/slm_search_item_text_padding</item>
        <item name="android:paddingBottom">@dimen/slm_search_item_text_padding</item>
        <item name="android:paddingLeft">@dimen/slm_search_item_text_padding</item>
        <item name="android:paddingRight">@dimen/slm_search_item_text_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="txt_search_menu" parent="txt_search">
        <item name="android:background">@drawable/txt_menu_search_bg_states</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">@drawable/txt_menu_search_states</item>
    </style>

    <style name="btn_sc_widget">
        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="btn_sc_widget_transport" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="btn_sc_widget_like" parent="btn_sc_widget">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="btn_sc_comment_reply">
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="btn_sc_menu">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
    </style>

    <style name="btn_sc_track">
        <!--    <item name="android:background">@drawable/btn_sc_track_states</item>-->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:layout_height">52dip</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:layout_marginLeft">1dip</item>
        <item name="android:layout_marginRight">1dip</item>
    </style>

    <style name="dark_button_bar">
        <item name="android:layout_height">@dimen/button_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dark_bg</item>
    </style>

    <style name="txt_main_menu" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="txt_details_table_label" parent="android:Widget.TextView">
        <item name="android:padding">3dip</item>
    </style>
    <style name="txt_refresh_bar" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_details_table_value" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="txt_details_table_value_desc" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScProgressBarRound">
        <item name="android:background">@drawable/progress_bar_round_bg</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:progressDrawable">@drawable/progress_bar_round</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
    </style>
    <style name="ScProgressBarRoundLeft" parent="ScProgressBarRound">
        <item name="android:progressDrawable">@drawable/progress_bar_round_left</item>
        <item name="android:background">@drawable/progress_bar_round_bg_left</item>
    </style>
    <style name="ScProgressBarRoundRight" parent="ScProgressBarRound">
        <item name="android:progressDrawable">@drawable/progress_bar_round_right</item>
        <item name="android:background">@drawable/progress_bar_round_bg_right</item>
    </style>

    <style name="ScSeekBarRound" parent="ScProgressBarRound">
        <item name="android:thumb">@drawable/empty</item>
    </style>

    <style name="ScProgressBar">
        <item name="android:background">@drawable/progress_bar_bg</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">60dip</item>
        <item name="android:minWidth">250dip</item>
        <item name="android:maxWidth">5000dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
    </style>

    <style name="ScProgressBarLand" parent="ScProgressBar">
        <item name="android:background">@drawable/progress_bar_land_bg</item>
        <item name="android:drawable">@drawable/progress_bar_land</item>
    </style>

    <style name="ListItemContainer">
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:paddingTop">@dimen/list_item_padding_top</item>
        <item name="android:paddingRight">@dimen/list_item_padding_right</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_bottom</item>
    </style>

    <!-- Playable (tracks/playlists) styles -->

    <style name="PlayableIcon">
        <item name="android:layout_width">@dimen/list_icon_width</item>
        <item name="android:layout_height">@dimen/list_icon_height</item>
        <item name="android:layout_marginRight">@dimen/list_icon_margin_right</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription"/>  <!-- TODO Need a string for this? -->
    </style>

    <style name="PlayableIcon.Playlist">
        <item name="android:layout_width">@dimen/playlist_page_icon_size</item>
        <item name="android:layout_height">@dimen/playlist_page_icon_size</item>
    </style>


    <!-- END Playable styles -->

    <style name="Playlist">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">60dip</item>
    </style>

    <style name="PlayerActionContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@color/player_control_background</item>
    </style>

    <style name="PlaylistActionContainer" parent="PlayerActionContainer">
        <item name="android:background">@null</item>
    </style>

    <style name="ZoomControls">
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@drawable/txt_gray_states</item>
    </style>

    <style name="ErrorMessage.EmptyCollection">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">@dimen/empty_message_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/empty_message_margin_left_right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Image">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Main">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Main.Error">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Sub">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="ErrorMessage.EmptyCollection.Sub.Error">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Link">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="EmptyCollectionButton">
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="FullImageDialogImageView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/full_image_margin</item>
    </style>

    <style name="UnderlinedListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/sc_orange</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/divider_list_orange</item>
    </style>

    <style name="ItemSelector">
        <item name="android:background">@drawable/list_selector_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="GridItemImageViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="dominantMeasurement">width</item>
        <item name="aspectRatio">.55</item>
        <item name="aspectRatioEnabled">true</item>
    </style>
    <style name="GridItemImageView" parent="GridItemImageViewBase">
        <item name="movement">-15dp</item>
    </style>
    <style name="GridItemTextHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="emptyCollectionErrorContentHolder" parent="emptyCollectionContentHolderBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="GridItemBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.GridItemBottom</item>
    </style>

    <style name="GridItemTag" parent="GridItemBottom">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="GridItemExtra" parent="GridItemBottom">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EmptyViewImage">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Tablet layouts -->

    <style name="MarginLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/margin_left_bg</item>
    </style>

    <style name="MarginRight" parent="MarginLeft">
        <item name="android:background">@drawable/margin_right_bg</item>
    </style>

    <style name="MarginedContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="TabBarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/tab_bar_divider</item>
    </style>


    <style name="CustomToggle">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

</resources>
