<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Divider">
        <item name="android:background">#1e000000</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/ak_list_divider_vertical_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ak_list_divider_horizontal_height</item>
    </style>

    <!-- shared widget styles -->

    <style name="DropDownListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/list_selector_dark</item>
    </style>

    <style name="DropDownNav" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

    <style name="RadioButton.Dark" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BlackOverlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:antialias">true</item>

        <item name="jagged_background">@color/overlay_text_background</item>
        <item name="android:background">@color/overlay_text_background</item>
    </style>

    <style name="BlackOverlayText.Regular">
        <item name="android:textSize">18sp</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="BlackOverlayText.RegularSubtext">
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/overlay_subtext</item>
    </style>
    <style name="BlackOverlayText.RegularSubtext.Clickable">
        <item name="android:textColor">@color/clickable_overlay_text</item>
        <item name="jagged_background">@color/clickable_overlay_background</item>
    </style>

    <style name="btn_default" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/ak_btn_default</item>
        <item name="android:textColor">@drawable/txt_btn_light_states</item>
        <item name="android:shadowColor">#4DFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- misc -->

    <style name="UnderlinedListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/divider_list_orange</item>
    </style>

    <style name="ItemSelector">
        <item name="android:background">@drawable/list_selector_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Tablet layouts -->

    <style name="MarginLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/margin_left_bg</item>
    </style>

    <style name="MarginRight" parent="MarginLeft">
        <item name="android:background">@drawable/margin_right_bg</item>
    </style>

    <style name="MarginedContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="TabBarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/tab_bar_divider</item>
    </style>

    <!-- Misc -->

    <style name="CustomToggle">
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="ToolbarShadow">
        <item name="android:background">@drawable/toolbar_shadow</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_below">@id/toolbar_id</item>
    </style>

    <style name="DropShadow">
        <item name="android:background">@drawable/drop_shadow</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_below">@id/toolbar_id</item>
    </style>

    <style name="TrackLikesHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/likes_header_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/default_list_item_padding</item>
        <item name="android:paddingRight">@dimen/likes_header_padding_right</item>
        <item name="android:paddingTop">@dimen/likes_header_padding_top</item>
    </style>

    <!-- List item Notifications -->

    <style name="ListItemNotificationLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemNotificationButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColorStateList">@color/clickable_orange_background</item>
    </style>

    <style name="ListItemNotificationCloseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_close_grey600_18dp</item>
    </style>

    <style name="ListItemNotificationCenteredText" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ListItemNotificationTitle" parent="ListItemNotificationCenteredText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ListItemNotificationDescription" parent="ListItemNotificationCenteredText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dialog_subtext</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Facebook Invites List Item Notifications -->

    <style name="FacebookInvitesFriends">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FacebookInvitesFriendImage">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="border_color">@color/white</item>
        <item name="border_width">2dp</item>
    </style>

    <style name="FacebookInvitesFriendImageOverlap" parent="FacebookInvitesFriendImage">
        <item name="android:layout_marginLeft">-16dp</item>
    </style>

</resources>
