<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchSuggestionItem">
        <item name="android:background">@drawable/list_selector_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_list_item_padding</item>
        <item name="android:paddingRight">@dimen/slm_item_padding_right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/search_item_padding_topbottom</item>
        <item name="android:paddingBottom">@dimen/search_item_padding_topbottom</item>
    </style>

    <style name="SearchSuggestionIcon">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SearchSuggestionText">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="SearchSuggestionIcon.Type">
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>