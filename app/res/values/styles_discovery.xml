<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Search feature -->
    <style name="Search" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Search.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/search_query_text</item>
        <item name="android:textColorHint">@color/search_hint_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Search.TextView.Input">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Search.TextView.Link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SearchIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/search_link_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/search_link_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/search_link_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/search_link_padding_vertical</item>
    </style>

    <style name="Search.Suggestion" />

    <style name="Search.Suggestion.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_list_item_padding</item>
        <item name="android:paddingRight">@dimen/default_list_item_padding</item>
    </style>

    <style name="Search.Suggestion.AutocompleteIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Search.Suggestion.Icon">
        <item name="android:layout_height">@dimen/search_suggestion_icon_dimension</item>
        <item name="android:layout_width">@dimen/search_suggestion_icon_dimension</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Search.Suggestion.Icon.Type">
        <item name="android:layout_height">@dimen/search_suggestion_type_dimension</item>
        <item name="android:layout_width">@dimen/search_suggestion_type_dimension</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Search.Suggestion.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/search_suggestion_text</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/search_suggestion_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Search.PremiumContent" />

    <style name="Search.PremiumContent.Text">
        <item name="custom_font">@string/interstate_light</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Search.PremiumContent.Text.ViewAll">
        <item name="custom_font">@string/interstate_regular</item>
        <item name="android:textColor">@color/discovery_search_premium_view_all</item>
    </style>

    <style name="Search.PremiumContent.Text.Upsell">
        <item name="custom_font">@string/interstate_regular</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
    </style>

    <!-- Carousel feature -->
    <style name="Carousel" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Carousel.Bucket">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Carousel.ReasonText">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Carousel.DiscoverNewTracks">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/recommended_for_you_text</item>
    </style>

    <style name="Carousel.RecommendationItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginRight">@dimen/recommendation_item_right_margin</item>
    </style>

    <style name="Carousel.Artwork">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Carousel.ItemTitle">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textColor">@color/recommendation_card_track_title</item>
    </style>

    <style name="Carousel.ItemArtist">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/recommendation_card_artist_name</item>
    </style>

    <style name="Carousel.ItemNowPlaying">
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
    </style>

    <style name="Carousel.OverflowButton">
        <item name="android:background">@drawable/btn_list_overflow</item>
    </style>

    <style name="Carousel.FooterItem">
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">48dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999</item>
        <item name="android:background">#f2f2f2</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TODO Replace Recommendations styles with these styles -->
    <!-- Modules -->
    <style name="Module" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Module.Background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Module.Header" parent="Carousel.DiscoverNewTracks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/recommendations_cell_text_recommended_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/recommendations_cell_text_recommended_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/discovery_cell_text_padding</item>
        <item name="android:paddingRight">@dimen/discovery_cell_text_padding</item>
        <item name="android:paddingTop">@dimen/recommendations_cell_text_recommended_padding_top</item>
    </style>

    <!-- Charts -->
    <style name="Chart" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Chart.TextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/discovery_cell_text_height</item>
        <item name="android:textSize">@dimen/chart_header_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/discovery_cell_text_padding</item>
        <item name="android:paddingRight">@dimen/discovery_cell_text_padding</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
