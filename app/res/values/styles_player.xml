<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PlayerStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/ak_sc_orange</item>
    </style>

    <style name="FooterToggle" parent="CustomToggle">
        <item name="android:layout_width">@dimen/player_footer_control</item>
        <item name="android:layout_height">@dimen/player_footer_control</item>
        <item name="android:background">@drawable/btn_footer_play_toggle</item>
    </style>

    <style name="PlayerPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_player_play</item>
    </style>

    <style name="PlayerSkip">
        <item name="android:layout_width">@dimen/player_skip</item>
        <item name="android:layout_height">@dimen/player_skip</item>
        <item name="android:layout_margin">@dimen/player_skip_margin</item>
    </style>

    <style name="PlayerSkip.Next">
        <item name="android:background">@drawable/btn_player_next</item>
    </style>

    <style name="PlayerSkip.Previous">
        <item name="android:background">@drawable/btn_player_previous</item>
    </style>

    <style name="FooterUser" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@color/player_user_text</item>
    </style>

    <style name="FooterTitle" parent="FooterUser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlayerUser" parent="ShrinkWrap.Secondary.Medium">
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="PlayerTitle" parent="ShrinkWrap.Primary.Medium" />

    <style name="PlayerContext" parent="ShrinkWrap.Secondary.Medium">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <style name="PlayerCastDeviceName" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/player_cast_device_name</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerLikeBase" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="PlayerLikeBase.PlayerLike">
        <item name="android:background">@drawable/btn_player_like</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="PlayerMediaRouteButton" parent="Widget.MediaRouter.MediaRouteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerMore">
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:background">@drawable/btn_player_more</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="PlayerCloseBase">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/btn_player_close</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerCloseBase.PlayerClose" />

    <style name="PlayerShare">
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:src">@drawable/btn_player_share</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerShareTextBase" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="PlayerShareTextBase.PlayerShareText">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerQueue">
        <item name="android:src">@drawable/ic_queue</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="PlayerPlayQueueButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerPlayQueueButton.Shuffle">
        <item name="android:drawableTop">@drawable/btn_player_shuffle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="PlayerPlayQueueButton.Repeat">
        <item name="android:src">@drawable/ic_repeat_off</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="Waveform">
        <item name="barWidth">@dimen/waveform_bar_width</item>
        <item name="spaceWidth">@dimen/waveform_space_width</item>
        <item name="baseline">@dimen/waveform_baseline</item>
        <item name="widthRatio">@dimen/waveform_width_ratio</item>
        <item name="progressAboveStart">@color/wave_progress_start</item>
        <item name="progressAboveEnd">@color/wave_progress_end</item>
        <item name="progressBelow">@color/wave_progress_below</item>
        <item name="unplayedAbove">@color/wave_above</item>
        <item name="unplayedBelow">@color/wave_below</item>
    </style>

    <style name="PlayerTrackArtworkHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="sfl_dominantMeasurement">height</item>
    </style>

    <style name="PlayerTrackArtwork">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PlayerAdArtwork">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PlayerIABAdArtwork">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PlayerTrackArtworkOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/artwork_overlay</item>
    </style>

    <style name="TimestampDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/timestamp_secondary</item>
    </style>

    <style name="TimestampText" parent="TextAppearance.SoundCloudLightNumberFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">12dp
        </item> <!-- This text cannot be scaled due to fixed timestamp height -->
        <item name="android:textColor">@color/timestamp_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TimestampText.Duration">
        <item name="android:textColor">@color/timestamp_secondary</item>
    </style>

    <style name="PlayerUpsellContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@drawable/go_gradient</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerUpsell" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerUpsell.Button">
        <item name="android:background">@drawable/btn_primary_transparent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

</resources>
