<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txt_record_input">
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="txt_record_add_image">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_record_share_options">
        <item name="android:textColor">#ff9e9e9e</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="txt_record_connections" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_record_email_access">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="txt_record_email_access_gray" parent="txt_record_email_access">
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="txt_record_connections_footer">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="txt_connection_footer">
        <item name="android:textColor">@color/list_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_not_streamable">
        <item name="android:textColor">@color/list_text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_search_rdo">
        <item name="android:textColor">@color/list_text_value</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_record_artwork_hint">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="txt_private_message_metadata_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt_private_message_metadata_message">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_upload_monitor_events">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="txt_upload_monitor_events_inactive" parent="txt_upload_monitor_events">
        <item name="android:textColor">#ff9e9e9e</item>
    </style>


    <style name="txt_record_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecordOrangeButtonBase">
        <item name="android:background">@drawable/rec_button_states</item>
    </style>

    <style name="RecordOrangeButton" parent="RecordOrangeButtonBase" />

    <style name="RecordButton" parent="RecordOrangeButton">
        <item name="android:layout_width">@dimen/rec_record_button_dimension</item>
        <item name="android:layout_height">@dimen/rec_record_button_dimension</item>
        <item name="android:src">@drawable/ic_record_record_white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="UploadButton" parent="RecordOrangeButton">
        <item name="android:layout_width">@dimen/rec_upload_button_dimension</item>
        <item name="android:layout_height">@dimen/rec_upload_button_dimension</item>
        <item name="android:src">@drawable/ic_record_upload_white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="RecordUploadProgressBar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">@dimen/rec_upload_progress_dimension</item>
        <item name="android:layout_width">@dimen/rec_upload_progress_dimension</item>
    </style>

    <style name="RecordDarkButtonBase" parent="android:Widget.Holo.Button.Borderless" />

    <style name="RecordDarkButton" parent="RecordDarkButtonBase">
        <item name="android:layout_width">@dimen/rec_action_button_dimension</item>
        <item name="android:layout_height">@dimen/rec_action_button_dimension</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="RecordPlayButton" parent="RecordDarkButton">
        <item name="android:src">@drawable/ic_record_play</item>
    </style>

    <style name="RecordEditButton" parent="RecordDarkButton">
        <item name="android:src">@drawable/ic_record_edit</item>
    </style>

    <style name="RecordTextDark">
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="RecordInstructions" parent="RecordTextDark">
        <item name="android:textSize">44sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="RecordTextChrono" parent="RecordTextDark">
        <item name="android:textSize">@dimen/rec_chronometer_text_size</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="RecordFadeSwitch">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/fade_toggle_on</item>
        <item name="switchPadding">16dip</item>
    </style>

    <style name="RecordMessage">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="MetadataContainer">
        <item name="android:background">@color/white</item>
    </style>

</resources>