<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Stations" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Stations.Home">
        <item name="android:background">@color/stations_home_background</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="Stations.Bucket">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="Stations.BucketTitle">
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Stations.BucketAction">
        <item name="android:background">@color/stations_bucket_action_background</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:textColor">@color/stations_bucket_action_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Stations.Item">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Stations.ItemArtwork">
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Stations.ItemTitle" parent="ListItemText.PrimaryText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Stations.ItemType" parent="ListItemText.SecondaryText">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Stations.ItemNowPlaying" parent="Stations.ItemType">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_now_playing</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
    </style>

    <style name="Stations.ListItemOverflowButton" parent="ListItemOverflowButton">
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginRight">-6dp</item>
    </style>

    <style name="Stations.ListContainer">
        <item name="android:background">@color/stations_home_background</item>
    </style>

    <style name="Stations.List">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="Recommendation.StationsBucketTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/discovery_tags_title</item>
    </style>

    <style name="Recommendation.StationsTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/discovery_tags_title</item>
    </style>

    <style name="Recommendation.StationsType">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/recommendation_reason_text</item>
    </style>

    <style name="StationInfo" />

    <style name="StationInfo.HeaderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/stations_blur_overlay</item>
        <item name="android:paddingTop">32dp</item>
    </style>

    <style name="StationInfo.Title" parent="TextAppearance.ScAppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minTextSize">16sp</item>
        <item name="resizeStep">4sp</item>
    </style>

    <style name="StationInfo.Description" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="StationInfo.ViewAllText" parent="TextAppearance.SoundCloudRegularFont">
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ak_dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawableRight">@drawable/inset_chevron</item>
        <item name="android:drawablePadding">@dimen/view_all_chevron_padding</item>
    </style>

    <style name="StationInfo.StationTracksCarousel">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="StationInfo.StationContext" parent="ShrinkWrap.Secondary.Small">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableLeft">@drawable/ic_station</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StationInfo.TrackHeader">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/collections_recently_played_header</item>
        <item name="android:paddingLeft">@dimen/collection_default_margin</item>
        <item name="android:paddingRight">@dimen/collection_default_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="StationInfo.PlayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_header_play</item>
    </style>

</resources>
