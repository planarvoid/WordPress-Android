<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GoOffboarding" parent="TextAppearance.SoundCloudLightFont" />

    <style name="GoOffboarding.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/go_onboarding_background</item>
    </style>

    <style name="GoOffboarding.Container">
        <item name="android:layout_marginTop">@dimen/go_onboarding_container_top_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="GoOffboarding.Cloud">
        <item name="android:layout_marginBottom">@dimen/go_onboarding_tooltip_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/go_onboarding_tooltip_margin_top</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:src">@drawable/conversion_cloud</item>
    </style>

    <style name="GoOffboarding.Text" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxWidth">320dp</item>
    </style>

    <style name="GoOffboarding.Text.Headline">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoOffboarding.Text.SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="GoOffboarding.Button" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="GoOffboarding.Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
    </style>

    <style name="GoOffboarding.Button.Secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="textColor">@color/black</item>
        <item name="loadingColor">@color/ak_sc_orange</item>
    </style>

</resources>
