<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GoOffboarding" parent="TextAppearance.SoundCloudLightFont" />

    <style name="GoOffboarding.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="GoOffboarding.Container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="GoOffboarding.Cloud">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/conversion_cloud</item>
    </style>

    <style name="GoOffboarding.Divider">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="GoOffboarding.Text" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoOffboarding.Text.Headline">
        <!-- No space for headline on small screens in landscape -->
        <item name="android:visibility">gone</item>
    </style>

    <style name="GoOffboarding.Text.SubText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="GoOffboarding.Button" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="textSize">@dimen/loading_button_text</item>
    </style>

    <style name="GoOffboarding.Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
    </style>

    <style name="GoOffboarding.Button.Secondary">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
    </style>

</resources>
