<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Playlist Discovery -->
    <style name="PlaylistDiscovery" parent="TextAppearance.SoundCloudLightFont"/>

    <style name="PlaylistDiscovery.Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_tag</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/tag_text</item>
    </style>

    <style name="PlaylistDiscovery.Tag.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="PlaylistDiscovery.TagCloudTitle" parent="UnderlinedListTitle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PlaylistDiscovery.TagTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/discovery_tags_title</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="PlaylistDiscovery.TagSubtitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tag_section_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="PlaylistDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/playlist_divider</item>
    </style>

    <!-- Playlist Page -->
    <style name="PlaylistTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.SoundCloudLightFont</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistTitle.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/list_text_header</item>
    </style>

    <style name="PlaylistPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_header_play</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Playlist">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">60dip</item>
    </style>

    <style name="LegacyPlaylistActionContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="NewPlaylistActionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="PlaylistInfo" parent="ListItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">@dimen/list_item_padding_right</item>
    </style>

    <style name="PlaylistInfo.Light">
        <item name="android:textColor">@color/white</item>
    </style>
    
</resources>
