<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Playlist Discovery -->
    <style name="PlaylistDiscovery" parent="TextAppearance.SoundCloudLightFont"/>

    <style name="PlaylistDiscovery.Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_tag</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/tag_text</item>
    </style>

    <style name="PlaylistDiscovery.Tag.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="PlaylistDiscovery.TagCloudTitle" parent="UnderlinedListTitle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PlaylistDiscovery.TagTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/discovery_tags_title</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="PlaylistDiscovery.TagSubtitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tag_section_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="PlaylistDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/playlist_divider</item>
    </style>

    <!-- Playlist Page -->
    <style name="PlaylistTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.SoundCloudLightFont</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistTitle.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/list_text_header</item>
    </style>

    <style name="PlaylistPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_header_play</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Playlist">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">60dip</item>
    </style>

    <style name="LegacyPlaylistActionContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="NewPlaylistActionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="PlaylistInfo" parent="ListItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">@dimen/list_item_padding_right</item>
    </style>

    <style name="PlaylistInfo.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaylistAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
    </style>

    <style name="PlaylistAction.ToggleButton" parent="ListItemText">
        <item name="android:layout_gravity">left|center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/toggle_button_text_states</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PlaylistAction.Button">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PlaylistAction.Overflow">
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PlaylistAction.ToggleButton.Like">
        <item name="android:drawableLeft">@drawable/ic_toggle_player_like_states</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="PlaylistAction.ToggleButton.DownloadBase">
        <item name="android:width">48dp</item>
        <item name="itb_icon">@drawable/ic_toggle_download</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="PlaylistAction.ToggleButton.DownloadBase.Download" />

    <style name="PlaylistAction.ToggleButton.Repost">
        <item name="android:drawableLeft">@drawable/ic_toggle_player_repost_states</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="PlaylistAction.Button.Share">
        <item name="android:src">@drawable/ic_btn_share</item>
    </style>

</resources>
