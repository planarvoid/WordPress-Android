<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Playlist Discovery -->

    <style name="Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_tag</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/tag_text</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="Tag.Small" parent="Tag">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="TagCloudTitle" parent="UnderlinedListTitle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TagHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="PlaylistDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/playlist_divider</item>
    </style>

    <!-- Playlist Page -->

    <style name="PlaylistTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistTitle.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/list_text_header</item>
    </style>

    <style name="PlaylistPlayToggle" parent="CustomToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_header_play_toggle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Playlist">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">60dip</item>
    </style>

    <style name="LegacyPlaylistActionContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="NewPlaylistActionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="PlaylistInfo" parent="ListItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">@dimen/list_item_padding_right</item>
    </style>

    <style name="PlaylistAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_min_height</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
    </style>

    <style name="PlaylistAction.ToggleButton">
        <item name="android:layout_gravity">left|center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/btn_default_states</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="PlaylistAction.Button">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/btn_default_states</item>
    </style>

    <style name="PlaylistAction.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/btn_engagements_overflow</item>
    </style>

    <style name="PlaylistAction.ToggleButton.Like">
        <item name="android:drawableLeft">@drawable/ic_toggle_player_like_states</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="PlaylistAction.ToggleButton.Repost">
        <item name="android:drawableLeft">@drawable/ic_toggle_player_repost_states</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="PlaylistAction.Button.Share">
        <item name="android:src">@drawable/ic_btn_share</item>
        <item name="android:background">@drawable/btn_default_states</item>
    </style>

</resources>