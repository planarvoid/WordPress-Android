<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Playlist Discovery -->

    <style name="Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_tag</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/tag_text</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="Tag.Small" parent="Tag">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="TagCloudTitle" parent="UnderlinedListTitle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TagHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="PlaylistDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/playlist_divider</item>
    </style>

    <style name="PlaylistTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistTitle.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/list_text_header</item>
    </style>

    <style name="PlaylistPlayToggle" parent="CustomToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_header_play_toggle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Playlist">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">60dip</item>
    </style>

    <style name="PlaylistActionContainer" parent="PlayerActionContainer">
        <item name="android:background">@null</item>
    </style>

</resources>