<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UserBrowser"/>
    <style name="UserBrowser.ToggleButton" parent="PlayerAction">
        <item name="android:minHeight">@dimen/follow_btn_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:background">@drawable/btn_default_states</item>
        <item name="android:textColor">@drawable/toggle_txt_user_follow_states</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="UserBrowser.ToggleButton.Follow">
        <item name="android:id">@id/toggle_btn_follow</item>
        <item name="android:textOn">@string/btn_following</item>
        <item name="android:textOff">@string/btn_follow</item>
    </style>

    <style name="UserBrowser.ToggleButton.Follow.Large">
        <item name="android:textSize">@dimen/tablet_followers_text</item>
    </style>

</resources>