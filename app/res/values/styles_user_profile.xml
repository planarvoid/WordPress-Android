<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Profile" />

    <style name="Profile.ToggleButton">
        <item name="android:minHeight">@dimen/follow_btn_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_default_states</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Profile.ToggleButton.Follow">
        <item name="android:paddingLeft">@null</item>
        <item name="android:paddingRight">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_follow</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="Profile.ToggleButton.Follow.List">
        <item name="android:background">@drawable/btn_follow_list_item</item>
    </style>

    <style name="Profile.ToggleButton.Follow.Large">
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">@dimen/follow_btn_text</item>
        <item name="android:textColor">@drawable/toggle_txt_user_follow_states</item>
        <item name="android:textOn">@string/btn_following</item>
        <item name="android:textOff">@string/btn_follow</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Profile.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/list_secondary</item>
    </style>

    <style name="Profile.Text.Primary">
        <item name="android:textColor">@color/list_primary</item>
    </style>

    <style name="Profile.Text.Followers">
        <item name="android:drawableLeft">@drawable/stats_followers</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="Profile.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textColorLink">@color/ak_link_text</item>
    </style>

    <style name="Profile.Info.Link">
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@drawable/txt_blue_states</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- NEW PROFILE -->

    <style name="ProfileHeaderContainerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">?android:attr/actionBarSize</item>
    </style>

    <style name="Profile.HeaderContainer" parent="ProfileHeaderContainerBase" />

    <style name="HeaderInfoLayoutBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@android:color/white</item>
        <!--<item name="android:layout_marginTop">@dimen/toolbar_height</item>-->
    </style>

    <style name="Profile.HeaderInfoLayout" parent="HeaderInfoLayoutBase" />

    <style name="TabsBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Profile.Tabs" parent="TabsBase" />

    <style name="Profile.HeaderImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Profile.Username">
        <item name="android:textAppearance">@style/TextAppearance.Profile.Username</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Profile" />

    <style name="TextAppearance.Profile.Username">
        <item name="android:textSize">32sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary</item>
    </style>


    <style name="ToolbarUsernameBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignTop">@id/toolbar_id</item>
        <item name="android:layout_alignBottom">@id/toolbar_id</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">@dimen/toolbar_title_left_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

    <style name="Profile.Toolbar" />

    <style name="Profile.Toolbar.Username" parent="ToolbarUsernameBase" />

    <style name="Profile.Stats" parent="ListItemText.Numeric">
        <item name="android:layout_marginTop">6dp</item>
    </style>

</resources>