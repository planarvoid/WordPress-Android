<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.ScDialog" parent="android:Theme.Holo.Dialog"/>
    <style name="Theme.ScDialog.Light" parent="android:Theme.Holo.Light.Dialog"/>

    <style name="Theme.FramelessDialog" parent="Theme.ScDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AddCommentDialog" parent="Theme.FramelessDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowAnimationStyle">@style/Animation.AddCommentDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>

    <style name="Theme.FullImageDialog" parent="Theme.FramelessDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.TrackInfoDialog" parent="Theme.ScDialog.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Popup</item>
    </style>

    <style name="DialogContentText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dialog_content_text_size</item>
        <item name="android:textColor">@drawable/list_item_text_color</item>
    </style>

    <style name="DialogSubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dialog_subtext</item>
    </style>

    <style name="FullImageDialogImageView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/full_image_margin</item>
    </style>

    <style name="DialogContainer">
        <item name="android:paddingRight">@dimen/dialog_padding</item>
        <item name="android:paddingLeft">@dimen/dialog_padding</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dialog_width</item>
    </style>

    <style name="DialogInput">
        <item name="android:textSize">@dimen/dialog_content_text_size</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaterialDialog" />

    <style name="MaterialDialog.Title">
        <item name="custom_font">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MaterialDialog.Content">
        <item name="custom_font">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="LoadingRelatedTracks" parent="MaterialDialog.Content" />

    <style name="LoadingRelatedTracks.LoadingBar">
        <item name="android:background">@color/play_related_tracks_bars_color</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LoadingRelatedTracks.Text">
        <item name="android:text">@string/loading_related_tracks</item>
        <item name="android:textColor">@color/play_related_tracks_text_color</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>