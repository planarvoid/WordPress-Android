<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="DownloadItem">
        <item name="queued">@drawable/entity_queued</item>
        <item name="downloaded">@drawable/entity_downloaded</item>
        <item name="downloading">@drawable/entity_downloading</item>
        <item name="unavailable">@drawable/entity_unavailable</item>
    </style>

    <style name="OfflineOnboarding" parent="TextAppearance.SoundCloudLightFont" />

    <style name="OfflineOnboarding.Header">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OfflineOnboarding.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
