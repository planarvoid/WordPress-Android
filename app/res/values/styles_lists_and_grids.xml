<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- list styles -->
    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@drawable/ak_list_divider_item</item>
        <item name="android:dividerHeight">@dimen/ak_list_divider_horizontal_height</item>
    </style>

    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ListItemText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:antialias">true</item>
    </style>

    <style name="ListItemText.PrimaryText">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="ListItemText.SecondaryText">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/list_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemText.Preview">
        <item name="android:text">@string/upsell_track_preview</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/track_preview_label</item>
    </style>

    <style name="ListItemText.Private">
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/lock_orange</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:text">@string/private_indicator</item>
    </style>

    <style name="ListItemText.Private.LeftAligned">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ListItemText.Numeric">
        <item name="android:textColor">@color/list_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="ListItemText.Numeric.Stats">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="ListItemText.TertiaryText">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="ListItemImage">
        <item name="android:layout_width">@dimen/list_item_image_dimension</item>
        <item name="android:layout_height">@dimen/list_item_image_dimension</item>
    </style>

    <style name="ListItemImage.User">
        <item name="cbiv_borderColor">@color/user_image_border_color</item>
        <item name="cbiv_borderWidth">@dimen/user_image_border_width</item>
    </style>

    <style name="ListItemOverflowButton">
        <item name="android:background">@drawable/btn_list_overflow</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="EngagementOverflowButton">
        <item name="android:background">@drawable/btn_engagements_overflow</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!-- grid styles -->
    <style name="Explore.GridView" parent="@android:style/Widget.GridView">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">@dimen/explore_padding_left_right</item>
        <item name="android:paddingRight">@dimen/explore_padding_left_right</item>
        <item name="android:paddingTop">@dimen/explore_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/explore_padding_top_bottom</item>
        <item name="android:horizontalSpacing">@dimen/grid_view_spacing_inside_horizontal</item>
        <item name="android:verticalSpacing">@dimen/grid_view_spacing_inside_vertical</item>
        <item name="android:listSelector">@null</item>
        <item name="android:numColumns">@integer/grids_num_columns</item>
    </style>

    <style name="GridItemBottom" parent="TextAppearance.GridItemBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="GridItemTag" parent="GridItemBottom">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="GridItemExtra" parent="GridItemBottom">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="GridItemImageViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="ariv_dominantMeasurement">width</item>
        <item name="ariv_aspectRatio">.55</item>
        <item name="ariv_aspectRatioEnabled">true</item>
    </style>

    <style name="GridItemImageView" parent="GridItemImageViewBase">
        <item name="movement">-15dp</item>
    </style>

    <style name="GridItemTextHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- cards style -->

    <style name="Card" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:background">@drawable/cards</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Cards" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Cards.Image" parent="GridItemImageView" />

    <style name="Cards.Footer">
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Cards.Image.Playlist" parent="Cards.Image">
        <item name="ariv_aspectRatio">.83</item>
    </style>

    <style name="Cards.ArtistText" parent="BlackOverlayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/overlay_subtext</item>
        <item name="android:layout_marginLeft">@dimen/cards_artwork_inner_padding</item>
        <item name="android:layout_marginTop">@dimen/cards_artwork_bottom_inner_padding</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="Cards.TitleText" parent="BlackOverlayText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:layout_marginLeft">@dimen/cards_artwork_inner_padding</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">@dimen/cards_artwork_bottom_inner_padding</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Cards.PlaylistTracksContainer">
        <item name="android:layout_marginBottom">@dimen/cards_artwork_bottom_inner_padding</item>
        <item name="android:layout_marginLeft">@dimen/cards_artwork_inner_padding</item>
        <item name="android:background">@drawable/circle_playlist_tracks_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Cards.PlaylistTracks">
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:antialias">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Cards.PlaylistTracks.Count">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Cards.PlaylistTracks.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Cards.PrimaryHeaderText" parent="ListItemText.PrimaryText">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="Cards.SecondaryHeaderText" parent="ListItemText.SecondaryText">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="Cards.SecondaryHeaderText.Separator">
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="Cards.StatsItem" parent="ListItemText">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Cards.ToggleButton" parent="ListItemText">
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/toggle_button_text_states</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

</resources>
