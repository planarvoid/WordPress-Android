<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Tour"/>
    <style name="Tour.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

        <item name="android:paddingLeft">5dp</item>

        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>

        <item name="android:gravity">center</item>

        <item name="android:background">@drawable/btn_login_bg_states</item>
    </style>

    <style name="Tour.FacebookButton" parent="Tour.Button">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/btn_fb_bg_states</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:paddingLeft">55dip</item>
    </style>

    <style name="Tour.CallToAction">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">2dp</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#CC000000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Tour.Headline" parent="Tour.CallToAction">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
