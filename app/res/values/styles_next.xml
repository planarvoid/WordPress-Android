<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Tour"/>
    <style name="Tour.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

        <item name="android:paddingLeft">5dp</item>

        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>

        <item name="android:gravity">center</item>

        <item name="android:background">@drawable/btn_login_bg_states</item>
    </style>

    <style name="Tour.FacebookButton" parent="Tour.Button">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/btn_fb_bg_states</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:paddingLeft">55dip</item>
    </style>

</resources>
