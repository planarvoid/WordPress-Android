<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Tour"/>
    <style name="Tour.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

        <item name="android:paddingLeft">5dp</item>

        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>

        <item name="android:gravity">center</item>

        <item name="android:background">@drawable/btn_login_bg_states</item>
    </style>

    <style name="Tour.FacebookButton" parent="Tour.Button">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/btn_fb_bg_states</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:paddingLeft">55dip</item>
    </style>

    <style name="Tour.CallToAction">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">9sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:paddingBottom">1sp</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#CC000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:antialias">true</item>

        <item name="custom_font">fonts/Interstate-Regular.ttf</item>
    </style>

    <style name="Tour.Headline" parent="Tour.CallToAction">
        <item name="android:paddingTop">1sp</item>

        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>

        <item name="custom_font">fonts/Interstate-Regular.ttf</item>
    </style>

</resources>
