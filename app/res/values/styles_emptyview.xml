<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ErrorMessage.EmptyCollection">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">@dimen/empty_message_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/empty_message_margin_left_right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Image">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Main">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Main.Error">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Sub">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="ErrorMessage.EmptyCollection.Sub.Error">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ErrorMessage.EmptyCollection.Link">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="EmptyCollectionButton">
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="emptyCollectionErrorContentHolder" parent="emptyCollectionContentHolderBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="EmptyViewImage">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>