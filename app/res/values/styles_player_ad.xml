<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdText">
        <item name="custom_font">fonts/Roboto-Light.ttf</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AdText.Advertisement">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AdText.NextUp">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AdText.NextUp.Track">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="AdButton">
        <item name="android:textColor">@drawable/txt_white_states</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AdButton.WhyAds">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AdButton.LearnMore">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_player_ad_learn_more</item>
        <item name="android:layout_marginBottom">96dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/learn_more</item>
    </style>

    <style name="AdPreview">
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:layout_marginBottom">16dip</item>
    </style>

</resources>