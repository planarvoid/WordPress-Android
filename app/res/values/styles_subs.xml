<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ConversionFullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="ConversionText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProductText" parent="ConversionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ak_almost_black</item>
    </style>

    <style name="ProductText.Disabled">
        <item name="android:textColor">@color/ak_medium_dark_gray</item>
    </style>

    <style name="ConversionText.Title">
        <item name="android:textSize">@dimen/conversion_title_text</item>
    </style>

    <style name="ConversionText.ProductsHeader">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ConversionText.Headline">
        <item name="android:textSize">@dimen/conversion_headline_text</item>
        <item name="android:width">@dimen/conversion_headline_width</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
    </style>

    <style name="ProductText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
    </style>

    <style name="ProductText.Price">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ak_almost_black</item>
    </style>

    <style name="ConversionCloud">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/conversion_cloud</item>
    </style>

    <style name="ConversionText.Price">
        <item name="android:textSize">@dimen/conversion_title_text</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ConversionDivider">
        <item name="android:layout_width">@dimen/conversion_divider_width</item>
        <item name="android:layout_height">@dimen/conversion_divider_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ProductPageDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ak_medium_dark_gray</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ConversionCheck">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/conversion_check</item>
        <item name="android:layout_marginTop">@dimen/conversion_check_margin</item>
        <item name="android:layout_marginRight">@dimen/conversion_check_margin</item>
    </style>

    <style name="ProductPageCheck" parent="ConversionCheck">
        <item name="android:src">@drawable/product_choice_check</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="ProductPageCheck.Disabled">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ConversionText.Feature">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/conversion_feature_text</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ConversionText.Restrictions">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@drawable/conversion_restriction_text_states</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ProductChoiceRestrictions" parent="ConversionText.Restrictions">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/ak_medium_dark_gray</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ConversionButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ConversionButton" parent="FlatButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textSize">@dimen/conversion_button_text</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
    </style>

    <style name="ConversionButton.More">
        <item name="android:background">@drawable/btn_primary_transparent</item>
    </style>

    <style name="CheckoutRetry">
        <item name="android:padding">24dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CheckoutRetryHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="CheckoutRetryMessage">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>

    <style name="CheckoutRetryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
