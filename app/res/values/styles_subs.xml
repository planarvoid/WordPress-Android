<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="UpgradeHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">168dp</item>
        <item name="android:background">@color/ak_sc_orange</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="UpgradeTitle" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="UpgradeDescription" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">320dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="UpgradeBuy" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/upgrade_button</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FeatureImage">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:background">@color/gray_background</item>
    </style>

    <style name="FeatureTitle" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FeatureDescription" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

</resources>
