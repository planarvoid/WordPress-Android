<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ConversionModal">
        <item name="android:layout_width">@dimen/conversion_width</item>
        <item name="android:layout_height">@dimen/conversion_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/conversion_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ConversionScrollable">
        <item name="android:layout_width">@dimen/conversion_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="ConversionText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ConversionText.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ConversionText.Price">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/translucent_white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ConversionText.Feature">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/conversion_check</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingRight">18dp</item> <!-- conversion_check width + drawablePadding -->
    </style>

    <style name="ConversionText.Restrictions">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@drawable/conversion_restriction_text_states</item>
    </style>

    <style name="ConversionButton" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
    </style>

    <style name="CheckoutRetry">
        <item name="android:padding">24dp</item>
    </style>

    <style name="CheckoutRetryHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="CheckoutRetryMessage">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>

    <style name="CheckoutRetryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="loadingColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
