<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Collections" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Collections.ItemArtwork">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Collections.CollectionPreview">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Collections.CollectionPreviewTitle" parent="ListItemText.PrimaryText">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Collections.CollectionPreviewArtwork">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Collections.PlaylistHeader" parent="ListItemText.PrimaryText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Collections.PlaylistKillFilterText" parent="ListItemText.PrimaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/collections_kill_filter_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Collections.ItemTitle" parent="ListItemText.PrimaryText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Collections.Creator" parent="ListItemText.SecondaryText">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="Collections.ListContainer">
        <item name="android:background">@color/page_background</item>
    </style>

    <style name="Collections.OptionsToggle">
        <item name="android:background">@drawable/orange_toggle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:stateListAnimator" tools:targetApi="21">@null</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/orange_toggle_text</item>
    </style>

    <style name="Collections.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@drawable/orange_radio_text</item>
    </style>

    <style name="Collections.PlaylistsEmptyImage">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Collections.PlaylistsEmptyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/collections_empty_playlists_text_color</item>
    </style>

</resources>
