<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SoundCloud.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
        <item name="android:popupAnimationStyle">@style/Animation.Popup</item>

        <item name="android:windowContentOverlay">@drawable/action_bar_shadow</item>

        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:checkboxStyle">@style/CheckBox</item>
        <item name="android:spinnerStyle">@style/Spinner</item>
        <item name="android:dropDownSpinnerStyle">@style/Spinner.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>

        <!-- PullToRefresh specific -->
        <item name="ptrAnimationStyle">flip</item>

        <!-- ViewPager -->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.ScTabPageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.ScTitlePageIndicator</item>
        <item name="vpiFixedWeightTabIndicatorStyle">@style/Widget.ScFixedTabPageIndicator</item>

        <item name="sdlDialogStyle">@style/DialogStyleLight</item>

        <item name="showcaseViewStyle">@style/ScShowcaseTheme</item>

    </style>

    <style name="Theme.SoundCloud" parent="Theme.SoundCloud.Base">
        <item name="actionBarItemBackground">@drawable/item_background_dark</item>
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
        <item name="actionDropDownStyle">@style/DropDownNav</item>
        <item name="actionBarStyle">@style/ActionBar.SoundCloud</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.SoundCloud.Widget</item>

    </style>

    <style name="ActionBar.SoundCloud" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dark_bg</item>

        <!-- Duplicated options for AppCompat with non-native action bar -->
        <item name="android:logo">@drawable/actionbar_logo</item>
        <item name="logo">@drawable/actionbar_logo</item>
        <item name="android:displayOptions">homeAsUp|showTitle|useLogo|showHome</item>
        <item name="displayOptions">homeAsUp|showTitle|useLogo|showHome</item>
    </style>

    <style name="Theme.SoundCloud.Widget.Base" parent="@style/Theme.AppCompat">
        <item name="searchViewAutoCompleteTextView">@style/SearchAutoCompleteTextView</item>
        <item name="searchViewTextField">@drawable/textfield_search_selected_holo_dark</item>
        <item name="searchViewSearchIcon">@drawable/actionbar_search</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.SoundCloud.Widget" parent="Theme.SoundCloud.Widget.Base">
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
    </style>

    <style name="Theme.SoundCloud.NoBg">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.SoundCloud.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.ScAuth" parent="Theme.SoundCloud.NoActionBar">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.Light.AutoCompleteTextView</item>
        <item name="android:dropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
    </style>

    <style name="Theme.ScCreate" parent="Theme.SoundCloud">
        <item name="android:windowBackground">@drawable/bg_rec</item>
    </style>

    <style name="Theme.Recover" parent="Theme.SoundCloud.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_rec</item>
    </style>

    <style name="Theme.Onboard" parent="Theme.SoundCloud">
        <item name="actionButtonStyle">@style/OnboardActionButtonStyle</item>
        <item name="android:actionButtonStyle">@style/OnboardActionButtonStyle</item>
        <item name="android:logo">@drawable/actionbar_logo</item>
    </style>

</resources>