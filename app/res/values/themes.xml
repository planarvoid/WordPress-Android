<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ScBase" parent="android:Theme.NoTitleBar"/>
    <style name="Theme.ScBaseLight" parent="android:Theme.Light.NoTitleBar"/>
    <style name="Theme.ScDialog" parent="android:Theme.Dialog"/>

    <style name="Theme.ScDark" parent="Theme.ScBase">
        <item name="android:buttonStyle">@style/btn_default</item>
    </style>

    <style name="Theme.ScLight" parent="Theme.ScBaseLight">
        <item name="android:buttonStyle">@style/btn_default</item>
    </style>

    <style name="Theme.ScAuth" parent="Theme.ScDark">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.AddCommentDialog" parent="Theme.ScDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AddCommentDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.FullImageDialog" parent="Theme.ScDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>