<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:popupAnimationStyle">@style/Animation.Popup</item>
        <item name="android:listViewStyle">@style/ListView</item>

        <item name="searchViewStyle">@style/SearchView.SoundCloud</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/sc_orange</item>
    </style>

    <style name="Theme.SoundCloud" parent="BaseTheme">
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
        <item name="actionDropDownStyle">@style/DropDownNav</item>
        <item name="dialogTheme">@style/LollipopDialogStyle</item>
        <item name="alertDialogTheme">@style/LollipopDialogStyle</item>
    </style>

    <style name="LollipopDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/sc_orange</item>
    </style>

    <style name="SearchView.SoundCloud" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="ActionBar.SoundCloud" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">homeAsUp|showTitle</item>
    </style>

    <style name="Theme.SoundCloud.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
    </style>

    <style name="Theme.SoundCloud.NoBg">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.SoundCloud.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.ScAuth" parent="Theme.SoundCloud.NoActionBar">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.Light.AutoCompleteTextView</item>
        <item name="android:dropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
    </style>

    <style name="Theme.ScCreate" parent="Theme.SoundCloud">
        <item name="android:windowBackground">@color/dark_gray_background</item>
    </style>

    <style name="Theme.Onboard" parent="Theme.SoundCloud">
        <item name="actionButtonStyle">@style/OnboardActionButtonStyle</item>
        <item name="android:actionButtonStyle">@style/OnboardActionButtonStyle</item>
    </style>

</resources>
