<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
        <!-- required because of the bug inside support lib v22.1-->
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.AutoCompleteTextView</item>
        <item name="android:listViewStyle">@style/ListView</item>

        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/light_status_bar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="searchViewStyle">@style/SearchView.SoundCloud</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/ak_sc_orange</item>

        <item name="cropImageStyle">@style/Widget.CropImageView</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="actionModeStyle">@style/Theme.SoundCloud.ActionMode</item>

        <!-- warning, this needs to exist for robolectric, as an attribute, or all hell breaks loose. Remove at your own risk -->
        <item name="mediaRouteButtonStyle">@style/Theme.MediaRouter.LightControlPanel</item>
    </style>

    <style name="Theme.SoundCloud" parent="BaseTheme">
        <item name="dialogTheme">@style/LollipopDialogStyle</item>
        <item name="alertDialogTheme">@style/LollipopDialogStyle</item>
    </style>

    <style name="Theme.SoundCloud.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ak_dark_gray</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="Theme.SoundCloud.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/playlist_edition_background</item>
        <item name="backgroundSplit">@color/playlist_edition_background</item>
    </style>

    <style name="Theme.SoundCloud.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.SoundCloud.TranslucentStatus">
        <item name="android:statusBarColor">@color/translucent_status_bar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.SoundCloud.TransparentStatus">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LollipopDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/ak_sc_orange</item>
    </style>

    <style name="TabsThemeBase" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/ak_sc_orange</item>
        <item name="android:background">@color/white</item>
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TabsTheme" parent="TabsThemeBase" />

    <style name="TabsTheme.Fixed">
        <item name="tabPaddingStart">@dimen/fixed_tab_padding</item>
        <item name="tabPaddingEnd">@dimen/fixed_tab_padding</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="TabsTheme.Fixed.Explore" />

    <style name="TabsTheme.Scrollable">
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="SearchView.SoundCloud" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="LightProgressTheme" parent="BaseTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.SoundCloud.NoBg">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.SoundCloud.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
    </style>

    <style name="Theme.SoundCloud.Settings">
        <item name="android:listViewStyle">@style/Widget.PreferenceListView</item>
    </style>

    <style name="Theme.ScAuth" parent="Theme.SoundCloud.NoActionBar">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.Light.AutoCompleteTextView</item>
        <item name="android:dropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
    </style>

    <style name="Widget.CropImageView" parent="android:Widget">
        <item name="showHandles">always</item>
        <item name="highlightColor">@color/white</item>
    </style>

    <style name="Widget.PreferenceListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">4dp</item>
    </style>

    <style name="Theme.PlayQueueSwitch" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/gray_text</item>
        <item name="colorPrimary">@color/gray_text</item>
        <item name="colorAccent">@color/ak_sc_orange</item>
        <item name="colorControlActivated">@color/ak_sc_orange</item>
        <item name="colorSwitchThumbNormal">@color/ak_light_gray</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

</resources>
