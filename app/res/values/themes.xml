<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Next" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:background">@null</item>

        <item name="actionBarItemBackground">@drawable/action_bar_item_selector</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_selector</item>

        <item name="popupMenuStyle">@style/next_PopupMenu</item>
        <item name="android:popupMenuStyle">@style/next_PopupMenu</item>

        <item name="actionDropDownStyle">@style/next_DropDownNav</item>
        <item name="android:actionDropDownStyle">@style/next_DropDownNav</item>

        <item name="dropDownListViewStyle">@style/next_DropDownListView</item>
        <item name="android:dropDownListViewStyle">@style/next_DropDownListView</item>

        <item name="android:actionBarTabStyle">@style/next_ActionBarTabStyle</item>
        <item name="android:actionBarStyle">@style/next_solid_ActionBar</item>

        <item name="actionBarStyle">@style/next_solid_ActionBar</item>
        <item name="actionBarTabStyle">@style/next_ActionBarTabStyle</item>

        <!--<item name="android:windowContentOverlay">@drawable/action_bar_shadow</item>-->

        <!-- Compatibility issues when this is set. Check on more devices -->
        <!--<item name="android:panelBackground">@drawable/menu_hardkey_panel_next</item>-->

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.next.widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.next.widget</item>

        <!-- Using these spinners overrides all app spinners. Use default spinners for now, come back to this -->
        <!--<item name="spinnerDropDownItemStyle">@style/next_DropDownItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/next_DropDownItem</item>
        <item name="spinnerItemStyle">@style/next_SpinnerItem</item>
        <item name="android:spinnerItemStyle">@style/next_SpinnerItem</item>-->

        <item name="ptrLoadingProgressStyle">@style/ScProgressBarHolo</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.ScTabPageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.ScTitlePageIndicator</item>

        <item name="android:windowContentOverlay">@drawable/action_bar_shadow</item>
    </style>
    <style name="Theme.Next.NoActionBar" parent="Theme.Sherlock.NoActionBar"/>
    <style name="Theme.ScDialog" parent="android:Theme.Dialog"/>

    <style name="Theme.ScDark" parent="Theme.Next">
        <item name="android:windowBackground">@color/darkBg</item>
    </style>

    <style name="Theme.ScMenu" parent="Theme.Next">
        <item name="android:textColor">@drawable/txt_light_states</item>
    </style>

    <style name="Theme.ScAuth" parent="Theme.Next.NoActionBar">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.ScCreate" parent="Theme.Next">
        <item name="android:windowBackground">@drawable/bg_rec</item>
    </style>

    <!-- ****** ActionBar ****** -->

    <style name="next_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:displayOptions">showCustom</item>
    </style>

    <style name="next_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">
        <!-- keep for now -->
    </style>

    <style name="next_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="next_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/action_bar_background</item>

        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <style name="next_ActionBarTabBarStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/action_bar_background</item>

        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <style name="next_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/action_bar_background</item>

        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_next</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_next</item>
    </style>

    <style name="next_ProgressBar" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_next</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.next.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/next_PopupMenu</item>
        <item name="android:popupMenuStyle">@style/next_PopupMenu</item>

        <item name="dropDownListViewStyle">@style/next_DropDownListView</item>
        <item name="android:dropDownListViewStyle">@style/next_DropDownListView</item>

        <item name="searchViewSearchIcon">@drawable/search_white</item>
        <item name="searchViewCloseIcon">@drawable/header_search_cancel</item>

        <item name="android:windowBackground">@android:color/transparent</item>

    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="next_DropDownItem" parent="@style/Widget.Sherlock.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="next_SpinnerItem" parent="@style/Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>



    <!-- ****** ViewPagerIndicator ****** -->

    <style name="Widget.ScTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:textAppearance">@style/TextAppearance.ScTabPageIndicator</item>
        <item name="footerColor">#ff6600</item>
    </style>

    <style name="TextAppearance.ScTabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <style name="Widget.ScTitlePageIndicator">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:textSize">13dp</item>
        <item name="selectedColor">@color/black</item>

        <item name="android:textColor">#666666</item>
        <item name="footerColor">#ff6600</item>
        <item name="footerIndicatorStyle">triangle</item>
    </style>

    <style name="TextAppearance.ScTitlePageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <!-- ****** Dialogs ****** -->

    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.AddCommentDialog" parent="Theme.ScDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AddCommentDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.FullImageDialog" parent="Theme.ScDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
