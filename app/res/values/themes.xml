<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SoundCloud" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="actionBarItemBackground">@drawable/action_bar_item_selector</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_selector</item>

        <item name="android:windowAnimationStyle">@style/ScActivityAnimationStyle</item>
        <item name="android:popupAnimationStyle">@style/ScPopupAnimationStyle</item>

        <item name="android:listViewStyle">@style/ScListViewStyle</item>

        <!-- PullToRefresh specific -->
        <item name="ptrAnimationStyle">flip</item>

        <!-- ViewPager -->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.ScTabPageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.ScTitlePageIndicator</item>
        <item name="vpiFixedWeightTabIndicatorStyle">@style/Widget.ScFixedTabPageIndicator</item>

        <item name="android:windowContentOverlay">@drawable/action_bar_shadow</item>

        <item name="showcaseViewStyle">@style/ScShowcaseTheme</item>

    </style>

    <style name="Theme.SoundCloud.Dark" parent="@style/Theme.AppCompat">
        <item name="android:windowSoftInputMode">adjustPan</item>

        <item name="actionBarItemBackground">@drawable/action_bar_item_selector</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_selector</item>

        <item name="android:windowAnimationStyle">@style/ScActivityAnimationStyle</item>
        <item name="android:popupAnimationStyle">@style/ScPopupAnimationStyle</item>

        <!-- PullToRefresh specific -->
        <item name="ptrAnimationStyle">flip</item>

        <!-- ViewPager -->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.ScTabPageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.ScTitlePageIndicator</item>

        <item name="android:windowContentOverlay">@drawable/action_bar_shadow</item>
    </style>

    <style name="Theme.SoundCloud.NoBg">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.SoundCloud.NoActionBar" parent="@android:style/Theme.Light.NoTitleBar">
    </style>

    <style name="Theme.ScAuth" parent="Theme.SoundCloud.NoActionBar">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.Light.AutoCompleteTextView</item>
        <item name="android:dropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
    </style>

    <style name="Theme.ScCreate" parent="Theme.SoundCloud.Dark">
        <item name="android:windowBackground">@drawable/bg_rec</item>
    </style>

    <style name="Theme.Recover" parent="Theme.Next.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_rec</item>
    </style>

    <style name="Theme.Onboard" parent="Theme.SoundCloud">
        <item name="actionButtonStyle">@style/OnboardActionButtonStyle</item>
        <item name="android:actionButtonStyle">@style/OnboardActionButtonStyle</item>
    </style>

</resources>