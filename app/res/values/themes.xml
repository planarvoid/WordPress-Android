<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ScBase" parent="Theme.Sherlock.ForceOverflow"/>
    <style name="Theme.ScBaseNoActionBar" parent="Theme.Sherlock.NoActionBar"/>
    <style name="Theme.ScBaseLight" parent="Theme.Sherlock.Light.DarkActionBar.ForceOverflow"/>
    <style name="Theme.ScDialog" parent="android:Theme.Dialog"/>

    <style name="Theme.ScLight" parent="Theme.ScBaseLight">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="ptrLoadingProgressStyle">@style/ScProgressBarHolo</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.ScTabPageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.ScTitlePageIndicator</item>
	</style>

    <style name="Theme.ScDark" parent="Theme.ScBase">
        <item name="android:buttonStyle">@style/btn_default</item>
    </style>

    <style name="Theme.ScMenu" parent="Theme.ScDark">
        <item name="android:textColor">@drawable/txt_light_states</item>
    </style>

    <style name="Theme.ScAuth" parent="Theme.ScBaseNoActionBar">
        <item name="android:buttonStyle">@style/btn_default</item>
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.ScCreate" parent="Theme.ScDark">
        <item name="android:windowBackground">@drawable/bg_rec</item>
    </style>

    <style name="Theme.ScPlayer" parent="Theme.ScDark">
        <item name="android:windowBackground">@color/darkBg</item>
    </style>

    <style name="Widget.ScTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:textAppearance">@style/TextAppearance.ScTabPageIndicator</item>
        <item name="footerColor">#ff6600</item>
    </style>

    <style name="TextAppearance.ScTabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <style name="Widget.ScTitlePageIndicator">
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:textSize">13dp</item>
        <item name="selectedColor">@color/black</item>

        <item name="android:textColor">#666666</item>
        <item name="footerColor">#ff6600</item>
    </style>

    <style name="TextAppearance.ScTitlePageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.AddCommentDialog" parent="Theme.ScDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AddCommentDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.FullImageDialog" parent="Theme.ScDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
