<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget" />
    <style name="Widget.TextView" />
    <style name="Widget.TextView.Playable" />

    <style name="Widget.TextView.Playable.Title">
        <item name="android:layout_alignLeft">@+id/playable_user_holder</item>
        <item name="android:layout_toLeftOf">@+id/playable_track_count</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/playable_user_holder</item>
        <item name="android:textAppearance">@style/TextAppearance.List.Main</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.TextView.Playable.TrackCount">
        <item name="android:layout_below">@id/playable_user_holder</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/list_text_dark_value</item>
        <item name="android:textSize">@dimen/list_txt_main_size</item>
        <item name="android:background">@drawable/bg_dark_round_rect</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/list_playlist_track_count_dimension</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/list_playlist_track_count_dimension</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.TextView.Playable.Username">
        <item name="android:textAppearance">@style/TextAppearance.Playable.Username</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.TextView.Playable.Reposter" parent="Widget.TextView.Playable.Username">
        <item name="android:textAppearance">@style/TextAppearance.Playable.Username</item>
    </style>

    <style name="txt_widget_primary">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>
    <style name="txt_widget_clickable" parent="txt_widget_primary">
        <item name="android:textColor">@drawable/widget_text_states</item>
    </style>
    <style name="txt_widget_secondary" parent="txt_widget_primary">
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">#ff626262</item>
    </style>

</resources>