<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View style="@style/PlayerActionSeparator"
          android:layout_height="fill_parent"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginRight="10dp"/>

    <com.soundcloud.android.view.CustomToggleButton style="@style/PlayerAction.ToggleButton.Like"
                                                    android:id="@+id/toggle_like"
                                                    android:layout_marginLeft="5dp"/>
    <com.soundcloud.android.view.CustomToggleButton style="@style/PlayerAction.ToggleButton.Repost"
                                                    android:id="@+id/toggle_repost"
                                                    android:layout_marginLeft="10dp"/>
    <ImageButton style="@style/PlayerAction.Button.AddToSet"
                 android:id="@+id/btn_addToPlaylist"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"/>

    <ImageButton style="@style/PlayerAction.Button.Share"
                 android:id="@+id/btn_share"
                 android:layout_marginRight="15dp"/>
</merge>