<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/ConversionBackground"
            android:layout_alignTop="@+id/conversion_content"
            android:layout_alignBottom="@+id/conversion_content" />

        <include
            android:id="@+id/conversion_content"
            android:layout_width="@dimen/conversion_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            layout="@layout/conversion_common" />

    </RelativeLayout>
</ScrollView>
