<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.soundcloud.android.view.CustomFontButton
        android:id="@+id/buy"
        style="@style/ConversionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/conversion_margin"
        android:layout_marginLeft="@dimen/conversion_margin"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/product_choice_terms"
        style="@style/ProductChoiceRestrictions"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="28dp"
        android:text="@string/product_choice_mini_terms" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/ak_light_gray" />

</merge>
