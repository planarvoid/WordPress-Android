<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="horizontal">

    <View android:layout_width="0dp"
          android:layout_height="fill_parent"
          android:layout_weight="0.25"/>

    <ImageView android:id="@+id/empty_state_image"
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="0.70"
               android:padding="5dp"/>

    <LinearLayout  android:layout_width="0dp"
                   android:layout_height="fill_parent"
                   android:layout_weight="2"
                   android:orientation="vertical">

        <View android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:layout_weight="0.5"/>

        <TextView android:id="@+id/txt_message"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  style="@style/ErrorMessage.EmptyCollection"/>

        <TextView android:id="@+id/txt_link"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:visibility="gone"
                  style="@style/ErrorMessage.EmptyCollection.Link"/>

        <Button android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:visibility="gone"
                style="@style/EmptyCollectionButton"/>

        <View android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:layout_weight="0.5"/>

    </LinearLayout>

    <View android:layout_width="0dp"
          android:layout_height="fill_parent"
          android:layout_weight="0.20"/>

</LinearLayout>