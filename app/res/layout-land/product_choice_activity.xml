<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="InconsistentLayout,DuplicateIncludedIds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@drawable/go_gradient"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/android_status_bar_stub_height">

            <ImageView
                android:id="@+id/conversion_cloud"
                style="@style/ConversionCloud"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="@dimen/conversion_margin" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/product_choice_title"
                style="@style/ConversionText.ProductsHeader"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="24dp"
                android:text="@string/product_choice_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_mid_tier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/product_details_mid" />
            <include layout="@layout/buy_button_footer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_high_tier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/product_details_high" />
            <include layout="@layout/buy_button_footer" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
