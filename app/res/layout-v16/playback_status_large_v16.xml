<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <FrameLayout android:layout_gravity="left"
                 android:layout_width="@dimen/notification_image_large_width"
                 android:layout_height="@dimen/notification_image_large_height"
                 android:id="@+id/icon_holder">
        <ImageView
                android:id="@+id/status_icon"
                android:scaleType="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_notification_cloud"/>
        <ImageView
                android:id="@+id/icon"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
    </FrameLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:orientation="horizontal">

            <TextView android:id="@+id/user_txt"
                      style="@style/PlaybackNotificationUser"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:layout_marginRight="8dp"
                      android:singleLine="true"
                      android:fadingEdge="horizontal"
                      android:ellipsize="marquee"/>
            <ImageButton
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:id="@+id/close"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notification_close"/>
        </LinearLayout>

        <TextView
                android:id="@+id/title_txt"
                style="@style/PlaybackNotificationTitle"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <ProgressBar
                android:id="@android:id/progress"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                style="@style/NotificationProgressBar" />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:showDividers="middle"
                      android:divider="?android:attr/listDivider"
                      android:dividerPadding="12dp">

            <ImageButton
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:background="?android:selectableItemBackground"
                    android:id="@+id/prev"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications_previous"/>

            <ImageButton
                    android:id="@+id/toggle_playback"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:background="?android:selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications_play"/>

            <ImageButton
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:background="?android:selectableItemBackground"
                    android:id="@+id/next"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications_next"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>