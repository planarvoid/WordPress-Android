<?xml version="1.0" encoding="utf-8"?>
<com.soundcloud.android.activity.auth.SignUp xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent">
    <LinearLayout style="@style/SignUp.Content">

        <include layout="@layout/auth_buttons_social"/>

        <com.soundcloud.android.view.CustomFontTextView style="@style/SignUp.Header"
                                                        android:text="@string/tour_signup_header"

                                                        android:layout_marginTop="20dp"
                                                        android:layout_marginBottom="20dp"/>

        <TableLayout style="@style/SignUp.LoginForm">
            <TableRow style="@style/SignUp.LabelRow">
                <com.soundcloud.android.view.CustomFontTextView style="@style/SignUp.Label"
                                                                android:text="@string/email"/>
                <AutoCompleteTextView android:id="@+id/auto_txt_email_address"
                                      style="@style/SignUp.EmailEntry"
                                      android:requiresFadingEdge="horizontal"
                                      android:hint="@string/authentication_your_email_address"
                                      android:drawablePadding="@dimen/signup_done_drawable_padding" />
            </TableRow>

            <TableRow style="@style/SignUp.SeparatorRow">
                <View style="@style/SignUp.SeparatorView"/>
            </TableRow>

            <TableRow style="@style/SignUp.LabelRow">
                <com.soundcloud.android.view.CustomFontTextView style="@style/SignUp.Label"
                                                                android:text="@string/password"/>

                <EditText style="@style/SignUp.TextEntry"
                          android:id="@+id/txt_choose_a_password"
                          android:hint="@string/authentication_choose_a_password"
                          android:requiresFadingEdge="horizontal"
                          android:drawablePadding="@dimen/signup_done_drawable_padding"
                          android:imeOptions="actionDone"/>
            </TableRow>
        </TableLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="@dimen/tour_buttons_height"

                      android:layout_marginTop="10dip">
            <Button style="@style/Tour.Button"
                    android:id="@+id/btn_cancel"
                    android:text="@string/cancel"
                    android:layout_height="@dimen/tour_buttons_height"
                    android:layout_marginRight="10dip"/>

            <Button style="@style/Tour.Button"
                    android:id="@+id/btn_signup"
                    android:text="@string/done"
                    android:layout_height="@dimen/tour_buttons_height"/>
        </LinearLayout>

        <TextView style="@style/SignUp.Info"
                  android:id="@+id/txt_msg"
                  android:text="@string/authentication_by_signing_in_I_agree_to_the"
                  android:layout_marginBottom="20dp"/>
    </LinearLayout>
</com.soundcloud.android.activity.auth.SignUp>
