<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profile_header"
        style="@style/You.Container"
        android:orientation="vertical"
        tools:ignore="MergeRootFrame">

        <View style="@style/You.Divider" />

        <FrameLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                style="@style/You.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    style="@style/You.HeaderImage" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.soundcloud.android.view.CustomFontTextView
                        android:id="@+id/username"
                        style="@style/You.HeaderText.Username" />

                    <com.soundcloud.android.view.CustomFontTextView
                        android:id="@+id/profile_link"
                        style="@style/You.HeaderText.ProfileLink"
                        android:text="@string/you_view_public_profile" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <View style="@style/You.Divider" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_activity_link"
            style="@style/You.NavItem"
            android:text="@string/you_activity" />

        <View style="@style/Divider.Horizontal" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_record_link"
            style="@style/You.NavItem"
            android:text="@string/you_record" />

        <View style="@style/You.Divider" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_offline_sync_settings_link"
            style="@style/You.NavItem"
            android:text="@string/you_offline_sync_settings"
            android:visibility="gone" />

        <View style="@style/Divider.Horizontal" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_notification_settings_link"
            style="@style/You.NavItem"
            android:text="@string/you_notification_settings" />

        <View style="@style/Divider.Horizontal" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_basic_settings_link"
            style="@style/You.NavItem"
            android:text="@string/you_basic_settings" />

        <View style="@style/You.Divider" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_help_center_link"
            style="@style/You.NavItem"
            android:text="@string/you_help_center" />

        <View style="@style/Divider.Horizontal" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_legal_link"
            style="@style/You.NavItem"
            android:text="@string/you_legal" />

        <View style="@style/You.Divider" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/you_sign_out_link"
            style="@style/You.NavItem"
            android:text="@string/you_sign_out" />

        <TextView
            android:id="@+id/you_version_text"
            style="@style/You.VersionText" />

    </LinearLayout>
</ScrollView>
