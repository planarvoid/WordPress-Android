<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_id"
        android:animateLayoutChanges="true">

        <com.soundcloud.android.view.CircularProgressBar
            android:id="@+id/loading"
            android:layout_width="@dimen/medium_indeterminite_spinner_width"
            android:layout_height="@dimen/medium_indeterminite_spinner_height"
            android:layout_gravity="center" />

        <com.soundcloud.android.view.CustomFontButton
            android:id="@+id/retry"
            style="@style/CheckoutRetry"
            android:text="@string/conversion_buy_retry"
            android:visibility="gone" />

        <WebView
            android:id="@+id/payment_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </FrameLayout>

    <View style="@style/ToolbarShadow" />

</RelativeLayout>
