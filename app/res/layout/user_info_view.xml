<?xml version="1.0" encoding="utf-8"?>

<!-- frameLayout required because of https://github.com/soundcloud/SoundCloud-Android/issues/2988 -->
<com.soundcloud.android.view.MultiSwipeRefreshLayout
    android:id="@+id/str_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.soundcloud.android.view.EmptyView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/user_details_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/website"
                    style="@style/Profile.Info.Link"
                    android:drawableLeft="@drawable/favicon_website"
                    android:text="@string/website"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/discogs_name"
                    style="@style/Profile.Info.Link"
                    android:drawableLeft="@drawable/favicon_discogs"
                    android:text="@string/discogs"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/myspace_name"
                    style="@style/Profile.Info.Link"
                    android:drawableLeft="@drawable/favicon_myspace"
                    android:text="@string/myspace"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/description"
                    style="@style/Profile.Info"
                    android:padding="4dp"
                    android:visibility="gone" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>
</com.soundcloud.android.view.MultiSwipeRefreshLayout>
