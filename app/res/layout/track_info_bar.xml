<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">
    <ImageView android:id="@+id/icon"
               android:layout_width="@dimen/list_icon_width"
               android:layout_height="@dimen/list_icon_height"
               android:layout_marginLeft="@dimen/list_icon_margin_left"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:background="@drawable/artwork_badge"
               android:scaleType="centerCrop"/>

    <ViewStub android:id="@+id/processing_progress_stub"
                  android:layout_alignLeft="@id/icon"
                  android:layout_alignRight="@id/icon"
                  android:layout_alignTop="@id/icon"
                  android:layout_alignBottom="@id/icon"
                  android:inflatedId="@+id/processing_progress"
                  android:layout_margin="15dp"
                  android:layout="@layout/indeterminate_progress"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    <TextView android:id="@+id/user"
              android:layout_height="wrap_content"
              style="@style/txt_list_sub"
              android:text="@string/user"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_marginLeft="@dimen/list_text_margin_left"
              android:layout_width="0dp"
              android:layout_alignTop="@id/icon"
              android:layout_toRightOf="@+id/icon"
              android:layout_toLeftOf="@+id/track_created_at"/>

    <TextView android:id="@+id/track_created_at"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:gravity="right"
              style="@style/txt_list_created_at"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignTop="@id/icon"
              android:paddingLeft="0dip"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_alignParentRight="true"/>

    <TextView android:id="@+id/track"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignLeft="@id/user"
              android:layout_alignParentRight="true"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_below="@id/user"
              android:maxLines="2"
              android:ellipsize="marquee"
              style="@style/txt_list_main"
              android:text="@string/track"/>
    <RelativeLayout
            android:id="@+id/stats"
            android:layout_below="@id/track"
            android:layout_alignLeft="@id/user"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:paddingTop="3dip"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/private_indicator"
                  android:singleLine="true"
                  android:ellipsize="none"
                  android:layout_alignParentLeft="true"
                  android:drawableLeft="@drawable/lock"
                  android:drawablePadding="2dp"
                  android:layout_marginRight="5dp"
                  android:textColor="@color/white"
                  android:textSize="@dimen/list_txt_sub_size"
                  android:layout_width="wrap_content"
                  android:text="@string/tracklist_item_shared_with_x_people"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/play_count"
                  android:layout_width="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:drawableLeft="@drawable/ic_stats_plays_states"
                  android:singleLine="true"
                  android:drawablePadding="3dip"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/private_indicator"
                  style="@style/txt_list_sub_secondary"/>

        <View android:id="@+id/vr_play_count"
              android:layout_toRightOf="@+id/play_count"
              android:layout_alignBottom="@+id/play_count"
              android:layout_alignTop="@+id/play_count"
              android:layout_height="0dp"
              android:layout_width="1dip"
              style="@style/stat_pipe"
              />

        <TextView android:id="@+id/comment_count"
                  android:layout_width="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:drawableLeft="@drawable/ic_stats_comments_states"
                  android:drawablePadding="3dip"
                  android:singleLine="true"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/vr_play_count"
                  style="@style/txt_list_sub_secondary"/>

        <View android:id="@+id/vr_comment_count"
              android:layout_toRightOf="@+id/comment_count"
              android:layout_alignBottom="@+id/comment_count"
              android:layout_alignTop="@+id/comment_count"
              android:layout_height="0dp"
              style="@style/stat_pipe"
              android:layout_width="1dip"/>

        <TextView android:id="@+id/favorite_count"
                  android:layout_width="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:drawablePadding="3dip"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:layout_toRightOf="@id/vr_comment_count"
                  android:paddingRight="5dip"
                  style="@style/txt_list_sub_secondary"/>
    </RelativeLayout>
</RelativeLayout>
