<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout android:id="@+id/search_input"
                    android:background="@drawable/action_bar_background"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/search_header_padding_topbottom"
                    android:paddingBottom="@dimen/search_header_padding_topbottom"
                    android:paddingLeft="@dimen/search_header_padding_leftright"
                    android:paddingRight="@dimen/search_header_padding_leftright"
                    android:layout_width="fill_parent">

        <LinearLayout android:id="@+id/focus_catcher"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:layout_width="0px"
                      android:layout_height="0px"/>

        <com.soundcloud.android.view.ClearText android:id="@+id/txt_query"
                                               android:layout_margin="5dip"
                                               android:layout_toRightOf="@+id/spinner_search_type"
                                               android:layout_alignParentRight="true"
                                               style="@style/txt_search"
                                               android:layout_height="wrap_content"
                                               android:singleLine="true"
                                               android:imeOptions="actionSearch"
                                               android:layout_width="fill_parent"
                />

        <Spinner android:id="@id/spinner_search_type"
                 android:nextFocusUp="@id/spinner_search_type"
                 android:nextFocusLeft="@id/spinner_search_type"
                 android:layout_alignParentLeft="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignTop="@id/txt_query"
                 android:layout_alignBottom="@id/txt_query"/>


    </RelativeLayout>

    <FrameLayout android:id="@+id/results_holder"
                 android:layout_width="fill_parent"
                 android:layout_height="0dp"
                 android:background="@android:color/white"
                 android:layout_below="@id/search_input"
                 android:layout_alignParentBottom="true"/>

    <View android:layout_width="fill_parent"
          android:layout_height="5dip"
          android:layout_below="@id/search_input"
          android:background="@drawable/drop_shadow_down"/>

</RelativeLayout>