<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="-1px"> <!-- Fixes messy pull to refresh pixel -->

    <FrameLayout android:id="@+id/listContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <!-- don't use android:id/list here for now, since it conflicts with the PTR stuff -->
        <!-- see https://github.com/soundcloud/SoundCloud-Android/issues/534 -->
        <com.soundcloud.android.collections.ScListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <com.soundcloud.android.view.EmptyListView
                android:id="@android:id/empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </FrameLayout>

    <!-- Need this outer layout for tablets and view ID can only have one type -->
    <RelativeLayout
            android:id="@+id/playlist_loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                 android:indeterminateOnly="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>