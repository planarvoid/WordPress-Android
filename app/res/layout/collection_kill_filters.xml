<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <com.soundcloud.android.view.CustomFontTextView
        style="@style/Collections.PlaylistKillFilterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/collections_filters_active_message" />

    <com.soundcloud.android.view.CustomFontButton
        android:id="@+id/btn_remove_filters"
        style="@style/BorderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/collections_remove_filters" />

</LinearLayout>
