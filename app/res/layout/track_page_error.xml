<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/track_page_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
            android:id="@+id/playback_error_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/player_error"
            android:layout_centerInParent="true" />

    <TextView
            android:id="@+id/playback_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playback_error"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@id/playback_error_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/player_error_text_margin" />

    <TextView
            android:id="@+id/playback_error_reason"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:gravity="center_horizontal"
            android:layout_below="@id/playback_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />
</RelativeLayout>