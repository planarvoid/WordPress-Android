<?xml version="1.0" encoding="utf-8"?>
<com.soundcloud.android.onboarding.auth.SignupBasicsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/SignUp.Content">

        <TextView
            style="@style/SignUp.Info"
            android:layout_marginBottom="10dp"
            android:text="@string/onboarding_create_account"
            android:textAppearance="?android:attr/textAppearanceMediumInverse" />

        <RelativeLayout style="@style/SignUp.LoginForm">

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/email_label"
                style="@style/SignUp.Label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/email" />

            <AutoCompleteTextView
                android:id="@+id/auto_txt_email_address"
                style="@style/SignUp.EmailEntry"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/email_label"
                android:layout_toRightOf="@id/email_label"
                android:drawablePadding="@dimen/signup_done_drawable_padding"
                android:hint="@string/authentication_your_email_address"
                android:inputType="textEmailAddress"
                android:padding="@dimen/signup_label_padding"
                android:requiresFadingEdge="horizontal" />

            <View
                android:id="@+id/after_email_hr"
                style="@style/SignUp.SeparatorView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/email_label" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/password_label"
                style="@style/SignUp.Label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/after_email_hr"
                android:text="@string/password" />

            <EditText
                android:id="@+id/txt_choose_a_password"
                style="@style/SignUp.TextEntry"
                android:layout_below="@id/after_email_hr"
                android:layout_toEndOf="@id/password_label"
                android:layout_toRightOf="@id/password_label"
                android:drawablePadding="@dimen/signup_done_drawable_padding"
                android:hint="@string/authentication_choose_a_password"
                android:padding="@dimen/signup_label_padding"
                android:requiresFadingEdge="horizontal" />

            <View
                android:id="@+id/after_password_hr"
                style="@style/SignUp.SeparatorView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/password_label" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/age_label"
                style="@style/SignUp.Label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/after_password_hr"
                android:text="@string/age" />

            <EditText
                android:id="@+id/txt_enter_age"
                style="@style/SignUp.TextEntry"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/after_password_hr"
                android:layout_toEndOf="@id/age_label"
                android:layout_toRightOf="@id/age_label"
                android:drawablePadding="@dimen/signup_done_drawable_padding"
                android:hint="@string/enter_age_hint"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/signup_label_padding"
                android:requiresFadingEdge="horizontal" />

            <View
                android:id="@+id/after_birthday_hr"
                style="@style/SignUp.SeparatorView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/age_label" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/gender_label"
                style="@style/SignUp.Label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/after_birthday_hr"
                android:text="@string/gender" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/txt_choose_gender"
                style="@style/SignUp.TextEntry"
                android:layout_width="wrap_content"
                android:layout_below="@id/after_birthday_hr"
                android:layout_toEndOf="@id/gender_label"
                android:layout_toRightOf="@id/gender_label"
                android:hint="@string/onboarding_indicate_gender"
                android:padding="@dimen/signup_label_padding"
                android:requiresFadingEdge="horizontal" />

            <View
                android:id="@+id/after_enter_gender_vr"
                style="@style/SignUp.SeparatorView.Vertical"
                android:layout_toRightOf="@+id/txt_choose_gender"
                android:layout_toEndOf="@+id/txt_choose_gender"
                android:layout_below="@id/after_birthday_hr"
                android:layout_marginBottom="@dimen/signup_label_padding"
                android:layout_marginTop="@dimen/signup_label_padding"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txt_enter_custom_gender"
                style="@style/SignUp.TextEntry"
                android:layout_below="@id/after_birthday_hr"
                android:layout_toEndOf="@id/after_enter_gender_vr"
                android:layout_toRightOf="@id/after_enter_gender_vr"
                android:hint="@string/onboarding_custom_gender_hint"
                android:maxLength="16"
                android:padding="@dimen/signup_label_padding"
                android:requiresFadingEdge="horizontal"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tour_buttons_height"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/Tour.Button"
                android:layout_height="@dimen/tour_buttons_height"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btn_signup"
                style="@style/Tour.Button"
                android:layout_height="@dimen/tour_buttons_height"
                android:text="@string/done" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_msg"
            style="@style/SignUp.Info"
            android:layout_marginBottom="20dp"
            android:text="@string/onboarding_agreement_statement" />
    </LinearLayout>
</com.soundcloud.android.onboarding.auth.SignupBasicsLayout>
