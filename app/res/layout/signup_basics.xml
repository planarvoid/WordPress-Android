<?xml version="1.0" encoding="utf-8"?>
<com.soundcloud.android.onboarding.auth.SignupBasicsLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout style="@style/SignUp.Content">
        <TextView style="@style/SignUp.Info"
                  android:text="@string/onboarding_create_account"
                  android:textAppearance="?android:attr/textAppearanceMediumInverse"
                  android:layout_marginBottom="10dp"/>

        <RelativeLayout style="@style/SignUp.LoginForm">

            <com.soundcloud.android.view.CustomFontTextView
                    android:id="@+id/email_label"
                    style="@style/SignUp.Label"
                    android:text="@string/email"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <AutoCompleteTextView
                    android:id="@+id/auto_txt_email_address"
                    style="@style/SignUp.EmailEntry"
                    android:requiresFadingEdge="horizontal"
                    android:hint="@string/authentication_your_email_address"
                    android:padding="@dimen/signup_label_padding"
                    android:drawablePadding="@dimen/signup_done_drawable_padding"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/email_label"
                    android:layout_toEndOf="@id/email_label"
                    android:inputType="textEmailAddress"/>

            <View android:id="@+id/after_email_hr"
                  style="@style/SignUp.SeparatorView"
                  android:layout_below="@id/email_label"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"/>

            <com.soundcloud.android.view.CustomFontTextView
                    android:id="@+id/password_label"
                    style="@style/SignUp.Label"
                    android:text="@string/password"
                    android:layout_below="@id/after_email_hr"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <EditText style="@style/SignUp.TextEntry"
                      android:id="@+id/txt_choose_a_password"
                      android:hint="@string/authentication_choose_a_password"
                      android:requiresFadingEdge="horizontal"
                      android:padding="@dimen/signup_label_padding"
                      android:drawablePadding="@dimen/signup_done_drawable_padding"
                      android:layout_below="@id/after_email_hr"
                      android:layout_toRightOf="@id/password_label"
                      android:layout_toEndOf="@id/password_label"/>

            <View android:id="@+id/after_password_hr"
                  style="@style/SignUp.SeparatorView"
                  android:layout_below="@id/password_label"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"/>

            <com.soundcloud.android.view.CustomFontTextView
                    android:id="@+id/birthday_label"
                    style="@style/SignUp.Label"
                    android:text="@string/birthday"
                    android:layout_below="@id/after_password_hr"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <com.soundcloud.android.view.CustomFontTextView
                    style="@style/SignUp.TextEntry"
                    android:id="@+id/txt_choose_month"
                    android:hint="@string/select_month"
                    android:requiresFadingEdge="horizontal"
                    android:padding="@dimen/signup_label_padding"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/after_password_hr"
                    android:layout_toRightOf="@id/birthday_label"
                    android:layout_toEndOf="@id/birthday_label"/>

            <View android:id="@+id/after_select_month_vr"
                  style="@style/SignUp.SeparatorView.Vertical"
                  android:layout_below="@id/after_password_hr"
                  android:layout_toRightOf="@id/txt_choose_month"
                  android:layout_toEndOf="@id/txt_choose_month"
                  android:layout_marginTop="@dimen/signup_label_padding"
                  android:layout_marginBottom="@dimen/signup_label_padding"/>

            <EditText style="@style/SignUp.TextEntry"
                      android:id="@+id/txt_enter_year"
                      android:hint="@string/onboarding_enter_year"
                      android:requiresFadingEdge="horizontal"
                      android:padding="@dimen/signup_label_padding"
                      android:drawablePadding="@dimen/signup_done_drawable_padding"
                      android:layout_below="@id/after_password_hr"
                      android:layout_toEndOf="@id/after_select_month_vr"
                      android:layout_toRightOf="@id/after_select_month_vr"
                      android:inputType="number"
                      android:maxLength="4"/>

            <View android:id="@+id/after_birthday_hr"
                  style="@style/SignUp.SeparatorView"
                  android:layout_below="@id/birthday_label"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"/>

            <com.soundcloud.android.view.CustomFontTextView
                    android:id="@+id/gender_label"
                    style="@style/SignUp.Label"
                    android:text="@string/gender"
                    android:layout_below="@id/after_birthday_hr"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <com.soundcloud.android.view.CustomFontTextView
                    style="@style/SignUp.TextEntry"
                    android:id="@+id/txt_choose_gender"
                    android:hint="@string/onboarding_indicate_gender"
                    android:requiresFadingEdge="horizontal"
                    android:padding="@dimen/signup_label_padding"
                    android:layout_below="@id/after_birthday_hr"
                    android:layout_toRightOf="@id/gender_label"
                    android:layout_toEndOf="@id/gender_label"
                    android:layout_width="wrap_content"/>

            <View android:id="@+id/after_enter_gender_vr"
                  style="@style/SignUp.SeparatorView.Vertical"
                  android:layout_below="@id/after_birthday_hr"
                  android:layout_alignLeft="@id/after_select_month_vr"
                  android:layout_alignStart="@id/after_select_month_vr"
                  android:layout_marginTop="@dimen/signup_label_padding"
                  android:layout_marginBottom="@dimen/signup_label_padding"
                  android:visibility="gone"/>

            <EditText style="@style/SignUp.TextEntry"
                      android:id="@+id/txt_enter_custom_gender"
                      android:hint="@string/onboarding_custom_gender_hint"
                      android:requiresFadingEdge="horizontal"
                      android:padding="@dimen/signup_label_padding"
                      android:layout_below="@id/after_birthday_hr"
                      android:layout_toRightOf="@id/after_enter_gender_vr"
                      android:layout_toEndOf="@id/after_enter_gender_vr"
                      android:visibility="gone"
                      android:maxLength="16"/>

        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/tour_buttons_height"
                      android:layout_marginTop="10dp">
            <Button style="@style/Tour.Button"
                    android:id="@+id/btn_cancel"
                    android:text="@string/cancel"
                    android:layout_height="@dimen/tour_buttons_height"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>

            <Button style="@style/Tour.Button"
                    android:id="@+id/btn_signup"
                    android:text="@string/done"
                    android:layout_height="@dimen/tour_buttons_height"/>
        </LinearLayout>

        <TextView style="@style/SignUp.Info"
                  android:id="@+id/txt_msg"
                  android:text="@string/onboarding_agreement_statement"
                  android:layout_marginBottom="20dp"/>
    </LinearLayout>
</com.soundcloud.android.onboarding.auth.SignupBasicsLayout>
