<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <ImageView
            android:id="@+id/image"
            style="@style/ListItemImage"/>

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@id/list_item_header"
            style="@style/ListItemText.SecondaryText"
            android:layout_toRightOf="@id/image"
            android:layout_alignTop="@id/image"
            android:layout_marginTop="-4dp" />

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/reposter"
            style="@style/ListItemText.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_item_header"
            android:layout_alignBaseline="@id/list_item_header"
            android:layout_toLeftOf="@id/list_item_right_info"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/stats_repost"
            android:drawablePadding="3dp"/>

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@id/list_item_subheader"
            style="@style/ListItemText.PrimaryText"
            android:layout_toRightOf="@id/image"
            android:layout_below="@id/list_item_header"/>

</merge>