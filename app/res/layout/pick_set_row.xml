<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingBottom="@dimen/search_item_padding_topbottom"
              android:paddingTop="@dimen/search_item_padding_topbottom"
              android:paddingLeft="@dimen/slm_item_padding_left"
              android:paddingRight="@dimen/slm_item_padding_right"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/nav_drawer_list_selector">

    <TextView android:id="@+id/title"
              android:text="@string/track"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>

    <TextView android:id="@+id/trackCount"
              android:drawablePadding="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

</LinearLayout>
