<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/recommendation_item"
    style="@style/Carousel.RecommendationItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ForegroundImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/recommendation_item_size"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false">

        <com.soundcloud.android.view.ForegroundImageView
            android:id="@+id/recommendation_artwork"
            style="@style/Carousel.Artwork"
            ForegroundImageView:foregroundDrawable="@drawable/artwork_border"
            ForegroundImageView:square="true"
            android:layout_width="@dimen/recommendation_item_size"
            android:layout_height="@dimen/recommendation_item_size"
            android:layout_marginBottom="8dp"
            tools:src="@drawable/actionbar_bg" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recommendation_title"
            style="@style/Carousel.ItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommendation_artwork"
            tools:text="Track name" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recommendation_artist"
            style="@style/Carousel.ItemArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommendation_title"
            android:visibility="gone"
            tools:text="Artist name"
            tools:visibility="visible" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recommendation_now_playing"
            style="@style/Carousel.ItemNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommendation_title"
            android:drawableLeft="@drawable/ic_now_playing"
            android:text="@string/title_now_playing"
            android:visibility="gone" />

        <View
            android:id="@+id/go_indicator"
            style="@style/GoIndicator"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/go_indicator_offset"
            android:layout_marginTop="@dimen/go_indicator_offset" />
    </RelativeLayout>

    <com.soundcloud.android.view.OverflowAnchorImageView
        android:id="@+id/overflow_button"
        style="@style/Carousel.OverflowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="-7dp"
        android:layout_marginRight="-8dp" />

</FrameLayout>


