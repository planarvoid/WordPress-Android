<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/playlist_tags_fragment">

    <com.soundcloud.android.view.CustomFontTextView
        style="@style/TagTitleText"
        android:text="@string/search_tags_title" />

    <LinearLayout
        android:id="@+id/recent_tags_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/discovery_tags_separation"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View style="@style/TagsDivider" />

        <com.soundcloud.android.view.CustomFontTextView
            style="@style/TagSubtitleText"
            android:text="@string/search_tags_recent_subtitle" />

        <com.soundcloud.android.view.FlowLayout
            android:id="@+id/recent_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/discovery_tags_margin_top_bottom"
            android:paddingBottom="@dimen/discovery_tags_padding_top_bottom"
            android:paddingLeft="@dimen/discovery_tags_padding_left_right" />

        <View style="@style/TagsDivider" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/tagsDivider"
            style="@style/TagsDivider" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/tags_subtitle"
            style="@style/TagSubtitleText"
            android:layout_below="@id/tagsDivider"
            android:text="@string/search_tags_popular_subtitle" />

        <com.soundcloud.android.view.EmptyView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:paddingTop="50dp" />

        <com.soundcloud.android.view.FlowLayout
            android:id="@+id/all_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tags_subtitle"
            android:animateLayoutChanges="true"
            android:paddingLeft="@dimen/discovery_tags_padding_left_right" />

    </RelativeLayout>

</LinearLayout>
