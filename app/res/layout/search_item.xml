<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/discovery_cell_padding"
    android:paddingRight="@dimen/discovery_cell_padding"
    android:paddingTop="@dimen/discovery_cell_padding">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        auto:cardElevation="@dimen/discovery_cell_elevation"
        auto:cardUseCompatPadding="true">

        <com.soundcloud.android.view.CustomFontAutoCompleteTextView
            android:id="@+id/search"
            style="@style/Search.TextView.Link"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:cursorVisible="false"
            android:hint="@string/discovery_search_hint" />

    </android.support.v7.widget.CardView>

</FrameLayout>
