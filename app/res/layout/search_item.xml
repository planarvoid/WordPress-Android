<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/discovery_search_cell_margin_top_bottom"
    android:layout_marginLeft="@dimen/discovery_search_cell_margin_left_right"
    android:layout_marginRight="@dimen/discovery_search_cell_margin_left_right">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        auto:cardElevation="@dimen/discovery_cell_elevation"
        auto:cardBackgroundColor="@color/white"
        auto:cardUseCompatPadding="true">

        <com.soundcloud.android.view.CustomFontEditText
            android:id="@+id/search"
            style="@style/Search.TextView.Link"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:cursorVisible="false"
            android:hint="@string/discovery_search_hint" />

    </android.support.v7.widget.CardView>

</FrameLayout>
