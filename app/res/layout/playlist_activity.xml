<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <com.soundcloud.android.view.adapter.PlayableBar
            android:layout="@layout/playlist_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View android:id="@+id/playlist_actionbar_separator"
          android:background="@color/scOrange"
          android:layout_below="@id/playable_bar"
          android:layout_height="2dp"
          android:layout_width="match_parent"/>

    <!-- list view (set items) -->
    <FrameLayout android:id="@+id/playlist_tracks_fragment"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@id/playlist_actionbar_separator"
                 android:layout_alignParentBottom="true"/>


</RelativeLayout>