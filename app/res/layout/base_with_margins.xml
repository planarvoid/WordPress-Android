<?xml version="1.0" encoding="utf-8"?>

<!-- In this configuration it's the same as base.xml - the margins are only present for tablet landscape -->
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:panelHeight="@dimen/player_footer"
    sothree:dragView="@+id/player_layout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <View android:layout_width="match_parent"
              android:layout_height="?attr/actionBarSize"
              android:background="@color/dark_bg" />

        <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

    <fragment
        android:id="@+id/player_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.soundcloud.android.playback.ui.PlayerFragment" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
