<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <EditText android:id="@android:id/edit"
                  android:layout_margin="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edit_text_holo_dark"
                  android:inputType="text"
                  android:textSize="16sp"
                  android:hint="@string/create_new_playlist_hint"
                  android:singleLine="true" />

        <CheckBox android:id="@+id/chk_private"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_playlist_private"/>

</LinearLayout>