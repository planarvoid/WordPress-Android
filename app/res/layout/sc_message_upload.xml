<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.soundcloud.android"
              android:background="@drawable/bg_rec"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <TextView android:id="@+id/txt_title"
                  android:background="@drawable/btn_bar_rec_bg"
                  android:layout_centerVertical="true"
                  android:text="@string/share"
                  style="@style/txt_record_title"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ScrollView01"
                android:background="@drawable/bg_rec"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:paddingTop="5dip">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

            <TextView android:id="@+id/txt_private_message_upload_title"
                      android:layout_width="fill_parent"
                      style="@style/txt_private_message_metadata_title"
                      android:gravity="left"
                      android:padding="5dip"
                      android:text="@string/private_message_upload_title"
                      android:layout_height="wrap_content"/>
            <TextView android:id="@+id/txt_private_message_upload_message"
                      android:layout_width="fill_parent"
                      style="@style/txt_private_message_metadata_message"
                      android:gravity="left"
                      android:paddingLeft="5dip"
                      android:paddingRight="5dip"
                      android:text="@string/private_message_upload_message"
                      android:layout_height="wrap_content"/>

            <com.soundcloud.android.view.create.RecordingMetaData android:id="@+id/metadata_layout"
                                                                  android:layout_height="wrap_content"
                                                                  android:layout_width="fill_parent"
                                                                  android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>
    <com.soundcloud.android.view.ButtonBar android:id="@+id/bottom_bar"
                                                       android:layout_width="fill_parent"
                                                       android:layout_height="60dp"
                                                       style="@style/rec_button_bar"
                                                       app:button_background="@drawable/btn_transparent_bg_states"
                                                       app:separator_color="@color/recButtonBarSeparator"/>
</LinearLayout>
