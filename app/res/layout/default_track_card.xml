<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/track_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.soundcloud.android.view.ParallaxImageView
                android:id="@+id/image"
                style="@style/Stream.Image.Track" />

            <com.soundcloud.android.view.JaggedTextView
                android:id="@id/creator"
                style="@style/Cards.ArtistText"
                android:layout_above="@id/title"
                tools:text="Artist" />

            <com.soundcloud.android.view.JaggedTextView
                android:id="@id/title"
                style="@style/Cards.TitleText"
                android:layout_alignBottom="@id/image"
                tools:text="Track title" />

            <TextView
                android:id="@+id/preview_indicator"
                style="@style/PreviewIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/image"
                android:layout_alignTop="@id/image"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/cards_artwork_inner_padding"
                android:layout_marginTop="@dimen/cards_artwork_inner_padding"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

        <include layout="@layout/default_card_footer" />
    </LinearLayout>
</FrameLayout>

