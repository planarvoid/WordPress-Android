<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.soundcloud.android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/waveform_frame">

    <com.soundcloud.android.view.play.WaveformHolder android:id="@+id/waveform_holder"
                                                android:layout_above="@+id/player_avatar_bar_holder"
                                                android:layout_width="fill_parent"
                                                android:layout_height="@dimen/player_portrait_half_wave_height">
        <ProgressBar
                style="@style/ScProgressBar"
                android:id="@+id/progress_bar"
                android:layout_alignParentTop="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

        <View
                android:id="@+id/progress_overlay"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />

        <com.soundcloud.android.view.play.PlayerTouchBar
                android:id="@+id/track_touch_bar"
                android:background="#00000000"
                android:layout_gravity="top"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

        <RelativeLayout android:id="@+id/connecting_bar"
                        android:layout_width="fill_parent"
                        android:visibility="gone"
                        android:layout_height="fill_parent">

            <ProgressBar style="@style/ScProgressBar"
                         android:indeterminateOnly="true"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent"/>
        </RelativeLayout>
    </com.soundcloud.android.view.play.WaveformHolder>

    <View android:layout_height="2dip"
          android:layout_width="fill_parent"
          android:layout_above="@id/waveform_holder"
          android:background="@drawable/drop_shadow_up"/>

    <com.soundcloud.android.view.play.PlayerTime android:id="@+id/currenttime"
                                                    style="@style/txt_player_time"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/player_time_height"
                                                    android:layout_above="@id/waveform_holder"
                                                    android:layout_marginBottom="@dimen/player_time_bottom_margin"
                                                    app:show_arrow="true"/>
    <FrameLayout android:id="@id/player_avatar_bar_holder"
                 android:layout_width="fill_parent"
                 android:layout_height="@dimen/player_avatar_bar_height"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/player_avatar_bg_portrait">
        <com.soundcloud.android.view.play.PlayerAvatarBar android:id="@+id/player_avatar_bar"
                                                     android:layout_width="fill_parent"
                                                     android:layout_height="fill_parent"/>
    </FrameLayout>
</RelativeLayout>
