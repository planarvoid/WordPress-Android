<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/collections_recently_played_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        tools:ignore="UselessParent">

        <com.soundcloud.android.view.CircularBorderImageView
            android:id="@+id/artwork"
            app:cbiv_borderColor="@color/user_image_border_color"
            app:cbiv_borderWidth="@dimen/user_image_border_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/Collections.ItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/artwork"
            android:layout_marginRight="4dp" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recently_played_type"
            style="@style/Collections.Creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginRight="4dp"
            android:text="@string/collections_recently_played_profile" />

    </RelativeLayout>

</FrameLayout>
