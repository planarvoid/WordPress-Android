<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.soundcloud.android"
              android:background="@drawable/bg_rec"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <ScrollView android:id="@+id/ScrollView01"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:paddingTop="5dip">

        <RelativeLayout android:id="@+id/input_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent">
            <FrameLayout android:id="@+id/share_user_layout"
                         android:layout_height="wrap_content"
                         android:layout_width="fill_parent"
                         android:layout_alignParentTop="true"
                        android:paddingBottom="5dip"/>

            <com.soundcloud.android.view.create.RecordingMetaData android:id="@+id/metadata_layout"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_below="@id/share_user_layout"
                            android:layout_alignWithParentIfMissing="true" />

            <RadioGroup android:id="@+id/rdo_privacy"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="false"
                            android:layout_marginTop="5dip"
                            android:layout_below="@+id/metadata_layout">

                <RadioButton android:id="@+id/rdo_public"
                             android:checked="true"
                             android:text="@string/sc_upload_public"
                             android:layout_weight="1"
                             style="@style/txt_record_rdo"
                             android:layout_width="wrap_content"/>

                <RadioButton android:id="@+id/rdo_private"
                             android:checked="false"
                             android:text="@string/sc_upload_private"
                             android:layout_weight="1"
                             style="@style/txt_record_rdo"
                             android:layout_width="wrap_content"/>
            </RadioGroup>

            <TextView android:id="@+id/txt_record_options"
                      android:background="#474747"
                      android:layout_width="fill_parent"
                      style="@style/txt_record_share_options"
                      android:gravity="left"
                      android:padding="5dip"
                      android:text="@string/sc_upload_sharing_options_public"
                      android:layout_below="@id/rdo_privacy"
                      android:layout_height="wrap_content"/>

            <View android:id="@+id/share_options_separator"
                  android:background="@color/recordUploadBorder"
                  android:layout_width="fill_parent"
                  android:layout_below="@id/txt_record_options"
                  android:layout_height="1dip"/>
            <!-- sharing -->
            <com.soundcloud.android.view.SafeViewFlipper
                  android:id="@+id/vfSharing"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_below="@+id/share_options_separator">

                <com.soundcloud.android.view.create.ConnectionList
                      android:id="@+id/connectionList"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                           <RelativeLayout android:id="@+id/btn_add_emails"
                                android:focusable="true"
                                android:clickable="true"
                                android:layout_width="fill_parent"
                                android:layout_height="50dip">

                               <TextView android:id="@+id/txt_with_access"
                                        android:layout_alignParentLeft="true"
                                        style="@style/txt_record_email_access_gray"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="@string/sc_upload_with_access"
                                        android:layout_centerVertical="true" />
                                 <TextView android:id="@+id/txt_with_access_values"
                                          android:layout_alignParentRight="true"
                                          style="@style/txt_record_email_access"
                                          android:text="@string/sc_upload_only_you"
                                          android:layout_height="wrap_content"
                                          android:layout_width="wrap_content"
                                          android:layout_centerVertical="true" />
                           </RelativeLayout>

                          <View android:id="@+id/share_access_separator"
                                android:background="@color/recordUploadBorder"
                                android:layout_width="fill_parent"
                                android:layout_below="@id/btn_add_emails" android:layout_height="1dip"/>

                          <com.soundcloud.android.view.create.AccessList
                                  android:layout_below="@id/share_access_separator"
                                  android:id="@+id/accessList"
                                  android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"/>

                </RelativeLayout>
            </com.soundcloud.android.view.SafeViewFlipper>
        </RelativeLayout>
    </ScrollView>
    <com.soundcloud.android.view.ButtonBar android:id="@+id/bottom_bar"
                                                   style="@style/rec_button_bar"
                                                   app:button_background="@drawable/btn_transparent_bg_states"
                                                   app:separator_color="@color/recButtonBarSeparator"/>
</LinearLayout>
