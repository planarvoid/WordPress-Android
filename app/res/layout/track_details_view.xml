<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/creator"
            style="@style/ListItemText.SecondaryText"/>

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@id/title"
            style="@style/ListItemText.PrimaryText"/>

    <View android:id="@+id/artwork_divider"
          style="@style/Divider"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/description"
              style="@style/TrackInfoText.Description"
              android:layout_margin="16dp"/>

    <FrameLayout android:id="@+id/loading"
                 android:layout_width="fill_parent"
                 android:layout_height="?android:attr/listPreferredItemHeight">

        <ProgressBar android:indeterminateOnly="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>