<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="5dip"
              android:gravity="center_vertical"
              android:paddingTop="5dip">

    <ImageView android:id="@+id/icon"
               android:layout_width="@dimen/search_list_icon_width"
               android:layout_height="@dimen/search_list_icon_height"
               android:layout_marginLeft="@dimen/list_icon_margin_left"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:src="@drawable/cloud_no_logo_sm"
               android:scaleType="centerInside"/>

    <TextView android:id="@+id/username"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_width="0dp"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:textColor="@color/white"
              android:maxLines="1"
              android:ellipsize="marquee"
              android:text="@string/track"/>

    <ImageView
            android:id="@+id/iv_search_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:padding="5dp"/>

</LinearLayout>
