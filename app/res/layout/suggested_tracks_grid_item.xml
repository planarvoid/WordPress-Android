<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:sc="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.soundcloud.android.view.adapter.SuggestedTrackImageView android:id="@+id/suggested_track_image"
                                                                 android:src="@drawable/placeholder_cells"
                                                                 sc:focalPoint=".45"
                                                                 style="@style/ExploreGridItemImageView"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/suggested_track_image"
                    android:layout_alignTop="@id/suggested_track_image"
                    android:padding="13dp">

        <LinearLayout style="@style/ExploreGridItemTextHolder">

            <com.soundcloud.android.view.tour.JaggedTextView android:id="@+id/title"
                                                             style="@style/BlackOverlayText.Regular.Title"/>
            <com.soundcloud.android.view.tour.JaggedTextView android:id="@+id/username"
                                                             style="@style/BlackOverlayText.RegularSubtext"/>
        </LinearLayout>

        <TextView android:id="@+id/genre"
                  android:layout_toLeftOf="@+id/playcount"
                  style="@style/ExploreTrackGenre"/>

        <TextView android:id="@id/playcount"
                  style="@style/ExploreTrackPlaycount"/>

    </RelativeLayout>

    <ImageView style="@style/ExploreTrackGridItemSelector"
               android:layout_alignBottom="@id/suggested_track_image"
               android:layout_alignTop="@id/suggested_track_image"/>

</RelativeLayout>

