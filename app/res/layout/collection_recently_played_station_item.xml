<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collections_recently_played_item"
    style="@style/Collections.BucketCarouselCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:ignore="UselessParent">

        <FrameLayout
            android:id="@+id/artwork_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="150dp">

            <ImageView
                android:id="@+id/artwork"
                style="@style/Stations.ItemArtwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                tools:background="@color/ad_default_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_station_indicator" />
        </FrameLayout>

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/Collections.ItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/artwork_container"
            android:layout_marginRight="4dp" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recently_played_type"
            style="@style/Collections.Creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginRight="4dp" />

        <com.soundcloud.android.view.OverflowAnchorImageView
            android:id="@+id/overflow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_playlist_menu"
            android:background="?attr/selectableItemBackground" />

    </RelativeLayout>

</FrameLayout>
