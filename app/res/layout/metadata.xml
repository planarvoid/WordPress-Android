<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
    <FrameLayout android:id="@+id/artwork_layout"
                 android:layout_height="100dip"
                 android:layout_width="100dip"
                 android:layout_marginLeft="5dip">
        <TextView android:id="@+id/txt_artwork_bg"
                  android:layout_height="fill_parent"
                  android:background="@drawable/rec_upload_image_bg"
                  android:layout_width="fill_parent"
                  style="@style/txt_record_add_image"
                  android:clickable="true"
                  android:gravity="center"
                  android:padding="10dip"
                  android:text="@string/sc_upload_add_image"/>
        <ImageView android:id="@+id/artwork"
                   android:visibility="gone"
                   android:layout_height="100dip"
                   android:layout_width="100dip"
                   android:scaleType="centerCrop"
                   android:clickable="true"/>
    </FrameLayout>
    <TextView android:id="@+id/where"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/artwork_layout"
              android:background="@drawable/rec_upload_text_bg"
              android:layout_marginLeft="10dip"
              android:layout_marginRight="10dip"
              android:layout_width="fill_parent"
              android:singleLine="true"
              android:ellipsize="end"
              style="@style/txt_record_input"
              android:gravity="left"
              android:clickable="true"
              android:fadingEdge="horizontal"
              android:fadeScrollbars="true"
              android:hint="@string/where_hint"
              android:layout_alignBottom="@+id/artwork_layout"/>

    <EditText android:id="@+id/what"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/artwork_layout"
              android:background="@drawable/rec_upload_text_bg"
              android:layout_alignParentTop="true"
              android:layout_alignWithParentIfMissing="true"
              android:layout_marginLeft="10dip"
              android:layout_marginRight="10dip"
              android:layout_width="fill_parent"
              android:singleLine="true"
              android:ellipsize="end"
              android:textCursorDrawable="@null"
              style="@style/txt_record_input"
              android:gravity="left"
              android:inputType="textCapSentences"
              android:hint="@string/what_hint"/>
</merge>
