<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:sc="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.soundcloud.android.view.ParallaxImageView android:id="@+id/image"
                                                   android:src="@drawable/placeholder_cells"
                                                   sc:focalPoint=".45"
                                                   style="@style/GridItemImageView" />

    <com.soundcloud.android.view.JaggedTextView android:id="@+id/username"
                                                android:layout_above="@+id/title"
                                                android:layout_marginLeft="@dimen/grid_item_padding"
                                                style="@style/BlackOverlayText.RegularSubtext.Grid"/>

    <com.soundcloud.android.view.JaggedTextView android:id="@+id/title"
                                                android:layout_marginLeft="@dimen/grid_item_padding"
                                                android:layout_marginRight="@dimen/grid_item_padding"
                                                android:layout_marginBottom="@dimen/grid_item_padding"
                                                android:layout_marginTop="4dp"
                                                android:layout_alignBottom="@id/image"
                                                style="@style/BlackOverlayText.Regular.Grid" />

    <TextView android:id="@+id/tag"
              android:layout_below="@id/image"
              android:layout_toLeftOf="@+id/extra_info"
              style="@style/GridItemTag" />

    <TextView android:id="@id/extra_info"
              android:layout_below="@id/image"
              style="@style/GridItemExtra" />

    <View
        android:layout_alignParentBottom="true"
        style="@style/Divider" />

</RelativeLayout>

