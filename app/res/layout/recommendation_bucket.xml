<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/Recommendation.RecommendationBucket"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Divider.Section" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/recommendations_header"
        style="@style/Recommendation.DiscoverNewTracks"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommendations_cell_text_recommended_height"
        android:layout_marginLeft="@dimen/recommendations_cell_text_recommended_margin"
        android:layout_marginRight="@dimen/recommendations_cell_text_recommended_margin"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/recommendations_cell_text_recommended_padding_bottom"
        android:paddingLeft="@dimen/discovery_cell_text_padding"
        android:paddingRight="@dimen/discovery_cell_text_padding"
        android:paddingTop="@dimen/recommendations_cell_text_recommended_padding_top"
        android:text="@string/recommendation_seeds_header"
        android:visibility="gone" />

    <View style="@style/Divider.Item" android:id="@+id/recommendations_header_divider" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/reason"
        style="@style/Recommendation.ReasonText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/recommendations_cell_text_recommended_margin"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/discovery_cell_text_padding"
        android:paddingRight="@dimen/discovery_cell_text_padding"
        tools:text="Because you liked bla bla bla" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommendations_carousel"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:layout_marginBottom="24dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

    <View style="@style/Divider.Item" android:id="@+id/recommendations_view_all_divider" />

    <RelativeLayout
        android:id="@+id/recommendations_view_all"
        style="@style/ViewAllContainer"
        android:visibility="gone">

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recommendations_view_all_text"
            style="@style/ViewAllText"
            android:text="@string/recommendation_view_all" />

    </RelativeLayout>

    <View style="@style/Divider.Section" />

    <View
        android:id="@+id/recommendation_separator"
        style="@style/Divider.Background" />

</LinearLayout>
