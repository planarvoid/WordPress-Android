<?xml version="1.0" encoding="utf-8"?>
<com.soundcloud.android.onboarding.auth.SignupMethodLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout style="@style/SignUp.Content">

        <include layout="@layout/auth_buttons_social"/>

        <com.soundcloud.android.view.CustomFontButton
            android:id="@+id/signup_with_email"
            style="@style/Onboarding.EmailSignUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_button" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/txt_msg"
            style="@style/SignUp.Info"
            android:layout_marginBottom="20dp"
            android:text="@string/onboarding_email_use_notice" />
    </LinearLayout>
</com.soundcloud.android.onboarding.auth.SignupMethodLayout>
