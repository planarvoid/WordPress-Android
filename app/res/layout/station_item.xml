<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/station_item"
    style="@style/Stations.Item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_weight="1"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.soundcloud.android.view.SquareImageView
            android:id="@+id/artwork"
            style="Stations.ItemArtwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/Stations.ItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Some station"/>

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/type"
            style="@style/Stations.ItemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            tools:text="Track Station" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/now_playing"
            style="@style/Stations.ItemNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ads_now_playing"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
