<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    style="@style/SettingsContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="2dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/title_storage_usage"
        style="@style/SettingsTitle"
        android:text="@string/pref_offline_storage_usage" />

    <TextView
        android:id="@+id/offline_storage_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/title_storage_usage"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary" />

    <com.soundcloud.android.settings.UsageBarView
        android:id="@+id/offline_storage_usage_bars"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/title_storage_usage"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/offline_storage_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/offline_storage_usage_bars">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <View
                android:id="@+id/offline_storage_legend_other_box"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/usage_bar_other" />

            <TextView
                android:id="@+id/offline_storage_legend_other_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/offline_storage_legend_other_box"
                android:paddingLeft="4dp"
                android:text="@string/pref_offline_used_by_other_apps"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/offline_storage_legend_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/offline_storage_legend_other_label"
                android:layout_below="@id/offline_storage_legend_other_label"
                android:paddingLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <View
                android:id="@+id/offline_storage_legend_used_box"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/usage_bar_used" />

            <TextView
                android:id="@+id/offline_storage_legend_used_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/offline_storage_legend_used_box"
                android:paddingLeft="4dp"
                android:text="@string/pref_offline_used"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/offline_storage_legend_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/offline_storage_legend_used_label"
                android:layout_below="@id/offline_storage_legend_used_label"
                android:paddingLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <View
                android:id="@+id/offline_storage_legend_limit_box"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/usage_bar_limit" />

            <TextView
                android:id="@+id/offline_storage_legend_limit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/offline_storage_legend_limit_box"
                android:paddingLeft="4dp"
                android:text="@string/pref_offline_limit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/offline_storage_legend_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/offline_storage_legend_limit_label"
                android:layout_below="@id/offline_storage_legend_limit_label"
                android:paddingLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        style="@style/SettingsTitle"
        android:layout_below="@id/offline_storage_legend"
        android:text="@string/pref_offline_storage_limit" />

    <TextView
        android:id="@+id/summary"
        style="@style/SettingsSummary"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:text="@string/pref_offline_storage_limit_description" />

    <TextView
        android:id="@+id/offline_storage_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/summary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/sc_orange"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/offline_storage_limit_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:progress="50" />

</RelativeLayout>