<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.soundcloud.android"
              android:background="@drawable/bg_rec"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <ScrollView android:id="@+id/ScrollView01"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:paddingTop="5dip">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <include layout="@layout/share_header"
                     android:id="@+id/share_header_txt"/>
            <RelativeLayout
                    android:id="@+id/track_info_holder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dip"
                    android:padding="10dip"
                    android:layout_below="@id/share_header_txt"
                    android:background="@color/white">
                <ImageView android:id="@+id/icon"
                           android:layout_alignParentLeft="true"
                           android:layout_width="@dimen/share_progress_icon_width"
                           android:layout_height="@dimen/share_progress_icon_height"
                           android:gravity="center_vertical"
                           android:layout_marginRight="10dip"
                           android:layout_marginBottom="10dip"
                           android:background="@drawable/artwork_player"
                           android:scaleType="centerCrop"/>
                <TextView android:id="@+id/track"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignTop="@id/icon"
                          android:layout_alignBottom="@id/icon"
                          android:gravity="center_vertical"
                          style="@style/txt_list_main"
                          android:text="@string/track"
                          android:layout_toRightOf="@id/icon"/>
                <RelativeLayout android:id="@+id/uploading_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/icon"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip">

                    <LinearLayout android:id="@+id/progress_layout"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="10dip"
                                  android:layout_marginBottom="10dip"
                                  android:layout_alignParentLeft="true"
                                  android:layout_marginRight="10dp"
                                  android:layout_toLeftOf="@+id/close_icon"
                                  android:baselineAligned="false">
                        <LinearLayout android:layout_width="0dp"
                                      android:layout_weight="1"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical">
                            <TextView android:id="@+id/txt_progress_processing"
                                      android:layout_marginBottom="5dp"
                                      android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      style="@style/txt_upload_monitor_events"
                                      android:gravity="center_vertical"
                                      android:textStyle="normal"
                                      android:singleLine="true"
                                      android:text="@string/uploader_event_processing"/>
                            <ProgressBar android:id="@+id/progress_bar_processing"
                                         android:layout_height="wrap_content"
                                         android:layout_width="fill_parent"
                                         android:indeterminate="false"
                                         style="@style/ScProgressBarRoundLeft"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp"
                                      android:layout_weight="1"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical">
                            <TextView android:id="@+id/txt_progress_uploading"
                                      android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="5dp"
                                      android:layout_marginBottom="5dp"
                                      style="@style/txt_upload_monitor_events_inactive"
                                      android:gravity="center_vertical"
                                      android:textStyle="normal"
                                      android:singleLine="true"
                                      android:text="@string/uploader_event_not_yet_uploading"/>
                            <ProgressBar android:id="@+id/progress_bar_uploading"
                                         android:layout_width="fill_parent"
                                         android:layout_height="wrap_content"
                                         android:indeterminate="false"
                                         style="@style/ScProgressBarRoundRight"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView android:id="@+id/close_icon"
                               android:layout_alignParentRight="true"
                               android:layout_alignBottom="@id/progress_layout"
                               android:src="@drawable/rec_close"
                               android:scaleType="center"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/finished_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/icon"
                                android:layout_marginBottom="10dip"
                                android:visibility="gone"
                                android:layout_marginTop="10dip">
                    <ImageView android:id="@+id/result_icon"
                               android:layout_centerHorizontal="true"
                               android:src="@drawable/success"
                               android:scaleType="center"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/result_message"
                              android:layout_below="@id/result_icon"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              style="@style/txt_list_sub"
                              android:gravity="center"
                              android:textStyle="normal"
                              android:text="@string/share_success_message"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <com.soundcloud.android.view.ButtonBar android:id="@+id/bottom_bar"
                                           style="@style/rec_button_bar"
                                           app:button_background="@drawable/btn_transparent_bg_states"
                                           app:separator_color="@color/recButtonBarSeparator"/>
</LinearLayout>