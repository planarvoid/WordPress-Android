<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/search_header_padding_topbottom"
                android:paddingBottom="@dimen/search_header_padding_topbottom"
                android:paddingLeft="@dimen/search_header_padding_leftright"
                android:paddingRight="@dimen/search_header_padding_leftright">

    <LinearLayout android:id="@+id/focus_catcher"
                  android:focusable="true"
                  android:focusableInTouchMode="true"
                  android:layout_width="0px"
                  android:layout_height="0px"/>

    <com.soundcloud.android.view.ClearText
            android:id="@+id/query"
            android:nextFocusUp="@id/query"
            android:nextFocusLeft="@id/query"
            style="@style/txt_search"
            android:textColor="@drawable/txt_light_states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:drawableRight="@drawable/ic_tab_search"
            android:layout_alignParentLeft="true"
            android:duplicateParentState="true"
            android:singleLine="true"
            android:ellipsize="end"/>

</RelativeLayout>