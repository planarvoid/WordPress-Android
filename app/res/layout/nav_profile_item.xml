<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:soundcloud="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <com.soundcloud.android.view.AspectRatioImageView android:id="@+id/avatar"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:scaleType="centerCrop"
                                                        soundcloud:aspectRatioEnabled="true"
                                                        soundcloud:aspectRatio=".55"
                                                        soundcloud:dominantMeasurement="width"/>

    <com.soundcloud.android.view.CustomFontTextView android:id="@+id/username"
                                                    style="@style/BlackOverlayText.Regular"
                                                    android:layout_marginLeft="16dp"
                                                    android:layout_above="@+id/followers_count"/>

    <com.soundcloud.android.view.CustomFontTextView android:id="@id/followers_count"
                                                    style="@style/BlackOverlayText.RegularSubtext"
                                                    android:layout_alignBottom="@id/avatar"
                                                    android:layout_marginLeft="16dp"
                                                    android:layout_marginBottom="12dp"
                                                    android:drawableLeft="@drawable/drawer_follower"
                                                    android:drawablePadding="3dp"/>

    <View style="@style/GridItemSelector"
          android:layout_alignBottom="@id/avatar"
          android:layout_alignTop="@id/avatar"/>

</RelativeLayout>