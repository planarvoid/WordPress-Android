<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/track_info_row"
                style="@style/ListItemContainer"
                android:background="@drawable/record_list_item_bg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
    <com.soundcloud.android.view.OptimisedImageView style="@style/PlayableIcon"
               android:id="@id/icon"
               android:background="@drawable/artwork_badge_onhold"/>

    <ViewStub android:id="@id/processing_progress_stub"
              android:inflatedId="@id/processing_progress"
              android:layout="@layout/indeterminate_progress"
              android:layout_alignLeft="@id/icon"
              android:layout_alignRight="@id/icon"
              android:layout_alignTop="@id/icon"
              android:layout_alignBottom="@id/icon"
              android:layout_margin="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_alignTop="@id/icon"
                  android:layout_toRightOf="@id/icon"
                  android:layout_marginLeft="@dimen/list_text_margin_left"
                  android:layout_alignParentRight="true"
                  android:layout_alignWithParentIfMissing="true"
                  android:orientation="vertical">

        <TextView android:id="@id/playable_title"
                  style="@style/txt_list_main"
                  android:layout_marginRight="3dip"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:singleLine="true"
                  android:ellipsize="marquee"/>

        <TextView android:id="@id/playable_created_at"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:layout_marginRight="5dip"
                  android:paddingRight="0dip"
                  style="@style/txt_list_sub_secondary"/>

        <TextView android:id="@id/playable_private_indicator"
                  android:singleLine="true"
                  android:ellipsize="none"
                  android:layout_marginTop="3dip"
                  android:drawableLeft="@drawable/lock"
                  android:drawablePadding="2dp"
                  android:layout_marginRight="5dp"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/list_txt_sub_size"
                  android:layout_width="wrap_content"
                  android:text="@string/tracklist_item_shared_count_unavailable"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
