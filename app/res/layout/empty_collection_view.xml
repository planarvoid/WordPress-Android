<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center">

    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>

    <ImageView android:id="@+id/empty_state_image"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               style="@style/ErrorMessage.EmptyCollection.Image"/>

    <TextView android:id="@+id/txt_message"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              style="@style/ErrorMessage.EmptyCollection"/>

    <TextView android:id="@+id/txt_link"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:visibility="gone"
              style="@style/ErrorMessage.EmptyCollection.Link"/>

    <Button android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"
            style="@style/EmptyCollectionButton"/>

    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>
</LinearLayout>