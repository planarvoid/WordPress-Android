<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <include layout="@layout/landing_engagement" />

        <ImageView android:id="@+id/tour_logo"
                   android:layout_width="@dimen/tour_logo_dimension"
                   android:layout_height="@dimen/tour_logo_dimension"
                   android:src="@drawable/tour_logo"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="16dp" />
    </RelativeLayout>

    <include
        android:id="@+id/tour_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tour_bottom_bar_height"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_margin="16dp"
        layout="@layout/tour_buttons"/>

    <View android:id="@+id/overlay_bg"
          style="@style/SignUp.Overlay"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/overlay_holder"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
        <ScrollView style="@style/SignUp.ScrollView"
            tools:ignore="UselessParent">
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                <ViewStub android:id="@+id/login_stub"
                          android:layout="@layout/login"
                          style="@style/SignUp.Content.Stub"/>

                <ViewStub android:id="@+id/sign_up_stub"
                          android:layout="@layout/signup_method"
                          style="@style/SignUp.Content.Stub"/>

                <ViewStub android:id="@+id/sign_up_basic_stub"
                          android:layout="@layout/signup_basics"
                          style="@style/SignUp.Content.Stub"/>

                <ViewStub android:id="@+id/user_details_stub"
                          android:layout="@layout/signup_user_details"
                          style="@style/SignUp.Content.Stub"/>

                <ViewStub android:id="@+id/accept_terms_stub"
                          android:layout="@layout/accept_terms"
                          style="@style/SignUp.Content.Stub"/>
            </FrameLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
