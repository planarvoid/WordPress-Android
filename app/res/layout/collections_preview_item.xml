<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:soundcloud="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_height="16dp"
        android:layout_width="match_parent"
        android:background="@color/collections_home_background"
        android:clickable="false"
        android:focusable="false" />

    <View style="@style/Divider.Horizontal"/>

    <com.soundcloud.android.collections.CollectionPreviewView
        android:id="@+id/collection_likes_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        soundcloud:collectionTitle="@string/collections_your_liked_tracks"
        soundcloud:collectionIcon="@drawable/collections_likes_icon" />


    <com.soundcloud.android.collections.CollectionPreviewView
        android:id="@+id/collection_recent_stations_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        soundcloud:collectionIcon="@drawable/sidebar_stations_icon"
        soundcloud:collectionTitle="@string/stations_collection_title_recently_played_stations" />

    <View
        android:layout_height="16dp"
        android:layout_width="match_parent"
        android:background="@color/collections_home_background"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>

