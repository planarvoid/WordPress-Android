<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/placeholder">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/record_progress_icon_width"
        android:layout_height="@dimen/share_progress_icon_height"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/track_username"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/icon"
        android:textColor="@color/dark_gray_text" />

    <TextView
        android:id="@+id/track"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_username"
        android:layout_toRightOf="@id/icon"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/track_duration"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/track_username"
        android:layout_marginRight="16dip"
        android:textColor="@color/dark_gray_text" />
</RelativeLayout>
