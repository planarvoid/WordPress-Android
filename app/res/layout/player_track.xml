<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <com.soundcloud.android.view.adapter.TrackInfoBar
                android:id="@+id/track_info_bar"
                android:background="@color/playerControlBackground"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        <View android:id="@+id/track_info_overlay"
              android:background="#88000000"
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:layout_alignTop="@id/track_info_bar"
              android:layout_alignBottom="@id/track_info_bar"
              android:visibility="gone" />
    </RelativeLayout>
    <com.soundcloud.android.view.SafeViewFlipper android:id="@+id/vfTrackInfo"
                                                 android:layout_weight="1"
                                                 android:layout_width="fill_parent"
                                                 android:layout_height="0dp">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
            <FrameLayout android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                         android:layout_alignParentTop="true"
                         android:background="@drawable/artwork_player"
                         android:gravity="top">
                <ImageView android:layout_width="fill_parent"
                           android:layout_height="fill_parent"
                           android:id="@+id/artwork" />
                <View android:id="@+id/artwork_overlay"
                      android:background="#88000000"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:visibility="gone" />
            </FrameLayout>
            <com.soundcloud.android.view.play.WaveformController
                    android:id="@+id/waveform_controller"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"/>
            <ViewStub
                    android:id="@+id/stub_unplayable_layout"
                    android:inflatedId="@+id/unplayable_layout"
                    android:layout="@layout/unplayable_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentBottom="true"/>
            <View android:layout_width="fill_parent"
                  android:layout_height="5dip"
                  android:layout_alignParentTop="true"
                  android:background="@drawable/drop_shadow_down"/>
        </RelativeLayout>
    </com.soundcloud.android.view.SafeViewFlipper>
</merge>