<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
    <RelativeLayout android:layout_width="fill_parent"
                    android:background="@color/playerControlBackground"
                    android:layout_height="wrap_content">
        <com.soundcloud.android.view.adapter.TrackInfoBar
                android:id="@+id/track_info_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        <View android:id="@+id/track_info_clicker"
              android:background="#00000000"
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:layout_alignTop="@id/track_info_bar"
              android:layout_alignBottom="@id/track_info_bar"/>
    </RelativeLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="2dp"
          android:background="@drawable/player_track_horiz_separator_bg"/>
    <LinearLayout android:layout_height="wrap_content"
                  android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:background="@color/playerControlBackground"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent">
        <ToggleButton android:id="@+id/toggle_like"
                      style="@style/PlayerAction.ToggleButton"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="1"
                      android:drawableLeft="@drawable/ic_toggle_player_like_states"
                      android:layout_width="0dp"/>
        <ToggleButton android:id="@+id/toggle_repost"
                      style="@style/PlayerAction.ToggleButton"
                      android:layout_marginLeft="5dp"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:drawableLeft="@drawable/ic_toggle_player_repost_states"/>
        <ToggleButton android:id="@+id/toggle_comment"
                      android:layout_weight="1"
                      android:layout_marginLeft="5dp"
                      android:layout_width="0dp"
                      style="@style/PlayerAction.ToggleButton"
                      android:drawableLeft="@drawable/ic_toggle_player_comment_states"/>
        <View android:layout_width="2dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_height="fill_parent"
              android:background="@drawable/player_track_vert_separator_bg"/>
        <ImageButton android:id="@+id/btn_share"
                     android:layout_marginRight="5dp"
                     android:layout_width="50dp"
                     style="@style/PlayerAction.ShareButton"
                     android:src="@drawable/stats_share"/>
        <ToggleButton android:id="@+id/toggle_info"
                      android:textOn="@string/info"
                      android:textOff="@string/info"
                      android:drawablePadding="0dp"
                      android:layout_marginRight="10dp"
                      style="@style/PlayerAction.InfoButton"/>
    </LinearLayout>
    <com.soundcloud.android.view.SafeViewFlipper android:id="@+id/vfTrackInfo"
                                                 android:layout_weight="1"
                                                 android:layout_width="fill_parent"
                                                 android:layout_height="0dp">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
            <FrameLayout android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                         android:layout_alignParentTop="true"
                         android:background="@drawable/artwork_player"
                         android:gravity="top">
                <ImageView android:layout_width="fill_parent"
                           android:layout_height="fill_parent"
                           android:id="@+id/artwork"/>
            </FrameLayout>
            <View android:id="@+id/artwork_overlay"
                                  android:background="#88000000"
                                  android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"
                                  android:visibility="gone"/>
            <com.soundcloud.android.view.play.WaveformController
                    android:id="@+id/waveform_controller"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"/>
            <ViewStub
                    android:id="@+id/stub_unplayable_layout"
                    android:inflatedId="@+id/unplayable_layout"
                    android:layout="@layout/unplayable_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentBottom="true"/>
            <View android:layout_width="fill_parent"
                  android:layout_height="5dip"
                  android:layout_alignParentTop="true"
                  android:background="@drawable/drop_shadow_down"/>
        </RelativeLayout>
    </com.soundcloud.android.view.SafeViewFlipper>
</merge>