<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView style="@style/GoOffboarding.Background" />

    <RelativeLayout
        style="@style/GoOffboarding.Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="#bbbbbb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/offboarding_buttons"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/white_cloud"
                style="@style/GoOffboarding.Cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/offboarding_primary_text"
                style="@style/GoOffboarding.Text.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_offboarding_title" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/offboarding_secondary_text"
                style="@style/GoOffboarding.Text.SubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_offboarding_description" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offboarding_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.soundcloud.android.view.LoadingButton
                android:id="@+id/btn_offboarding_resubscribe"
                style="@style/GoOffboarding.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:actionText="@string/go_offboarding_primary_button_text"
                app:retryText="@string/go_onboarding_setup_retry" />

            <com.soundcloud.android.view.LoadingButton
                android:id="@+id/btn_offboarding_continue"
                style="@style/GoOffboarding.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:actionText="@string/go_offboarding_secondary_button_text"
                app:retryText="@string/go_onboarding_setup_retry" />

        </LinearLayout>

    </RelativeLayout>
</merge>
