<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout android:padding="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView android:id="@+id/txt_title"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:text="@string/authentication_I_forgot_my_password"
                  style="@style/txt_auth_title" />

        <EditText android:id="@+id/txt_email_address"
                  android:layout_height="wrap_content"
                  android:hint="@string/authentication_your_email_address"
                  android:layout_below="@+id/txt_title"
                  android:layout_alignLeft="@+id/txt_title"
                  android:layout_width="match_parent"
                  android:imeOptions="actionDone"
                  android:singleLine="true"
                  android:lines="1"
                  android:inputType="textEmailAddress"
                  android:textColor="@android:color/white"
                  android:textColorHint="@color/gray_text"
                  android:textCursorDrawable="@null"
                  style="@style/txt_auth_input" />

        <TextView android:id="@+id/txt_msg"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_alignLeft="@id/txt_email_address"
                  android:layout_alignRight="@id/txt_email_address"
                  android:layout_below="@id/txt_email_address"
                  android:text="@string/authentication_recover_password_msg"
                  style="@style/txt_authrec_msg" />
    </RelativeLayout>

    <Button android:id="@+id/btn_ok"
                    android:layout_alignParentBottom="true"
                    android:text="@string/authentication_recover_password_send"
                    android:textColor="@android:color/white"
                    android:background="@drawable/item_background_dark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_bar_height" />

</RelativeLayout>
