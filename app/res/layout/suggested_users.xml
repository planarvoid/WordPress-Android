<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <FrameLayout android:id="@+id/listHolder"
                 android:layout_width="match_parent"
                 android:layout_above="@+id/control_layout"
                 android:layout_alignParentTop="true"
                 android:layout_height="wrap_content"/>
    <View android:layout_width="fill_parent"
              android:layout_height="5dip"
              android:layout_above="@+id/control_layout"
              android:background="@drawable/drop_shadow_up"/>

    <RelativeLayout android:id="@+id/control_layout"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/playerControlAlphaBackground"
                    android:layout_height="@dimen/button_bar_height">

        <Button android:id="@+id/btn_done"
                android:text="@string/btn_done"
                style="@style/btn_transparent_light"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

    </RelativeLayout>
</RelativeLayout>