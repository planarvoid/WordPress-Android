<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/player_ad_artwork_view"/>
    <include layout="@layout/player_gradient"/>
    <include layout="@layout/player_footer_controls"/>
    <include layout="@layout/player_ad_expanded_header"/>

    <Button
            android:id="@+id/player_play"
            android:layout_centerInParent="true"
            style="@style/PlayerToggle"/>

    <Button
            android:id="@+id/learn_more"
            style="@style/AdButton.LearnMore"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

    <RelativeLayout
            style="@style/AdPreview"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true">

        <FrameLayout
                android:id="@+id/preview_artwork_container"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="8dp">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/preview_artwork_overlay" />

            <ImageView
                    android:id="@+id/preview_artwork"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
                android:id="@+id/skip_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            <TextView
                    android:id="@+id/time_until_skip"
                    style="@style/AdText.NextUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/skip_ad"
                    style="@style/AdText.NextUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_ad"
                    android:visibility="gone"/>

        </FrameLayout>

        <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/preview_title"
                style="@style/AdText.NextUp.Track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/preview_artwork_container"
                android:layout_toLeftOf="@id/skip_container" />

    </RelativeLayout>


</RelativeLayout>