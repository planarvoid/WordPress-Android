<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/track_info_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="center_vertical">
    <ImageView android:id="@+id/icon"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_width="@dimen/list_icon_width"
               android:layout_height="@dimen/list_icon_height"
               android:layout_marginLeft="@dimen/list_icon_margin_left"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:gravity="center_vertical"
               android:background="@drawable/avatar_badge"
               android:scaleType="centerCrop"/>
    <TextView android:id="@+id/user"
              android:layout_height="wrap_content"
              style="@style/txt_list_sub"
              android:text="@string/user"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_marginRight="3dp"
              android:layout_width="wrap_content"
              android:layout_alignTop="@id/icon"
              android:layout_toRightOf="@+id/icon"/>
    <TextView android:id="@+id/reposter"
              android:visibility="gone"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_repost_states"
              android:drawablePadding="3dp"
              style="@style/txt_list_sub"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_width="wrap_content"
              android:layout_alignTop="@id/user"
              android:layout_toRightOf="@id/user"
              android:layout_toLeftOf="@+id/created_at"/>
    <TextView android:id="@id/created_at"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/txt_list_created_at"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignTop="@id/icon"
              android:paddingLeft="0dip"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_alignParentRight="true"/>
    <TextView android:id="@+id/title"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignLeft="@id/user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/user"
              style="@style/txt_list_main"
              android:text="@string/track" />
</RelativeLayout>
