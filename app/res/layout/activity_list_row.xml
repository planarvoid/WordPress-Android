<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.soundcloud.android"
                style="@style/ListItemContainer"
                android:id="@+id/track_info_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
    <com.soundcloud.android.view.OptimisedImageView
               style="@style/PlayableIcon"
               android:id="@+id/icon"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_width="@dimen/activity_icon_width"
               android:layout_height="@dimen/activity_icon_height"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:gravity="center_vertical" />
    <com.soundcloud.android.view.CustomFontTextView
              android:id="@+id/user"
              android:layout_height="wrap_content"
              style="@style/Widget.TextView.Playable.Username"
              android:text="@string/user"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_marginRight="3dp"
              android:layout_width="wrap_content"
              android:layout_alignTop="@id/icon"
              android:layout_toRightOf="@id/icon"
              android:layout_toLeftOf="@+id/created_at"
              app:custom_font="fonts/Roboto-Regular.ttf" />
    <com.soundcloud.android.view.CustomFontTextView
              android:id="@id/created_at"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/TextAppearance.List.CreatedAt"
              android:layout_alignTop="@id/icon"
              android:paddingLeft="0dip"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_alignParentRight="true"
              app:custom_font="fonts/Roboto-Regular.ttf" />
    <com.soundcloud.android.view.CustomFontTextView
              android:id="@+id/title"
              android:layout="@id/user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/icon"
              android:layout_below="@id/user"
              style="@style/TextAppearance.List.Main"
              android:textStyle="normal"
              android:text="@string/track"
              app:custom_font="fonts/Roboto-Regular.ttf" />
</RelativeLayout>
