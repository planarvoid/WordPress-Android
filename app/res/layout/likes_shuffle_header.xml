<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:padding="@dimen/default_list_item_padding">
    <TextView android:id="@+id/shuffle_txt"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              style="@style/TextAppearance.List.Main"/>

    <Button android:id="@+id/shuffle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.List.Main"
            android:layout_marginLeft="10dp"
            android:enabled="false"
            android:text="@string/shuffle"
            android:drawableLeft="@drawable/ic_action_shuffle"
            android:drawablePadding="8dp"
            android:paddingLeft="@dimen/default_list_item_padding"
            android:paddingRight="@dimen/default_list_item_padding"
            android:background="@drawable/btn_default_states"/>
</LinearLayout>