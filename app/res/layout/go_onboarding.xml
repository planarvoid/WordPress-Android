<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/go_onboarding_background"
        style="@style/GoOnboarding.Background" />

    <com.soundcloud.android.view.SafeViewPager
        android:id="@+id/go_onboarding_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.soundcloud.android.view.pageindicator.CirclePageIndicator
        android:id="@+id/go_onboarding_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GoOnboardingPageIndicator"
        android:padding="2dp"
        android:layout_above="@+id/btn_go_setup_start" />

    <com.soundcloud.android.view.LoadingButton
        android:id="@+id/btn_go_setup_start"
        style="@style/GoOnboarding.PrimaryButton.Transparent"
        android:layout_margin="20dp"
        android:layout_width="@dimen/go_onboarding_text_width"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:actionText="@string/go_onboarding_start"
        app:retryText="@string/go_onboarding_retry" />

</RelativeLayout>
