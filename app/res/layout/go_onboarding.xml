<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/landing_background_image"
        style="@style/GoOnboarding.WelcomeBackground" />

    <LinearLayout
        style="@style/GoOnboarding.Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.soundcloud.android.view.CustomFontTextView
            style="@style/GoOnboarding.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_onboarding_header" />

        <com.soundcloud.android.view.CustomFontTextView
            style="@style/GoOnboarding.Text.SubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_onboarding_subtext" />

        <com.soundcloud.android.view.LoadingButtonLayout
            android:id="@+id/btn_go_setup_offline"
            style="@style/GoOnboarding.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:label_action_text="@string/go_onboarding_setup_offline"
            app:label_retry_text="@string/go_onboarding_setup_retry" />

        <com.soundcloud.android.view.LoadingButtonLayout
            android:id="@+id/btn_go_setup_later"
            style="@style/GoOnboarding.SecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:label_action_text="@string/go_onboarding_setup_later"
            app:label_retry_text="@string/go_onboarding_setup_retry" />

    </LinearLayout>
</FrameLayout>
