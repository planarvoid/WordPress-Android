<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/landing_background_image"
        style="@style/GoOnboarding.WelcomeBackground"
        tools:background="#bbbbbb" />

    <RelativeLayout
        style="@style/GoOnboarding.WelcomeContainer"
        android:id="@+id/go_onboarding_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/go_onboarding_header"
            style="@style/GoOnboarding.Text.Header"
            android:layout_width="@dimen/go_onboarding_header_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/go_onboarding_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tooltip_image"
                style="@style/GoOnboarding.Tooltip"
                android:layout_width="@dimen/go_onboarding_tooltip_size"
                android:layout_height="@dimen/go_onboarding_tooltip_size"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/go_onboarding_welcome_icon" />

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/go_onboarding_title"
                style="@style/GoOnboarding.Text.Title"
                android:layout_width="@dimen/go_onboarding_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/go_onboarding_title" />

            <com.soundcloud.android.view.CustomFontTextView
                style="@style/GoOnboarding.Text.SubText"
                android:layout_width="@dimen/go_onboarding_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/go_onboarding_subtext" />
        </LinearLayout>

        <com.soundcloud.android.view.LoadingButton
            android:id="@+id/btn_go_setup_start"
            style="@style/GoOnboarding.PrimaryButton"
            android:layout_width="@dimen/go_onboarding_text_width"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:actionText="@string/go_onboarding_start"
            app:retryText="@string/go_onboarding_retry" />

    </RelativeLayout>
</merge>
