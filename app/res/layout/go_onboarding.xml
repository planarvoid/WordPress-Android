<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/landing_background_image"
        style="@style/GoOnboarding.Background" />

    <LinearLayout
        style="@style/GoOnboarding.Overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.soundcloud.android.view.CustomFontTextView
            style="@style/GoOnboarding.Text.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_onboarding_header" />

        <com.soundcloud.android.view.CustomFontTextView
            style="@style/GoOnboarding.Text.SubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_onboarding_subtext" />

        <com.soundcloud.android.view.LoadingButtonLayout
            android:id="@+id/btn_go_setup_offline"
            style="@style/GoOnboarding.SetUpOfflineButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:label_text="@string/go_onboarding_setup_offline" />

        <com.soundcloud.android.view.LoadingButtonLayout
            android:id="@+id/btn_go_setup_later"
            style="@style/GoOnboarding.SetUpOfflineLaterButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:label_text="@string/go_onboarding_setup_later" />

    </LinearLayout>
</RelativeLayout>
