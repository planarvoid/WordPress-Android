<?xml version="1.0" encoding="utf-8"?>
<com.soundcloud.android.view.adapter.NavDrawerItem xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="20dp"
                                                   android:minHeight="50dp"
                                                   android:orientation="horizontal"
                                                   android:gravity="center_vertical">

    <com.soundcloud.android.view.CheckableImageView android:id="@+id/nav_item_image"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginRight="15dp"/>

    <TextView android:id="@+id/nav_item_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:textColor="#555"
              android:textSize="18sp"/>

</com.soundcloud.android.view.adapter.NavDrawerItem>