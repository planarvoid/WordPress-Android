<?xml version="1.0" encoding="utf-8"?>
<!-- representing a connection to a service (twitter,facebook,...) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="?android:attr/listPreferredItemHeight"
              android:layout_width="match_parent"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:gravity="center_vertical">

    <ImageView android:id="@+id/service_icon"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:padding="5dip"/>

    <TextView android:id="@+id/display_name"
              style="@style/txt_record_connections"
              android:layout_height="wrap_content"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:paddingLeft="5dip"/>

    <CheckBox android:id="@+id/post_publish"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:paddingRight="5dip"/>

    <TextView android:id="@+id/txt_configure"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:paddingRight="5dip"
              android:text="@string/configure"
              style="@style/txt_record_connections"
              android:visibility="gone"/>
</LinearLayout>