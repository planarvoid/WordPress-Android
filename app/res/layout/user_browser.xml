<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:baselineAligned="false"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:id="@+id/container">

    <RelativeLayout android:background="@color/playerControlBackground"
                  style="@style/ListItemContainer"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_width="fill_parent">

        <ImageView android:id="@+id/user_image"
                android:layout_width="@dimen/user_page_icon_size"
                android:layout_height="@dimen/user_page_icon_size"
                android:layout_marginRight="@dimen/list_icon_margin_right"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar_badge_large"
                android:gravity="top"/>
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/list_text_margin_left"
                        android:layout_alignTop="@id/user_image"
                        android:layout_toRightOf="@id/user_image"
                        android:layout_toLeftOf="@+id/toggleFollowingHolder">

            <TextView android:id="@+id/username"
                      android:layout_alignParentTop="true"
                      android:layout_width="wrap_content"
                      style="@style/TextAppearance.List.Main"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:singleLine="true"
                      android:ellipsize="end" />

            <TextView android:id="@+id/fullname"
                      android:layout_below="@id/username"
                      android:layout_width="wrap_content"
                      style="@style/TextAppearance.List.Sub"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@id/username"
                      android:paddingRight="5dip"/>
            <RelativeLayout
                    android:id="@+id/stats"
                    android:layout_below="@id/fullname"
                    android:layout_width="wrap_content"
                    android:paddingTop="3dip"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/fullname"
                    android:layout_alignParentRight="true">

                <TextView android:layout_width="wrap_content"
                          android:drawableLeft="@drawable/stats_sounds"
                          android:drawablePadding="3dip"
                          android:layout_height="wrap_content"
                          android:id="@+id/tracks"
                          android:text=""
                          android:layout_alignParentLeft="true"
                          style="@style/TextAppearance.List.Sub.Secondary"/>
                <View style="@style/stat_pipe"
                      android:background="?android:attr/listDivider"
                      android:layout_toRightOf="@+id/tracks"
                      android:layout_alignBottom="@+id/tracks"
                      android:layout_alignTop="@+id/tracks"
                      android:layout_height="0dp"
                      android:layout_width="1px"
                      android:id="@+id/vr_stats"/>
                <TextView android:layout_width="wrap_content"
                          android:drawableLeft="@drawable/stats_followers"
                          android:drawablePadding="3dip"
                          android:layout_height="wrap_content"
                          android:id="@+id/followers"
                          android:text=""
                          android:layout_toRightOf="@id/vr_stats"
                          android:layout_alignWithParentIfMissing="true"
                          style="@style/TextAppearance.List.Sub.Secondary"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@id/toggleFollowingHolder"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignTop="@id/user_image"
                                    android:layout_alignBottom="@id/user_image"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp">
                        <ToggleButton
                                android:id="@+id/toggle_btn_follow"
                                android:layout_width="wrap_content"
                                android:textOn="@string/btn_following"
                                android:textOff="@string/btn_follow"
                                style="@style/UserBrowser.ToggleButton"/>
                    </RelativeLayout>
    </RelativeLayout>
    <com.viewpagerindicator.TitlePageIndicator
            android:background="@color/playerControlBackground"
            android:id="@+id/indicator"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            />
    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
</LinearLayout>
