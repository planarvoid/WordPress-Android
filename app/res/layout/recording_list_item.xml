<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/ListItemLayout"
                android:background="@drawable/record_list_item_bg">

    <include layout="@layout/sound_list_item_views"/>

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@id/list_item_right_info"
            style="@style/ListItemText.Numeric"
            android:layout_alignTop="@id/image"
            android:layout_alignParentRight="true"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/image"
                  android:layout_below="@id/list_item_subheader"
                  android:layout_marginTop="4dp"
                  android:layout_marginLeft="12dp">

        <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/private_indicator"
                style="@style/ListPrivateIndicator"
                android:drawableLeft="@drawable/stats_private"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"/>

        <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/time_since_recorded"
                style="@style/ListItemText.Numeric"
                android:textColor="@color/record_list_item_text"/>
    </LinearLayout>
</RelativeLayout>