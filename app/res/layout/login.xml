<?xml version="1.0" encoding="utf-8"?>
<com.soundcloud.android.onboarding.auth.LoginLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
    <LinearLayout style="@style/SignUp.Content">

        <include layout="@layout/auth_buttons_social"/>

        <TextView style="@style/SignUp.Header"
                  android:text="@string/tour_login_header"
                  android:layout_marginTop="20dp"
                  android:layout_marginBottom="20dp"/>

        <TableLayout style="@style/SignUp.LoginForm">
            <TableRow style="@style/SignUp.LabelRow">
                <TextView style="@style/SignUp.Label"
                          android:text="@string/email"/>
                <AutoCompleteTextView android:id="@+id/auto_txt_email_address"
                                      android:hint="@string/authentication_your_email_address"
                                      android:requiresFadingEdge="horizontal"
                                      style="@style/SignUp.EmailEntry"/>
            </TableRow>

            <TableRow style="@style/SignUp.SeparatorRow">
                <View style="@style/SignUp.SeparatorView"/>
            </TableRow>

            <TableRow style="@style/SignUp.LabelRow">
                <TextView style="@style/SignUp.Label"
                          android:text="@string/password"/>

                <com.soundcloud.android.view.ClearText style="@style/SignUp.PasswordEntry"
                                                       android:requiresFadingEdge="horizontal"
                                                       android:id="@+id/txt_password"
                                                       android:hint="@string/authentication_your_password"
                                                       android:imeOptions="actionDone"/>
            </TableRow>
        </TableLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/tour_buttons_height"
                      android:layout_marginTop="10dip">
            <Button style="@style/Tour.CancelButton"
                    android:id="@+id/btn_cancel"
                    android:text="@string/cancel"
                    android:layout_height="@dimen/tour_buttons_height"
                    android:layout_marginRight="10dip"/>

            <Button style="@style/Tour.NextButton"
                    android:id="@+id/btn_login"
                    android:text="@string/done"
                    android:layout_height="@dimen/tour_buttons_height"/>
        </LinearLayout>

        <TextView style="@style/SignUp.Info"
                  android:id="@+id/txt_i_forgot_my_password"
                  android:text="@string/authentication_I_forgot_my_password"/>
    </LinearLayout>

</com.soundcloud.android.onboarding.auth.LoginLayout>
