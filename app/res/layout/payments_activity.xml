<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">

    <TextView
            android:id="@+id/subscribe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_subscription_buy_title" />

    <TextView
            android:id="@+id/subscribe_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subscribe_title"
            android:layout_marginTop="8dp"
            android:text="@string/pref_subscription_buy_summary" />

    <Button
            android:id="@+id/subscription_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subscribe_summary"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="@string/subscribe_buy" />

</RelativeLayout>