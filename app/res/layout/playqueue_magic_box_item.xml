<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/play_queue_item_magic_box"
    style="@style/PlayQueue.MagicBox"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/queue_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/dark_bg">

    <LinearLayout
        android:id="@+id/auto_play_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/station_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:src="@drawable/ic_station" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/toggle_auto_play_label"
            style="@style/PlayQueue.AutoPlaySwitchLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_queue_header_auto_play_toggle" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/toggle_auto_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:theme="@style/Theme.PlayQueueSwitch" />
    </LinearLayout>

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/toggle_auto_play_description"
        style="@style/PlayQueue.MagicBoxDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_queue_header_magic_box_subtitle" />

</LinearLayout>
