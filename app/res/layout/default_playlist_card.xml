<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/playlist_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.soundcloud.android.view.ParallaxImageView
                android:id="@id/image"
                style="@style/Cards.Image.Playlist" />

            <com.soundcloud.android.view.JaggedTextView
                android:id="@id/creator"
                style="@style/Cards.ArtistText"
                android:layout_alignTop="@id/image"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                tools:text="Artist" />

            <com.soundcloud.android.view.JaggedTextView
                android:id="@id/title"
                style="@style/Cards.TitleText"
                android:layout_below="@id/creator"
                tools:text="Playlist Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/circle_playlist_tracks_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/track_count"
                    style="@style/Cards.PlaylistTracks.Count"
                    tools:text="12" />

                <TextView
                    android:id="@+id/tracks_text"
                    style="@style/Cards.PlaylistTracks.Text"
                    tools:text="TRACKS" />

            </LinearLayout>

        </RelativeLayout>

        <include layout="@layout/default_card_footer" />

    </LinearLayout>

</FrameLayout>
