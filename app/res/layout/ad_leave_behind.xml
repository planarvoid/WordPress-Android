<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/ad_overlay_padding"
                android:paddingRight="@dimen/ad_overlay_padding"
                android:clickable="true"
                android:animateLayoutChanges="true">

    <FrameLayout
            android:id="@+id/leave_behind_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/leave_behind_image_holder"
            android:visibility="gone">

        <Button
                style="@style/AdOverlayClose"
                android:layout_marginBottom="@dimen/ad_overlay_padding"
                android:layout_gravity="bottom|right"/>
    </FrameLayout>

    <FrameLayout android:id="@+id/leave_behind_image_holder"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:foreground="@drawable/ad_overlay_selector"
                 android:clickable="true"
                 android:layout_alignParentBottom="true">

        <com.soundcloud.android.view.AspectRatioImageView
                android:id="@+id/leave_behind_image"
                android:visibility="gone"
                style="@style/LeaveBehindImage"/>

    </FrameLayout>
</RelativeLayout>