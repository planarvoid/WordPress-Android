<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:soundcloud="http://schemas.android.com/apk/res/com.soundcloud.android"
              android:id="@+id/animation_holder"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/tour_bottom_buttons_height"
              android:background="@color/transparent">

    <com.soundcloud.android.view.CustomButton android:id="@+id/facebook_btn"
                                              style="@style/Tour.FacebookButton"
                                              soundcloud:html_text="@string/authentication_log_in_with_facebook_two_lines"

                                              android:layout_width="wrap_content"
                                              android:layout_weight="0"
                                              android:layout_marginRight="10dp">
        <requestFocus/>
    </com.soundcloud.android.view.CustomButton>

    <Button android:id="@+id/signup_btn"
            style="@style/Tour.LeftButton"
            android:text="@string/authentication_sign_up"/>

    <Button android:id="@+id/login_btn"
            style="@style/Tour.RightButton"
            android:text="@string/authentication_log_in"/>
</LinearLayout>
