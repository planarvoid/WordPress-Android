<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/player_close"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/player_close_indicator"
        style="@style/PlayerCloseBase.PlayerClose" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/preview_indicator"
        style="@style/PreviewIndicator.Light"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/player_close_indicator" />

    <ImageView
        android:id="@+id/play_queue_button"
        style="@style/PlayerQueue"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/player_close_indicator"
        android:layout_alignParentRight="true"
        android:padding="18dp"
        android:scaleType="center"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/preview_indicator">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/upsell_button"
            style="@style/Upsell"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="right" />
    </FrameLayout>

</RelativeLayout>
