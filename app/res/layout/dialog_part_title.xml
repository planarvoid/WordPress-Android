<?xml version="1.0" encoding="utf-8"?>
<!-- DO NOT REMOVE -->
<!-- might appear unused, but overrides the list dialog styles from the styled-dialogs library -->
<!-- https://github.com/inmite/android-styled-dialogs -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              style="@style/SDL.Group">
    <TextView
            android:id="@+id/sdl__title"
            style="@style/DialogTitleText"/>

    <View
            android:id="@+id/sdl__titleDivider"
            style="@style/SDL.TitleSeparator"/>

    <LinearLayout
            android:id="@+id/sdl__content"
            android:orientation="vertical"
            style="@style/SDL.Group"/>
</LinearLayout>
