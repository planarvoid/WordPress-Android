<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_upsell"
    style="@style/NavUpsell"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    tools:showIn="@layout/fragment_navigation_listview">

    <ImageView
        android:id="@+id/nav_upsell_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:src="@drawable/player_like"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/nav_upsell_title"
        style="@style/NavUpsellText"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/nav_upsell_icon"
        android:text="@string/upsell_nav_title" />

    <com.soundcloud.android.view.CustomFontTextView
        style="@style/NavUpsellText.Secondary"
        android:layout_toRightOf="@id/nav_upsell_icon"
        android:layout_below="@id/nav_upsell_title"
        android:text="@string/upsell_nav_body" />

</RelativeLayout>