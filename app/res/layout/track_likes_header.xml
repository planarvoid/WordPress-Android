<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/track_likes_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">

    <View style="@style/Divider.Background" />

    <View style="@style/Divider.Section" />

    <LinearLayout
        style="@style/TrackLikesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_collapseMode="none"
        app:layout_scrollFlags="scroll"
        tools:showIn="@layout/track_likes_fragment">

        <include layout="@layout/downloadable_header" />

        <ImageButton
            android:id="@+id/shuffle_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/EngagementAction.Shuffle" />

        <com.soundcloud.android.view.IconToggleButton
            android:id="@+id/toggle_download"
            style="@style/EngagementAction.ToggleButton.DownloadBase.Download"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <View style="@style/Divider.Section" />

</LinearLayout>
