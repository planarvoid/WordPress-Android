<?xml version="1.0" encoding="utf-8"?>

<!-- Holds the username and track/set name, along with a timestamp -->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/playable_user_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_text_margin_left"
            android:layout_marginRight="3dp"
            android:layout_alignTop="@id/icon"
            android:layout_toLeftOf="@+id/playable_created_at"
            android:layout_toRightOf="@id/icon">

        <TextView android:id="@+id/playable_user"
                  style="@style/txt_list_track_user"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_marginRight="3dp"/>

        <!-- this is only visible when this layout is used in a ListView -->
        <TextView android:id="@+id/playable_reposter"
                  style="@style/txt_list_track_reposter"
                  android:visibility="gone"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/ic_repost_states"
                  android:drawablePadding="3dp"
                  android:singleLine="true"
                  android:ellipsize="marquee"
                  android:layout_width="0dp"
                  android:layout_alignParentRight="true"
                  android:layout_alignBottom="@id/playable_user"
                  android:layout_marginBottom="1dp"
                  android:layout_toRightOf="@id/playable_user"/>
    </RelativeLayout>

    <TextView android:id="@+id/playable_created_at"
              style="@style/txt_list_created_at"
              android:layout_width="53dp"
              android:layout_height="wrap_content"
              android:layout_alignTop="@id/icon"
              android:gravity="right"
              android:paddingLeft="0dip"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_alignParentRight="true"/>

</merge>