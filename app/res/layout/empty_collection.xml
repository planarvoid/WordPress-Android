<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/sizer"
              android:padding="5dp"
              android:orientation="vertical">
    <ImageView android:src="@drawable/empty_collection"
               android:layout_height="0dp"
               android:layout_width="fill_parent"
               android:layout_weight="1"
               android:id="@+id/img_1"
               android:scaleType="centerInside"/>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
        <LinearLayout android:id="@+id/sync_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal">
            <ProgressBar android:id="@+id/list_loading"
                         android:indeterminateOnly="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="20dip"
                         android:gravity="center_vertical"
                         style="@style/ScProgressBarHolo.List"
                         android:layout_centerVertical="true"
                         android:layout_centerInParent="true"/>
            <TextView android:gravity="center"
                      android:id="@+id/txt_sync"
                      android:text="@string/waiting_for_sync"
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      style="@style/txt_empty_collection_message"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_below="@id/img_1"
                      android:layout_height="wrap_content"
                      android:id="@+id/empty_layout"
                      android:orientation="vertical"
                      android:gravity="center_horizontal">
            <TextView android:gravity="center_horizontal"
                      android:id="@+id/txt_message"
                      android:text="@string/tour_finish_message"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/txt_empty_collection_message"/>
            <Button android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:id="@+id/btn_action"
                    android:layout_height="wrap_content"
                    style="@style/btn_empty_collection"/>
            <TextView android:id="@+id/txt_link"
                      android:visibility="gone"
                      android:gravity="center_horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/txt_empty_collection_link"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
