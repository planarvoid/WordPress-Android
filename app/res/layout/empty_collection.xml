<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:padding="5dp"
                android:id="@+id/sizer"
                android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/sync_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:orientation="horizontal"
                  android:gravity="center_horizontal">
        <ProgressBar android:id="@+id/list_loading"
                     android:indeterminateOnly="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="20dip"
                     android:gravity="center_vertical"
                     style="@style/ScProgressBarHolo.List"/>
        <TextView android:gravity="center"
                  android:id="@+id/txt_sync"
                  android:text="@string/waiting_for_sync"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  style="@style/txt_empty_collection_message"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_centerVertical="true"
                  android:id="@+id/empty_layout"
                  android:orientation="vertical"
                  android:gravity="center_horizontal">
        <ImageView android:src="@drawable/empty_collection"
                   android:layout_height="0dp"
                   android:layout_width="fill_parent"
                   android:layout_weight="1"
                   android:id="@+id/img_1"
                   android:scaleType="centerInside"/>
        <LinearLayout android:layout_height="0dp"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

            <TextView android:gravity="center_horizontal"
                      android:id="@+id/txt_message"
                      android:text="@string/tour_finish_message"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/txt_empty_collection_message"/>
            <Button android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/btn_action"
                    android:layout_height="wrap_content"
                    style="@style/btn_empty_collection"/>
            <TextView android:id="@+id/txt_link"
                      android:visibility="gone"
                      android:gravity="center_horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/txt_empty_collection_link"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
