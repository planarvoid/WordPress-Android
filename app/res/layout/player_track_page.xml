<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.soundcloud.android.playback.ui.view.PlayerStripView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PlayerStrip"
        android:id="@+id/player_strip"/>

    <com.soundcloud.android.playback.ui.view.PlayerTrackArtworkView
        android:id="@+id/track_page_artwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/player_strip" />

    <View android:id="@+id/artwork_overlay_dark"
        style="@style/PlayerTrackArtworkOverlay"
        android:layout_below="@id/player_strip" />

    <include layout="@layout/player_gradient" />

    <RelativeLayout
        android:id="@+id/upsell_container"
        style="@style/PlayerUpsellContainer"
        android:layout_below="@id/player_strip">

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/upsell_text"
            style="@style/PlayerUpsell"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/upsell_button"
            android:layout_alignTop="@+id/upsell_button"
            android:layout_alignBottom="@+id/upsell_button"
            android:layout_marginRight="14dp"
            android:text="@string/playback_upsell_1" />

        <com.soundcloud.android.view.CustomFontButton
            android:id="@+id/upsell_button"
            style="@style/PlayerUpsell.Button"
            android:layout_alignParentRight="true"
            android:text="@string/playback_upsell_button" />
    </RelativeLayout>

    <include layout="@layout/player_expanded_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/player_bottom_close"
        android:layout_below="@id/player_strip"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/waveform_ratio_top" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/waveform_ratio_bottom"
            android:paddingTop="@dimen/timestamp_height">

            <com.soundcloud.android.playback.ui.view.WaveformView
                android:id="@+id/track_page_waveform"
                style="@style/Waveform"
                android:layout_width="match_parent"
                android:layout_height="@dimen/player_waveform_height"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <com.soundcloud.android.playback.ui.view.TimestampView
        android:id="@+id/timestamp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/player_bottom_close"
        android:layout_below="@+id/player_strip" />

    <LinearLayout
        android:id="@id/player_bottom_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/player_engagement"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:paddingLeft="8dp">

        <com.soundcloud.android.view.CustomFontToggleButton
            android:id="@+id/track_page_like"
            style="@style/PlayerLikeBase.PlayerLike" />

        <ImageButton
            android:id="@+id/track_page_share"
            style="@style/PlayerShare" />

        <ImageView
            android:id="@+id/play_queue_button"
            style="@style/PlayerQueue"
            tools:visibility="visible"/>

        <com.soundcloud.android.view.OverflowAnchorImageView
            android:id="@+id/track_page_more"
            style="@style/PlayerMore" />
    </LinearLayout>

    <include layout="@layout/player_play_controls" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/player_title_top"
        android:layout_below="@+id/upsell_container"
        android:layout_toLeftOf="@id/player_expanded_top_bar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.soundcloud.android.view.JaggedTextView
                android:id="@+id/track_page_user"
                tools:text="Loozer records"
                style="@style/PlayerUser" />

            <com.soundcloud.android.view.JaggedTextView
                android:id="@+id/track_page_title"
                style="@style/PlayerTitle"
                tools:text="This is not lemonade, this is strawberry juice (Killswitch X Reed Remix)"
                android:layout_below="@id/track_page_user"
                android:layout_marginTop="3dp" />
        </RelativeLayout>

        <com.soundcloud.android.view.JaggedTextView
            android:drawableLeft="@drawable/ic_stations_player_context"
            android:id="@+id/track_page_context"
            style="@style/PlayerContext"
            tools:text="Placeholder station name"/>
    </LinearLayout>

    <include layout="@layout/player_footer_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_strip" />

    <ViewStub
        android:id="@+id/leave_behind_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/player_bottom_close"
        android:layout_below="@id/player_expanded_top_bar"
        android:inflatedId="@+id/leave_behind"
        android:layout="@layout/ad_leave_behind" />

    <FrameLayout
        android:id="@+id/interstitial_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/player_strip">

        <ViewStub
            android:id="@+id/interstitial_stub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/interstitial"
            android:layout="@layout/ad_interstitial" />
    </FrameLayout>

    <ViewStub
        android:id="@+id/track_page_error_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/track_page_error"
        android:layout="@layout/track_page_error"
        android:layout_below="@+id/player_strip" />

</RelativeLayout>
