<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.soundcloud.android.playback.ui.PlayerArtworkImageView
            android:id="@+id/track_page_artwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            style="@style/PlayerArtwork" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_gradient_height"
        android:background="@drawable/player_gradient_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_gradient_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/player_gradient_bottom" />

    <RelativeLayout
            android:id="@+id/footer_controls"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_footer_control">

        <ToggleButton
                android:id="@+id/footer_toggle"
                style="@style/FooterToggle"
                android:layout_marginRight="8dp" />

        <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/track_page_user"
                style="@style/FooterUser"
                android:layout_toRightOf="@id/footer_toggle"
                android:layout_marginTop="@dimen/player_footer_margin"
                android:layout_marginRight="@dimen/player_footer_margin" />

        <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/track_page_title"
                style="@style/FooterTitle"
                android:layout_below="@id/track_page_user"
                android:layout_toRightOf="@id/footer_toggle"
                android:layout_marginRight="@dimen/player_footer_margin" />
    </RelativeLayout>

</RelativeLayout>