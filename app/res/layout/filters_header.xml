<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/filter_header"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">

    <View
        android:id="@+id/header_top_separator"
        style="@style/Divider.Background" />

    <View style="@style/Divider.Section" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:id="@+id/search_holder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_link_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/search_link_padding_vertical"
                android:paddingLeft="@dimen/search_link_padding_horizontal"
                android:paddingRight="@dimen/search_link_padding_horizontal"
                android:paddingTop="@dimen/search_link_padding_vertical"
                android:src="@drawable/search_icon" />

            <com.soundcloud.android.view.CustomFontEditText
                android:id="@+id/filter_text"
                style="@style/Search.TextView.Link"
                android:hint="@string/filter"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_filter_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_collection_playlists_filter" />

    </RelativeLayout>

    <View style="@style/Divider.Item" />

</LinearLayout>
