<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/search_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout android:id="@+id/search_input"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/search_header_padding_topbottom"
                    android:paddingBottom="@dimen/search_header_padding_topbottom"
                    android:paddingLeft="@dimen/search_header_padding_leftright"
                    android:paddingRight="@dimen/search_header_padding_leftright"
                    android:layout_width="fill_parent">

        <LinearLayout android:id="@+id/focus_catcher"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:layout_width="0px"
                      android:layout_height="0px"/>


        <EditText android:id="@+id/query"
                  android:layout_margin="5dip"
                  style="@style/txt_search"
                  android:text="asdf"
                  android:layout_height="wrap_content"
                  android:nextFocusUp="@+id/query"
                  android:nextFocusLeft="@+id/query"
                  android:singleLine="true"
                  android:imeOptions="actionSearch"
                  android:layout_width="fill_parent"
                  android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <RadioGroup android:id="@+id/rdo_search_type"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/search_input"
                android:layout_marginBottom="5dip"
                android:layout_width="fill_parent">

        <RadioButton android:id="@+id/rdo_tracks"
                     android:checked="true"
                     android:text="@string/sc_search_tracks"
                     style="@style/txt_search_rdo"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:layout_marginLeft="10dip"/>

        <RadioButton android:id="@+id/rdo_users"
                     android:checked="false"
                     android:text="@string/sc_search_users"
                     style="@style/txt_search_rdo"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:layout_marginLeft="10dip"/>
    </RadioGroup>

    <FrameLayout android:id="@+id/fl_searches"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:background="@color/white"
                 android:layout_below="@id/rdo_search_type">
    </FrameLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="5dip"
          android:layout_below="@id/rdo_search_type"
          android:background="@drawable/drop_shadow_down"/>
</RelativeLayout>