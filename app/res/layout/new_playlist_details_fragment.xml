<com.soundcloud.android.view.MultiSwipeRefreshLayout android:id="@+id/str_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="InconsistentLayout">

    <FrameLayout android:id="@+id/playlist_details"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ak_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"/>

        <View
            android:id="@+id/top_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_banner_gradient_height"
            android:background="@drawable/player_gradient_top"
            app:layout_collapseMode="pin" />

        <FrameLayout
            android:id="@+id/system_bars_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <include layout="@layout/toolbar_transparent" />

        </FrameLayout>


    </FrameLayout>

</com.soundcloud.android.view.MultiSwipeRefreshLayout>
