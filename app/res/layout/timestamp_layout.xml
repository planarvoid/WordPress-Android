<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <View
        android:id="@+id/timestamp_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/timestamp_progress"
        android:layout_alignRight="@+id/timestamp_duration" />

    <View
        android:id="@+id/timestamp_divider"
        style="@style/TimestampDivider"
        android:layout_centerInParent="true" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/timestamp_duration"
        style="@style/TimestampText.Duration"
        android:layout_toRightOf="@id/timestamp_divider" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/timestamp_progress"
        style="@style/TimestampText"
        android:layout_toLeftOf="@id/timestamp_divider" />

</merge>