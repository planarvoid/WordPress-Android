<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout style="@style/ListItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.soundcloud.android.view.CircularBorderImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/username"
        style="@style/ListItemText.SecondaryText"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="-4dp"
        android:layout_toLeftOf="@+id/date"
        android:layout_toRightOf="@id/image" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/body"
        style="@style/ListItemText.PrimaryText"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/image"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:maxLines="2" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@id/date"
        style="@style/ListItemText.Numeric"
        android:layout_alignBaseline="@id/username"
        android:layout_alignParentRight="true" />

</RelativeLayout>
