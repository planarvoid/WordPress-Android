<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Collections.BucketCarouselCard"
    android:id="@+id/collections_recently_played_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:ignore="UselessParent">

        <com.soundcloud.android.view.ForegroundImageView
            android:id="@+id/artwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:foregroundDrawable="@drawable/artwork_border"
            app:square="true" />

        <com.soundcloud.android.offline.DownloadImageView
            android:id="@+id/item_download_state"
            style="@style/DownloadItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/artwork"
            android:layout_alignTop="@id/artwork"
            android:layout_marginLeft="@dimen/download_progress_indicator_margin"
            android:layout_marginTop="@dimen/download_progress_indicator_margin"
            android:visibility="gone" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/track_count"
            style="@style/Collections.SmallTrackCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/artwork"
            tools:text="12" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/Collections.ItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/artwork"
            android:layout_marginRight="4dp" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/recently_played_type"
            style="@style/Collections.Creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginRight="4dp" />

    </RelativeLayout>

</FrameLayout>
