<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/list_item_padding_top"
                android:paddingLeft="@dimen/list_item_padding_left"
                android:paddingRight="@dimen/list_item_padding_right"
                android:paddingBottom="@dimen/list_item_padding_bottom">

    <ImageView android:id="@+id/icon"
               android:layout_width="@dimen/list_icon_width"
               android:layout_height="@dimen/list_icon_height"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:background="@drawable/avatar_badge"
               android:scaleType="centerCrop"/>
    <RelativeLayout
            android:layout_toRightOf="@+id/icon"
            android:layout_alignTop="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/list_text_margin_left"
            android:layout_toLeftOf="@+id/toggleFollowingDivider">

        <TextView android:id="@+id/username"
                  android:layout_height="wrap_content"
                  style="@style/txt_list_main"
                  android:ellipsize="marquee"
                  android:text="@string/username"
                  android:textSize="@dimen/list_txt_main_size"
                  android:lines="1"
                  android:layout_width="fill_parent"/>
        <RelativeLayout
                android:id="@+id/stats"
                android:layout_below="@id/username"
                android:layout_width="fill_parent"
                android:paddingTop="3dip"
                android:layout_height="wrap_content">

            <TextView android:id="@+id/tracks"
                      android:layout_width="wrap_content"
                      android:drawableLeft="@drawable/ic_stats_sounds_states"
                      android:drawablePadding="3dip"
                      android:layout_height="wrap_content"
                      android:text="@string/track_count"
                      android:layout_alignParentLeft="true"
                      android:singleLine="true"
                      style="@style/txt_list_sub_secondary"/>

            <View style="@style/stat_pipe"
                  android:layout_alignWithParentIfMissing="true"
                  android:layout_toRightOf="@+id/tracks"
                  android:layout_alignBottom="@+id/tracks"
                  android:layout_alignTop="@+id/tracks"
                  android:layout_height="0dp"
                  android:layout_width="1dip"
                  android:id="@+id/vr_stats"/>

            <TextView android:id="@+id/followers"
                      android:layout_width="wrap_content"
                      android:layout_alignWithParentIfMissing="true"
                      android:drawableLeft="@drawable/ic_stats_followers_states"
                      android:drawablePadding="3dip"
                      android:layout_height="wrap_content"
                      android:text="@string/follower_count"
                      android:layout_toRightOf="@id/vr_stats"
                      android:singleLine="true"
                      style="@style/txt_list_sub_secondary"/>
        </RelativeLayout>
    </RelativeLayout>

    <View android:id="@+id/toggleFollowingDivider"
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_alignTop="@id/icon"
          android:layout_alignBottom="@id/icon"
          android:layout_marginTop="4dip"
          android:layout_marginBottom="4dip"
          android:background="@drawable/abs__list_divider_holo_light"
          android:layout_toLeftOf="@+id/toggleFollowingHolder"/>

    <RelativeLayout android:id="@id/toggleFollowingHolder"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_alignTop="@id/icon"
                    android:layout_alignBottom="@id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">

        <ImageButton android:id="@+id/toggleFollowing"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/ic_remove_user_dark"
                android:background="@drawable/selectable_background_next"/>

        <ImageButton android:id="@+id/toggleFollow"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_add_user_dark"
                android:background="@drawable/selectable_background_next"/>
    </RelativeLayout>
</RelativeLayout>