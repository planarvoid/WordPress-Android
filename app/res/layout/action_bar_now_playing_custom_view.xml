<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent"
              android:gravity="fill_horizontal|right"
              android:layout_width="fill_parent">
    <TextView android:id="@+id/title"
              android:layout_marginLeft="8dip"
              android:gravity="center_vertical|left"
              android:layout_width="0dp"
              android:layout_height="fill_parent"
              android:singleLine="true"
              android:ellipsize="end"/>
    <LinearLayout android:id="@+id/waveform_holder"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/item_background_dark"
                    android:contentDescription="@string/accessibility_action_bar_waveform">
        <com.soundcloud.android.actionbar.NowPlayingProgressBar android:id="@+id/waveform_progress"
                                                         android:layout_width="62dp"
                                                         android:layout_height="20dp"
                                                         android:layout_marginLeft="13dp"
                                                         android:layout_marginRight="11dp"
                                                         style="@android:style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>
</LinearLayout>