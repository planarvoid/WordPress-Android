<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/player_track_page">

    <TextView
        android:id="@+id/related_to"
        style="@style/PlayerRelatedTo"
        android:layout_below="@+id/track_page_title"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/related_to_track_artwork"
        style="@style/PlayerRelatedToArtwork"
        android:layout_below="@id/related_to" />

    <TextView
        android:id="@+id/related_to_track"
        style="@style/PlayerRelatedToTrack"
        android:layout_toRightOf="@id/related_to_track_artwork"
        android:layout_alignTop="@+id/related_to_track_artwork"
        android:layout_alignBottom="@+id/related_to_track_artwork" />

</merge>