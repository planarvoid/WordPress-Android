<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/player_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/player_strip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_strip"
        android:background="@color/sc_orange" />

    <com.soundcloud.android.view.SafeViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/player_track_pager"
        android:layout_below="@id/player_strip" />

    <ToggleButton
            android:id="@+id/player_toggle"
            android:layout_centerInParent="true"
            style="@style/PlayerToggle" />

    <Button
            android:id="@+id/player_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/player_skip_margin"
            style="@style/PlayerNext" />

    <Button
            android:id="@+id/player_previous"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/player_skip_margin"
            style="@style/PlayerPrevious" />

</RelativeLayout>