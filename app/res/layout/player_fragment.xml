<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/player_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_bg"
                android:clickable="true"> <!-- Prevent touch events from passing through Fragment -->

    <View
            android:id="@+id/player_strip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_strip"
            android:background="@color/sc_orange"
            android:layout_alignParentTop="true" />

    <RelativeLayout
            android:id="@+id/footer_control"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_footer_control"
            android:layout_below="@id/player_strip">

        <ToggleButton
                android:id="@+id/footer_toggle"
                style="@style/FooterToggle" />

        <LinearLayout
                android:id="@+id/footer_drag_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/player_footer_control"
                android:layout_toRightOf="@id/footer_toggle">

            <TextView
                    android:id="@+id/footer_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <ToggleButton
            android:id="@+id/player_toggle"
            android:layout_centerInParent="true"
            style="@style/PlayerToggle" />

    <Button
            android:id="@+id/player_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/player_skip_margin"
            style="@style/PlayerNext" />

    <Button
            android:id="@+id/player_previous"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/player_skip_margin"
            style="@style/PlayerNext" />

</RelativeLayout>