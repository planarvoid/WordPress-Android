<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/player_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_bg">

    <View
        android:id="@+id/player_strip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_strip"
        android:background="@color/sc_orange"
        android:layout_alignParentTop="true" />

    <RelativeLayout
            android:id="@+id/footer_control"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_footer_control"
            android:layout_below="@id/player_strip">

            <ToggleButton
                    android:id="@+id/footer_toggle"
                    style="@style/FooterToggle" />

            <TextView
                    android:id="@+id/footer_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/footer_toggle" />
    </RelativeLayout>

</RelativeLayout>