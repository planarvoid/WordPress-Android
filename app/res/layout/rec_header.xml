<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
                  android:id="@+id/saved_message_layout"
                  android:visibility="invisible"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/title_layout">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
            <TextView android:id="@+id/txt_saved_message"
                      style="@style/txt_record_saved_message"
                      android:text="@string/rec_your_sound_is_saved_locally_at"/>
            <ImageView android:layout_height="wrap_content"
                       android:layout_width="@dimen/rec_header_you_button_width"
                       android:layout_alignParentRight="true"
                       android:scaleType="centerInside"
                       android:paddingLeft="5dp"
                       android:paddingRight="5dp"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/arrow_up" />
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:background="#464646"/>
    </LinearLayout>
</RelativeLayout>