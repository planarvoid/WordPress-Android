<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <FrameLayout android:layout_gravity="left"
                 android:layout_width="@dimen/notification_image_width"
                 android:layout_height="@dimen/notification_image_height">
        <ImageView
                android:id="@+id/status_icon"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_notification_cloud"/>
        <ImageView
                android:id="@+id/icon"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/user_txt"
                style="@style/PlaybackNotificationUser"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/title_txt"
                style="@style/PlaybackNotificationTitle"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageButton
            android:id="@+id/toggle_playback"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/notification_background_clickable"
            android:src="@drawable/notifications_pause"/>
    <ImageButton
            android:id="@+id/next"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/notification_background_clickable"
            android:src="@drawable/notifications_next"/>
    <ImageButton
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:background="@drawable/notification_background_clickable"
            android:src="@drawable/notification_close"/>
</LinearLayout>
