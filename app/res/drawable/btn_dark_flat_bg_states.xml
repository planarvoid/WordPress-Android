<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="@color/btnOrangePressedStart"
                    android:endColor="@color/btnOrangePressedEnd"
                    android:angle="270"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/btnDarkFlat" />
            <stroke android:width="1dp" android:color="@color/btnDarkFlatSelectedStroke"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btnDarkFlat" />
        </shape>
    </item>
</selector>
