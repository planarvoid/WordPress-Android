<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="@color/btnOrangePressedStart"
                    android:endColor="@color/btnOrangePressedEnd"
                    android:angle="270"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/btn_bar_dark_bg"/>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/btnTransparentSelectedStroke"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@drawable/btn_bar_dark_bg"/>
</selector>
