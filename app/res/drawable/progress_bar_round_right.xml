<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <clip>
            <shape>
                <gradient
                        android:startColor="@color/cloudProgressRoundBackgroundStart"
                        android:centerColor="@color/cloudProgressRoundBackgroundCenter"
                        android:centerY="0.4"
                        android:endColor="@color/cloudProgressRoundBackgroundEnd"
                        android:angle="270"
                        />
                <stroke
                        android:width="1dp"
                        android:color="@color/cloudProgressRoundBorder"/>
                <corners android:topRightRadius="@dimen/round_progress_bar_corner_radius"
                         android:bottomRightRadius="@dimen/round_progress_bar_corner_radius"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                        android:startColor="@color/cloudProgressRoundBackgroundStart"
                        android:centerColor="@color/cloudProgressRoundBackgroundCenter"
                        android:centerY="0.4"
                        android:endColor="@color/cloudProgressRoundBackgroundEnd"
                        android:angle="270"
                        />
                <stroke
                        android:width="1dp"
                        android:color="@color/cloudProgressRoundBorder"/>
                <corners android:topRightRadius="@dimen/round_progress_bar_corner_radius"
                         android:bottomRightRadius="@dimen/round_progress_bar_corner_radius"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                        android:startColor="@color/cloudProgressRoundStart"
                        android:centerColor="@color/cloudProgressRoundCenter"
                        android:centerY="0.4"
                        android:endColor="@color/cloudProgressRoundEnd"
                        android:angle="270"
                        />
                <stroke
                        android:width="1dp"
                        android:color="@color/cloudProgressRoundBorder"/>
                <corners android:topRightRadius="@dimen/round_progress_bar_corner_radius"
                         android:bottomRightRadius="@dimen/round_progress_bar_corner_radius"/>
            </shape>
        </clip>
    </item>
</layer-list>



