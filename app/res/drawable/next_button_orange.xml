<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="4dp" />
                    <gradient android:type="linear"
                              android:angle="270"
                              android:startColor="#CCe36711"
                              android:centerColor="#CC5900"
                              android:endColor="#CC3300"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="4dp" />
                    <gradient android:type="linear"
                              android:angle="270"
                              android:startColor="#ff8d00"
                              android:centerColor="#ff5900"
                              android:endColor="#ff3300"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

