<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="true"
          android:drawable="@drawable/ic_player_liked_pressed" />
    <item android:state_checked="false" android:state_pressed="true"
          android:drawable="@drawable/ic_player_like_pressed" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/ic_player_liked_focused" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/ic_player_like_focused" />

    <item android:state_checked="false"
          android:drawable="@drawable/ic_player_like" />
    <item android:state_checked="true"
          android:drawable="@drawable/ic_player_liked" />

</selector>

