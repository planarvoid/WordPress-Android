<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/NewPlaylistActionContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.soundcloud.android.offline.DownloadImageView
        android:id="@+id/header_download_state"
        style="@style/DownloadItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/collection_download_state_margin_right"
        tools:ignore="InconsistentLayout" />

    <TextView
        android:id="@+id/header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        tools:ignore="InconsistentLayout" />

    <ToggleButton
        android:id="@+id/toggle_like"
        style="@style/PlayerLikeBase.PlayerLike" />

    <Button
        android:id="@+id/playlist_details_overflow_button"
        style="@style/PlayerMore" />

</LinearLayout>
