<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:baselineAligned="false"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:id="@+id/container">

    <RelativeLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
        <com.soundcloud.android.explore.UserBrowserImageView android:id="@+id/user_image"
                                                             android:layout_width="match_parent"
                                                             android:layout_height="match_parent"
                                                             android:background="@drawable/placeholder_cells"
                                                             android:scaleType="centerCrop" />

        <View android:id="@+id/suggested_user_selector"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentTop="true"
                      android:orientation="vertical"
                      android:layout_marginLeft="13dp"
                      android:layout_marginTop="32dp">

            <com.soundcloud.android.view.JaggedTextView android:id="@+id/username"
                                                        style="@style/BlackOverlayText.Regular"/>
            <com.soundcloud.android.view.CustomFontTextView android:id="@+id/location"
                                                        style="@style/BlackOverlayText.RegularSubtext"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/follow_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:layout_alignParentBottom="true">

            <TextView
                    android:id="@+id/followers_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/toggle_btn_follow"
                    android:layout_centerVertical="true"
                    style="@style/TextAppearance.FollowingMessage"/>

            <ToggleButton
                    android:id="@+id/toggle_btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="13dp"
                    style="@style/UserBrowser.ToggleButton.Follow.Large"/>
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="2"
                  android:orientation="vertical">
        <LinearLayout android:orientation="vertical"
                      android:layout_height="match_parent"
                      android:layout_width="match_parent">
            <com.viewpagerindicator.TitlePageIndicator
                    android:id="@+id/indicator"
                    style="@style/Widget.ScTitlePageIndicator.Large" />
            <com.soundcloud.android.view.SafeViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
        </LinearLayout>
        <View android:background="@drawable/shadow_right"
              android:layout_height="match_parent"
              android:layout_width="wrap_content" />
    </FrameLayout>
</LinearLayout>
