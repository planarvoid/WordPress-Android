<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

        <include
                android:id="@+id/playlist_details"
                layout="@layout/playlist_details_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout
                android:id="@+id/ptr_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

            <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <com.soundcloud.android.view.EmptyView
                    android:id="@android:id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_right"/>
        </uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>

    </LinearLayout>

    <include layout="@layout/fullscreen_progress"/>

</FrameLayout>