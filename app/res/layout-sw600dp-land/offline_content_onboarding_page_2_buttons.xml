<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="660dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    tools:showIn="@layout/offline_content_onboarding_page_2">

    <com.soundcloud.android.view.CustomFontButton
        android:id="@+id/page_1_save_everything"
        style="@style/GoOnboarding.PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:text="@string/offline_content_onboarding_save_now"
        tools:text="Save everything now" />

    <com.soundcloud.android.view.CustomFontButton
        android:id="@+id/page_1_choose_what_to_save"
        style="@style/GoOnboarding.SecondaryButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="@string/offline_content_onboarding_choose_desc"
        tools:text="Choose what to save" />
</LinearLayout>
