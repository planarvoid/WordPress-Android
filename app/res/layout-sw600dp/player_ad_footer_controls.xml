<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/footer_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_footer_control">

    <com.soundcloud.android.view.CustomFontToggleButton
            android:id="@+id/footer_toggle"
            style="@style/FooterToggle"
            android:layout_marginRight="8dp" />

    <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/footer_ad_text"
            style="@style/FooterTitle"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/footer_toggle" />
</RelativeLayout>
