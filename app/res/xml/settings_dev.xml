<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_dev_settings">

        <ListPreference
            android:defaultValue="compressed"
            android:entries="@array/pref_dev_record_type_entries"
            android:entryValues="@array/pref_dev_record_type_values"
            android:key="@string/key_dev_recording_type"
            android:summary="@string/pref_dev_record_type_desc"
            android:title="@string/pref_dev_record_type" />

        <Preference
            android:key="@string/key_dev_clear_notifications"
            android:summary="@string/pref_dev_clear_notification_summary"
            android:title="@string/pref_dev_clear_notification" />

        <Preference
            android:key="@string/key_dev_rewind_notifications"
            android:summary="@string/pref_dev_rewind_notification_summary"
            android:title="@string/pref_dev_rewind_notification" />

        <Preference
            android:key="@string/key_dev_sync_now"
            android:summary="@string/pref_dev_sync_now_summary"
            android:title="@string/pref_dev_sync_now" />

        <Preference
            android:key="@string/key_dev_crash"
            android:summary="@string/pref_dev_crash_summary"
            android:title="@string/pref_dev_crash" />

        <Preference
            android:key="@string/key_dev_clear_recordings"
            android:summary="@string/pref_dev_clear_recordings_summary"
            android:title="@string/pref_dev_clear_recordings" />

        <Preference
            android:key="@string/key_dev_features"
            android:title="@string/pref_dev_features"
            android:summary="@string/pref_dev_features_summary"
            android:enabled="@bool/debug_feature_screen" />

        <EditTextPreference
            android:key="@string/key_dev_http_proxy"
            android:summary="@string/pref_dev_http_proxy_summary"
            android:title="@string/pref_dev_http_proxy" />

        <CheckBoxPreference
            android:key="@string/key_dev_flush_eventlogger_instantly"
            android:title="@string/pref_dev_flush_eventlogger_instantly"
            android:summary="@string/pref_dev_flush_eventlogger_instantly_summary"
            android:defaultValue="false" />

    </PreferenceCategory>
</PreferenceScreen>
