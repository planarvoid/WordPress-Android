<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- ignore issues in the resources generated by gradle -->
    <issue id="all">
        <ignore path="build/generated/res/resValues/**/*" />
    </issue>

    <!-- auto/value uses GWT related annotations about which we don't care -->
    <issue id="InvalidPackage">
        <ignore path="**/com.google.auto.value/**/*"/>
    </issue>
    Â 
    <issue id="ViewConstructor" severity="ignore"/>
    <issue id="TypographyEllipsis" severity="ignore"/>
    <issue id="MissingQuantity" severity="warning"/>
    <issue id="MissingQuantity" severity="warning"/>

    <issue id="MissingTranslation" severity="informational"/>

    <!-- These need to be updated when we bump to api level 23 -->
    <issue id="OldTargetApi" severity="informational"/>
    <issue id="AllowBackup" severity="informational"/>

    <!-- HandlerLeaks are bad, but they can't be suppressed, so info level -->
    <issue id="HandlerLeak" severity="informational" />
    <!-- Need to consider this fix before implementing it -->
    <issue id="TrulyRandom" severity="informational" />


    <issue id="DuplicateDefinition" severity="warning"/>
    <issue id="Suspicious0dp" severity="warning"/>

    <!-- if we have misnamed a locale, break the build -->
    <issue id="LocaleFolder" severity="error"/>

    <!-- let's ignore rtl concerns entirely until we have an rtl language -->
    <issue id="RtlHardcoded" severity="ignore"/>
    <issue id="RtlSymmetry" severity="ignore"/>

    <!--
        not sure how we will deal with layout problems for longer strings
        but I don't think we can catch them with lint yet
    -->
    <issue id="RelativeOverlap" severity="ignore"/>

    <!-- typos shouldn't be lint's responsibility, it doesn't understand pt -->
    <issue id="Typos" severity="ignore"/>

    <!-- this will be rewritten by a Maven rule anyway -->
    <issue id="HardcodedDebugMode" severity="ignore"/>

    <!-- should re-enable when we support accessibility -->
    <issue id="ContentDescription" severity="ignore"/>
    <issue id="ClickableViewAccessibility" severity="ignore"/>
    <issue id="LabelFor" severity="ignore"/> <!-- also only api 17+ -->

    <!-- Px looks better in some cases -->
    <issue id="PxUsage" severity="ignore"/>

    <!-- Sometimes NestedWeights are necessities -->
    <issue id="NestedWeights">
        <ignore path="res/layout/abs__search_view.xml"/>
        <ignore path="res/layout/appwidget_player.xml"/>
        <ignore path="res/layout-land/sc_create.xml"/>
    </issue>

    <!-- Allow exported content providers and receivers -->
    <issue id="ExportedContentProvider" severity="ignore"/>
    <issue id="ExportedReceiver" severity="ignore"/>

    <issue id="UseCompoundDrawables">
        <ignore path="res/layout/location_picker_row.xml"/> <!-- Use imageview here for resizing purposes -->
    </issue>

    <!-- flag NewApi as error -->
    <issue id="NewApi" severity="error">
        <ignore path="res/values/styles_next.xml"/>
        <ignore path="res/values/themes.xml"/>
    </issue>

    <issue id="InlinedApi" severity="error"/>

    <issue id="UnusedResources" severity="error">
        <ignore path="res/values/keys.xml"/>
        <!-- ignore Crashlytics plugin auto-generated code -->
        <ignore path="res/values/com_crashlytics_export_strings.xml"/>
        <!-- ignore Appboy notification drawables -->
        <ignore path="res/values/appboy.xml"/>
    </issue>

    <issue id="SetJavaScriptEnabled">
        <ignore path="src/main/java/com/soundcloud/android/main/WebViewActivity.java"/>
    </issue>

    <issue id="MergeRootFrame">
        <!-- Tour layouts can't be merged -->
        <ignore path="res/layout/tour_buttons.xml"/>
        <ignore path="res/layout/tour_radio_group.xml"/>
        <ignore path="res/layout/container_layout.xml"/>
    </issue>

    <issue id="InconsistentLayout">
        <!-- Portrait trackview has more views hence more ids than landscape -->
        <ignore path="res/layout/player_track.xml" />
        <ignore path="res/layout/player_action_bar.xml" />
        <!-- Different layout structures for landscape tablets -->
        <ignore path="res/layout/profile_content.xml" />
        <ignore path="res/layout/base_with_drawer.xml" />
        <ignore path="res/layout/base_with_drawer_legacy.xml" />
        <ignore path="res/layout-sw600dp-land/playlist_fragment.xml" />
    </issue>

    <!-- Icon problems -->
    <issue id="IconDuplicatesConfig">
        <ignore path="res/drawable-hdpi/ic_notification_cloud.png" />
        <ignore regexp="res/drawable-.*-mdpi/ic_notification_cloud.png" />
    </issue>
    <issue id="IconColors">
        <ignore regexp="res/.*/notification_loading.png" />
    </issue>
    <issue id="IconDensities" severity="ignore" />
    <issue id="IconDipSize">
        <ignore regexp="res/.*/dialog_device_management.png" />
        <ignore regexp="res/.*/dialog_go_online_days.png" />
        <ignore regexp="res/.*/dialog_payment_error.png" />
        <ignore regexp="res/.*/ic_search_sound.png" />
    </issue>

    <!-- this code was inherited from the cast companion library -->
    <issue id="ButtonStyle">
        <ignore path="res/layout/mr_media_route_controller_material_dialog_b.xml" />
    </issue>

    <!--
        this is where we store strings that we know don't ever need to be
        translated, or don't need to be translated yet, because the feature
        is still in progress, or are generated by tools and not correctly
        marked as untranslateable
    -->
    <issue id="MissingTranslation">
        <ignore path="res/values/strings_no_localisation.xml" />
        <ignore path="res/values/strings_non_final.xml" />
        <ignore path="build/generated/res/google-services" />
    </issue>

    <!-- transifex doesn't properly support plurals, so ignore for now -->
    <issue id="PluralsCandidate" severity="ignore" />
</lint>
