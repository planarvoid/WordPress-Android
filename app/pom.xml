<?xml version='1.0' encoding='UTF-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.soundcloud.android</groupId>
        <artifactId>parent</artifactId>
        <version>2.7.0</version>
    </parent>

    <artifactId>soundcloud-android</artifactId>
    <packaging>apk</packaging>
    <name>SoundCloud for Android</name>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="${basedir}/properties/app_properties_${build.type}.xml"
                                      tofile="${basedir}/res/values/app_properties.xml"
                                      overwrite="true"
                                      failOnError="true"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>

                <configuration>
                    <target>all</target>
                    <clearNativeArtifacts>false</clearNativeArtifacts>
                    <useHeaderArchives>false</useHeaderArchives>
                    <ndkBuildAdditionalCommandline>NDK_TOOLCHAIN=""</ndkBuildAdditionalCommandline>
                    <proguard>
                        <skip>${build.proguard.skip}</skip>
                    </proguard>
                    <lint>
                        <config>app/lint.xml</config>
                    </lint>
                </configuration>
                <executions>
                    <execution>
                        <id>update-manifest</id>
                        <goals>
                            <goal>manifest-update</goal>
                        </goals>
                        <configuration>
                            <manifest>
                                <debuggable>${build.debuggable}</debuggable>
                            </manifest>
                        </configuration>
                    </execution>

                    <execution>
                        <id>lint</id>
                        <goals>
                            <goal>lint</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>lib</directory>
                        </fileset>

                        <fileset>
                            <directory>libs</directory>
                        </fileset>

                        <fileset>
                            <directory>obj</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <format>xml</format>
                    <aggregate>true</aggregate>
                    <instrumentation>
                        <includes>
                            <include>com/soundcloud/android/**/*.class</include>
                        </includes>
                        <excludes>
                            <exclude>com.soundcloud.android.tests.*</exclude>
                        </excludes>
                    </instrumentation>
                    <check/>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>aspectj-maven-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <skip>${build.skipAspectWeaving}</skip>
                    <showWeaveInfo>true</showWeaveInfo>
                    <verbose>true</verbose>
                    <argumentFileName>aspectj_output.log</argumentFileName>
                    <source>${source.version}</source>
                    <complianceLevel>${source.version}</complianceLevel>
                    <target>${source.version}</target>
                    <privateScope>true</privateScope>
                    <includes>
                        <!-- For Activities which need to be weaved -->
                        <include>com/soundcloud/android/activity/**/*.java</include>
                        <include>com/soundcloud/android/cropimage/**/*.java</include>
                        <include>aspect/*.aj</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.crashlytics</groupId>
                <artifactId>crashlytics-maven</artifactId>
                <version>1.0.3</version>
                <executions>
                    <execution>
                        <id>GenerateResources</id>
                        <goals>
                            <goal>GenerateResources</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>CleanupResources</id>
                        <goals>
                            <goal>CleanupResources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
