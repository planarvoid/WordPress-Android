<?xml version='1.0' encoding='UTF-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.soundcloud.android</groupId>
        <artifactId>android-parent</artifactId>
        <version>${maven.build.timestamp}</version>
    </parent>

    <artifactId>soundcloud-android</artifactId>
    <packaging>apk</packaging>
    <name>SoundCloud for Android</name>

    <properties>
        <dagger.version>1.2.2</dagger.version>
        <rxandroid.version>0.23.0</rxandroid.version>
        <rxjava.version>1.0.2</rxjava.version>
        <propeller.version>0.32</propeller.version>
        <okhttp.version>2.2.0</okhttp.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="${basedir}/properties/app_properties_${build.type}.xml"
                                      tofile="${basedir}/res/values/app_properties.xml"
                                      overwrite="true"
                                      failOnError="true"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>

                <configuration>
                    <target>all</target>
                    <clearNativeArtifacts>false</clearNativeArtifacts>
                    <useHeaderArchives>false</useHeaderArchives>
                    <ndkBuildAdditionalCommandline>NDK_TOOLCHAIN=""</ndkBuildAdditionalCommandline>
                    <proguard>
                        <skip>${build.proguard.skip}</skip>
                    </proguard>
                    <lint>
                        <config>app/lint.xml</config>
                    </lint>
                </configuration>
                <executions>
                    <execution>
                        <id>update-manifest</id>
                        <goals>
                            <goal>manifest-update</goal>
                        </goals>
                        <configuration>
                            <manifest>
                                <debuggable>${build.debuggable}</debuggable>
                            </manifest>
                        </configuration>
                    </execution>

                    <execution>
                        <id>lint</id>
                        <goals>
                            <goal>lint</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>-Xms512m -Xmx1024m -XX:MaxPermSize=512m -noverify</argLine>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>lib</directory>
                        </fileset>

                        <fileset>
                            <directory>libs</directory>
                        </fileset>

                        <fileset>
                            <directory>obj</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.crashlytics</groupId>
                <artifactId>crashlytics-maven</artifactId>
                <version>1.10.0</version>
                <configuration>
                    <androidManifestPath>${project.basedir}/AndroidManifest.xml</androidManifestPath>
                    <androidAssetsPath>${project.basedir}/assets</androidAssetsPath>
                    <androidResPath>${project.basedir}/res</androidResPath>
                    <mapping_location>${project.basedir}/target/proguard/mapping.txt</mapping_location>
                </configuration>
                <executions>
                    <execution>
                        <id>GenerateResources</id>
                        <goals>
                            <goal>GenerateResources</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>CleanupResources</id>
                        <goals>
                            <goal>CleanupResources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
