    <profiles>
        <profile>
            <id>update-android-manifest</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                        <artifactId>android-maven-plugin</artifactId>
                        <configuration>
                            <!--<renameManifestPackage>com.soundcloud.android.${build.type}</renameManifestPackage>
                            <manifestApplicationLabel>SC-${build.type}</manifestApplicationLabel>-->
                            <!--<manifest>-->
                                <!--<providerAuthorities>-->
                                    <!--<property>-->
                                        <!--<name>.provider.ScContentProvider</name>-->
                                        <!--<value>.provider.ScContentProvider.${build.type}</value>-->
                                    <!--</property>-->
                                <!--</providerAuthorities>-->
                            <!--</manifest>-->
                        </configuration>
                        <executions>
                            <execution>
                                <id>update-manifest</id>
                                <goals>
                                    <goal>manifest-update</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>sign</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jarsigner-plugin</artifactId>
                        <version>1.2</version>
                        <executions>
                            <execution>
                                <id>signing</id>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                                <phase>package</phase>
                                <inherited>true</inherited>
                                <configuration>
                                    <archiveDirectory />
                                    <processMainArtifact>true</processMainArtifact>
                                    <processAttachedArtifacts>false</processAttachedArtifacts>
                                    <keystore>${keystore.location}</keystore>
                                    <storepass>${keystore.password}</storepass>
                                    <keypass>${keystore.keypass}</keypass>
                                    <alias>${keystore.alias}</alias>
                                    <arguments>
                                        <argument>-sigalg</argument>
                                        <argument>MD5withRSA</argument>
                                        <argument>-digestalg</argument>
                                        <argument>SHA1</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                        <artifactId>android-maven-plugin</artifactId>
                        <inherited>true</inherited>
                        <configuration>
                            <sign>
                                <debug>false</debug>
                            </sign>

                            <zipalign>
                                <skip>false</skip>
                                <verbose>true</verbose>
                                <outputApk>${project.build.directory}/${project.artifactId}-${project.version}-${build.type}.apk</outputApk>
                            </zipalign>
                        </configuration>
                        <executions>
                            <execution>
                                <id>alignApk</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>zipalign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>static-analysis</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-pmd-plugin</artifactId>
                        <version>3.0.1</version>
                        <configuration>
                            <failOnViolation>false</failOnViolation>
                            <rulesets>
                                <ruleset>rulesets/java/android.xml</ruleset>
                                <ruleset>rulesets/java/basic.xml</ruleset>
                                <ruleset>rulesets/java/braces.xml</ruleset>
                                <ruleset>rulesets/java/codesize.xml</ruleset>

                                <ruleset>rulesets/java/design.xml</ruleset>
                                <ruleset>rulesets/java/empty.xml</ruleset>
                                <ruleset>rulesets/java/coupling.xml</ruleset>


                                <ruleset>rulesets/java/naming.xml</ruleset>
                                <ruleset>rulesets/java/optimizations.xml</ruleset>
                                <ruleset>rulesets/java/strictexception.xml</ruleset>
                                <ruleset>rulesets/java/strings.xml</ruleset>

                                <ruleset>rulesets/java/typeresolution.xml</ruleset>
                                <ruleset>rulesets/java/unnecessary.xml</ruleset>
                                <ruleset>rulesets/java/unusedcode.xml</ruleset>
                            </rulesets>
                            <includes>
                                <include>com/soundcloud/android/**/*.java</include>
                            </includes>
                            <excludes>
                                <exclude>com/soundcloud/android/R.java</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <id>pmd-check</id>
                                <goals>
                                    <goal>check</goal>
                                    <goal>cpd-check</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>findbugs-maven-plugin</artifactId>
                        <version>2.5.1</version>
                        <configuration>
                            <failOnError>false</failOnError>
                            <onlyAnalyze>com.soundcloud.android.-</onlyAnalyze>
                            <excludeFilterFile>findbugs-exclude.xml</excludeFilterFile>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>check</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
