<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayerCloseBase.PlayerClose">
        <item name="android:background">@drawable/circular_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerLikeBase.PlayerLike">
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginRight">@dimen/player_like_margin_right</item>
    </style>

    <style name="PlayerMore" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:layout_marginRight">@dimen/player_more_margin_right</item>
        <item name="android:src">@drawable/btn_player_more</item>
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="PlayerShare" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:src">@drawable/btn_player_share</item>
        <item name="android:layout_marginRight">@dimen/player_share_margin_right</item>
        <item name="android:background">@drawable/btn_player_engagement_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerQueue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:src">@drawable/btn_player_play_queue</item>
        <item name="android:background">@drawable/circular_ripple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginRight">@dimen/player_queue_margin_right</item>
        <item name="android:layout_width">@dimen/player_engagement</item>
        <item name="android:layout_height">@dimen/player_engagement</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="PlayerPlayQueueButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/circular_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlayerPlay" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:src">@drawable/pc_player_play</item>
        <item name="android:background">@drawable/circular_ripple</item>
    </style>

    <style name="PlayerSkip" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/player_skip_margin</item>
        <item name="android:background">@drawable/circular_ripple</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
    </style>

    <style name="PlayerSkip.Next">
        <item name="android:src">@drawable/btn_player_next</item>
    </style>

    <style name="PlayerSkip.Previous">
        <item name="android:src">@drawable/btn_player_previous</item>
    </style>

</resources>
