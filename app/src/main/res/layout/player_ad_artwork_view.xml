<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/player_strip">
    <ImageView
        android:id="@+id/fullbleed_ad_artwork"
        style="@style/PlayerAdArtwork"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/centered_ad_artwork"
        style="@style/PlayerIABAdArtwork"
        android:visibility="invisible"/>
    <com.soundcloud.android.playback.ui.view.ArtworkAdOverlayView
            android:id="@+id/artwork_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/artwork_overlay_full"/>
    <com.soundcloud.android.playback.ui.view.ArtworkAdOverlayView
            android:id="@+id/centered_ad_clickable_overlay"
            style="@style/PlayerIABAdArtwork"
            android:visibility="invisible"/>
</RelativeLayout>
