<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artwork_container"
    android:layout_width="@dimen/stations_home_artwork_size"
    android:layout_height="@dimen/stations_home_artwork_size"
    android:layout_gravity="center_horizontal">

    <com.soundcloud.android.view.ForegroundImageView
        android:id="@+id/artwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sc:foregroundDrawable="@drawable/artwork_border"
        sc:square="true"
        tools:background="@color/ak_light_gray" />

    <ImageButton
        android:id="@+id/btn_play"
        style="@style/HeaderPlay"
        android:layout_gravity="center" />

</FrameLayout>
