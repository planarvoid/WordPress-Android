<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    style="@style/Collections.BucketCarouselCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/collection_recently_played_item_size"
    android:layout_height="wrap_content">

    <include layout="@layout/collection_recently_played_station_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/carousel_item_right_margin"
        android:layout_marginRight="@dimen/carousel_item_right_margin"/>

    <com.soundcloud.android.view.OverflowAnchorImageView
        android:id="@+id/overflow_button"
        style="@style/Collections.RecentlyPlayedCarouselOverflowMenuButton" />

</FrameLayout>
