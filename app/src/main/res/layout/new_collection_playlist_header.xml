<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/collection_playlist_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/header_top_separator"
        style="@style/Divider.Background" />

    <View style="@style/Divider.Section" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/header_text"
        style="@style/Collections.PlaylistHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/collections_playlists_header" />

    <View style="@style/Divider.Item" />

</LinearLayout>
