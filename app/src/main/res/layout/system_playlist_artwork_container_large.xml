<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:paddingBottom="16dp"
    android:layout_gravity="center"
    android:clipToPadding="false">

    <View
        style="@style/SystemPlaylistHeader.BackStack"
        android:layout_width="@dimen/system_playlist_preview_width_large"
        android:layout_height="@dimen/system_playlist_preview_height_large" />

    <View
        style="@style/SystemPlaylistHeader.MidStack"
        android:layout_width="@dimen/system_playlist_preview_width_large"
        android:layout_height="@dimen/system_playlist_preview_height_large" />

    <ViewFlipper
        android:id="@+id/artwork_animator"
        android:layout_width="@dimen/system_playlist_preview_width_large"
        android:layout_height="@dimen/system_playlist_preview_height_large" />

    <RelativeLayout
        android:layout_width="@dimen/system_playlist_preview_width_large"
        android:layout_height="@dimen/system_playlist_preview_width_large">

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_marginLeft="16dp"
            style="@style/SystemPlaylistHeader.PlayButton" />

    </RelativeLayout>

</FrameLayout>
