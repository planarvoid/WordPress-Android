<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/video_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/player_strip"
    tools:showIn="@layout/player_ad_video_page"
    tools:ignore="MergeRootFrame">

    <View
        android:id="@+id/letterbox_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <FrameLayout
        android:id="@+id/video_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.soundcloud.android.playback.ui.view.ArtworkAdOverlayView
            android:id="@+id/video_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/artwork_overlay"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_gradient_height"
            android:background="@drawable/player_gradient_top" />

        <Button
            android:id="@+id/video_fullscreen_control"
            style="@style/AdVideoButton.Fullscreen" />

        <Button
            android:id="@+id/video_shrink_control"
            style="@style/AdVideoButton.Shrink" />

    </FrameLayout>

</FrameLayout>
