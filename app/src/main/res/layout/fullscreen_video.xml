<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <com.soundcloud.android.view.AspectRatioTextureView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StreamVideo"/>

        <com.soundcloud.android.view.CircularProgressBar
            android:id="@+id/video_progress"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/player_play"
            style="@style/AdVideoButton.Play"
            android:layout_centerInParent="true"/>

        <View
            android:id="@+id/video_gradient"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/player_gradient_top"/>

        <Button
            android:id="@+id/video_shrink_control"
            style="@style/AdVideoButton.Shrink"
            android:visibility="visible"/>

        <!-- Moat needs an unobscured view that is the same dimensions and placement as video_view -->
        <View
            android:id="@+id/viewability_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/video_view"
            android:layout_alignBottom="@id/video_view"
            android:clickable="false"
            android:focusable="false"/>
    </RelativeLayout>

    <com.soundcloud.android.playback.ui.view.RoundedColorButton
            android:id="@+id/cta_button"
            style="@style/AdButton.CallToAction"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ad_cta_button_video_bottom_margin"/>
</RelativeLayout>
