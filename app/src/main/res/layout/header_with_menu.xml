<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Divider.Background" />

    <View style="@style/Divider.Section" />

    <LinearLayout
        style="@style/TrackLikesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/header_text"
            style="@style/TextAppearance.SoundCloudLightFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1" />

        <com.soundcloud.android.view.OverflowAnchorImageView
            android:id="@+id/overflow_button"
            style="@style/EngagementAction.Overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center|end" />

    </LinearLayout>

    <View style="@style/Divider.Section" />

</LinearLayout>
