<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_queue_item_track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/queue_item_background"
    android:clickable="true"
    android:longClickable="false"
    android:clipToPadding="false"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <View
        android:id="@+id/go_indicator"
        style="@style/GoIndicator"
        android:layout_alignRight="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_marginRight="@dimen/go_indicator_offset"
        android:layout_marginTop="@dimen/go_indicator_offset" />

    <LinearLayout
        android:id="@+id/text_holder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clipChildren="false"
        android:orientation="vertical"
        android:layout_toRightOf="@id/image"
        android:layout_toLeftOf="@+id/overflow_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clipChildren="false"
            android:orientation="horizontal">

            <com.soundcloud.android.view.CustomFontTextView
                android:id="@+id/creator"
                style="@style/ListItemText.PrimaryText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/ak_medium_gray"
                android:textSize="15sp" />

            <FrameLayout
                android:id="@+id/status_place_holder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipChildren="false" />
        </LinearLayout>

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/title"
            style="@style/PlayQueue.Title"
            android:layout_width="match_parent" />

    </LinearLayout>

    <com.soundcloud.android.view.OverflowAnchorImageView
        android:id="@+id/overflow_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/queue_item_background"
        android:scaleType="centerInside"
        android:src="@drawable/playqueue_track_item_overflow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
