<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:id="@+id/user_sounds_playlist_card"
        style="@style/Profile.Sounds.Card.Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <include
            style="@style/Profile.Sounds.Card.Item"
            layout="@layout/playlist_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            style="@style/Profile.Sounds.Card.Item"
            layout="@layout/default_card_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false" />

        <View style="@style/Divider.Item" />

    </LinearLayout>
</FrameLayout>
