<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/carousel_playlist_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:foreground="?attr/selectableItemBackground">

    <com.soundcloud.android.image.StyledImageView
        android:id="@+id/artwork"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.soundcloud.android.offline.DownloadImageView
        android:id="@+id/item_download_state"
        style="@style/DownloadItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/artwork"
        android:layout_alignTop="@id/artwork"
        android:layout_marginLeft="@dimen/download_progress_indicator_margin"
        android:layout_marginTop="@dimen/download_progress_indicator_margin"
        android:visibility="gone" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/track_count"
        style="@style/Collections.SmallTrackCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/artwork"
        tools:text="12" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/title"
        style="@style/Carousel.ItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artwork"
        android:layout_toLeftOf="@+id/indicator_views"
        android:layout_marginRight="4dp" />

    <LinearLayout
        android:id="@+id/indicator_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/artwork"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/like_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_playlist_like"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/private_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_playlist_private"
            android:visibility="gone" />

        <com.soundcloud.android.offline.DownloadImageView
            android:id="@+id/offline_state_indicator"
            style="@style/DownloadItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/no_network_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/entity_no_network"
            android:visibility="gone" />

    </LinearLayout>

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/secondary_text"
        style="@style/Carousel.ItemArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginRight="4dp" />

</RelativeLayout>
