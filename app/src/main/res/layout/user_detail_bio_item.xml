<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bio_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="UnusedResources">

    <View style="@style/Divider.Background" />

    <View style="@style/Divider.Section" />

    <com.soundcloud.android.view.CustomFontTextView
        style="@style/Profile.InfoTab.HeadingText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/profile_bio" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/bio_text"
        style="@style/Profile.InfoTab.BioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View style="@style/Divider.Section" />

</LinearLayout>
