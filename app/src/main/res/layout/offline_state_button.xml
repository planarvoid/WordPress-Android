<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:minWidth="36dp">

    <com.soundcloud.android.offline.DownloadImageView
        android:id="@+id/icon"
        style="@style/DownloadItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/label"
        style="@style/Collections.EngagementText"
        android:layout_marginRight="4dp"
        android:text="@string/offline_update_in_progress"
        android:visibility="gone" />

</LinearLayout>
