<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/ListItemLayout"
        android:paddingTop="0dp">

        <include layout="@layout/sound_list_item_views" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@id/list_item_counter"
            style="@style/ListItemText.Numeric.Stats"
            android:layout_below="@id/list_item_subheader"
            android:layout_toRightOf="@id/image"
            android:drawableLeft="@drawable/stats_likes_grey" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/promoted_playlist"
            style="@style/ListItemText.TertiaryText"
            android:layout_toRightOf="@id/image"
            android:layout_below="@id/list_item_subheader"
            android:drawableLeft="@drawable/promoted_icon"
            android:visibility="gone" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@id/list_item_right_info"
            style="@style/ListItemText.Numeric"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/image"
            android:layout_marginTop="3dp"
            android:drawableRight="@drawable/playlist_item_tracks_caret" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/private_indicator"
            style="@style/ListItemText.Private.LeftAligned"
            android:layout_below="@id/list_item_subheader"
            android:layout_toRightOf="@id/image"
            android:visibility="gone" />

        <com.soundcloud.android.view.CustomFontTextView
            android:id="@+id/album_title"
            style="@style/ListItemText.Numeric.Stats"
            android:layout_below="@id/list_item_subheader"
            android:layout_toRightOf="@id/image"
            android:visibility="gone" />

    </RelativeLayout>

    <com.soundcloud.android.view.OverflowAnchorImageView
        android:id="@+id/overflow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ListItemOverflowButton"
        android:layout_gravity="bottom|end"/>

</FrameLayout>
