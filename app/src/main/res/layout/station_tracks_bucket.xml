<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Collections.Bucket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Divider.Background" />

    <View style="@style/Divider.Section" />

    <com.soundcloud.android.view.CustomFontTextView
        style="@style/StationInfo.TrackHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/stations_tracks_in_this_station" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/station_tracks_carousel"
        style="@style/StationInfo.StationTracksCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/Divider.Item" />

    <com.soundcloud.android.view.CustomFontTextView
        android:id="@+id/see_all_tracks"
        style="@style/StationInfo.ViewAllText"
        android:text="@string/stations_see_all_tracks"
        android:visibility="gone" />

    <View style="@style/Divider.Section" />

    <View style="@style/Divider.Background" />

</LinearLayout>
