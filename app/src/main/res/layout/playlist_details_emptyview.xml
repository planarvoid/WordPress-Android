<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/progress_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ViewStub
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/loading"
        android:layout="@layout/playlist_details_loading_tracks" />

    <ViewStub
        android:id="@+id/server_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/server_error"
        android:layout="@layout/emptyview_server_error" />

    <ViewStub
        android:id="@+id/connection_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/connection_error"
        android:layout="@layout/emptyview_connection_error" />

    <ViewStub
        android:id="@+id/no_tracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/no_tracks"
        android:layout="@layout/emptyview_playlist_no_tracks" />

</RelativeLayout>

