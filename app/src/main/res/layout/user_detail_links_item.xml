<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="UnusedResources">

    <LinearLayout
        android:id="@+id/links_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/Divider.Background" />

        <View style="@style/Divider.Section" />

        <com.soundcloud.android.view.CustomFontTextView
            style="@style/Profile.InfoTab.HeadingText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/profile_links" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/links_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/links_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/white" />

        <View style="@style/Divider.Section" />
    </LinearLayout>

</LinearLayout>
