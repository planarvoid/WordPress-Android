<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

    <FrameLayout android:layout_gravity="left"
                 android:layout_width="@dimen/notification_image_large_width"
                 android:layout_height="@dimen/notification_image_large_height"
                 android:id="@+id/icon_holder">
        <ImageView
                android:id="@+id/status_icon"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_notification_cloud"/>
        <ImageView
                android:id="@+id/icon"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>


    <LinearLayout
            android:id="@+id/line1"
            android:layout_alignTop="@id/icon_holder"
            android:layout_toRightOf="@id/icon_holder"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="horizontal">

        <TextView android:id="@+id/user_txt"
                  style="@style/PlaybackNotificationUser"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:layout_marginRight="8dp"
                  android:maxLines="1"
                  android:fadingEdge="horizontal"
                  android:ellipsize="marquee"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:background="@drawable/notification_background_clickable"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:id="@+id/close"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_close"/>
    </LinearLayout>

    <TextView
            android:id="@+id/title_txt"
            android:layout_height="0dp"
            style="@style/PlaybackNotificationTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/icon_holder"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line1"
            android:layout_above="@+id/action_divider"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"/>

    <ImageView android:id="@+id/action_divider"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_toRightOf="@id/icon_holder"
               android:layout_above="@+id/line3"
               android:background="?android:attr/listDivider"/>

    <LinearLayout android:id="@id/line3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/icon_holder"
                  android:layout_alignParentRight="true"
                  android:layout_alignBottom="@id/icon_holder"
                  android:showDividers="middle"
                  android:divider="?android:attr/listDivider"
                  android:dividerPadding="12dp">

        <ImageButton
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:padding="5dp"
                android:id="@+id/prev"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_background_clickable"
                android:src="@drawable/notifications_previous"/>

        <ImageButton
                android:id="@+id/toggle_playback"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_background_clickable"
                android:src="@drawable/notifications_play"/>

        <ImageButton
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:layout_width="0dp"
                android:id="@+id/next"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_background_clickable"
                android:src="@drawable/notifications_next"/>
    </LinearLayout>
</RelativeLayout>
