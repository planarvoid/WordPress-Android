<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayQueue" />

    <style name="PlayQueue.Title" parent="ListItemText.SecondaryText">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/ak_light_gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PlayQueue.Remove" parent="ListItemText.SecondaryText">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/play_queue_remove</item>
        <item name="android:text">@string/playqueue_remove</item>
        <item name="android:textColor">@color/ak_light_gray</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="PlayQueue.MagicBox">
        <item name="android:paddingTop">48dp</item>
        <item name="android:paddingBottom">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayQueue.AutoPlaySwitchLabel" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayQueue.MagicBoxDescription" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textColor">@color/ak_medium_dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
