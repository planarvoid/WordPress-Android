<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="More" parent="TextAppearance.SoundCloudLightFont" />

    <style name="More.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="More.Header">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/default_list_item_padding</item>
    </style>

    <style name="More.HeaderImage">
        <item name="android:layout_width">@dimen/profile_image_dimen</item>
        <item name="android:layout_height">@dimen/profile_image_dimen</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/appwidget_artwork_placeholder</item>
        <item name="cbiv_borderColor">@color/user_image_border_color</item>
        <item name="cbiv_borderWidth">@dimen/user_image_border_width</item>
    </style>

    <style name="More.HeaderText">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="More.HeaderText.Username">
        <item name="android:textAppearance">@style/TextAppearance.More.Username</item>
    </style>

    <style name="More.HeaderText.ProfileLink">
        <item name="android:textAppearance">@style/TextAppearance.More.ProfileLink</item>
    </style>

    <style name="More.NavItem">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.More.NavItem</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="More.NavItem.Right">
        <item name="android:textColor">@color/ak_medium_dark_gray</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="More.NavItem.Upsell">
        <item name="android:textColor">@color/ak_sc_orange</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="More.VersionText">
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">@style/TextAppearance.More.Version</item>
        <item name="android:background">@color/page_background</item>
    </style>

    <style name="TextAppearance.More" />

    <style name="TextAppearance.More.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>

    <style name="TextAppearance.More.ProfileLink">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="TextAppearance.More.NavItem">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextAppearance.More.Version">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/you_version_text</item>
    </style>

</resources>
