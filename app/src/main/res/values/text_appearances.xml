<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" />

    <!-- ****** Adapter View Base styles ****** -->

    <style name="TextAppearance.GridItemBottom" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/grid_item_bottom_text_size</item>
    </style>

    <!-- ****** SoundCloud Custom Interstate Fonts ****** -->
    <style name="TextAppearance.SoundCloudLightFont">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TextAppearance.SoundCloudLightNumberFont">
        <item name="custom_font">@string/interstate_light_tnum</item>
    </style>

    <style name="TextAppearance.SoundCloudRegularFont">
        <item name="custom_font">@string/interstate_regular</item>
    </style>

    <style name="TextAppearance.ScAppCompat.Large" parent="TextAppearance.SoundCloudLightFont">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TextAppearance.ScStatusBar.EventContent" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TextAppearance.SoundCloudFont.ScLarge" parent="@android:style/TextAppearance.Large">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TextAppearance.Widget.ScAppCompat.Toolbar.Title" parent="@android:style/TextAppearance.Large">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="Widget.ScAppCompat.EditText" parent="Widget.AppCompat.EditText">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="custom_font">@string/interstate_light</item>
    </style>

    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="custom_font">@string/interstate_light</item>
    </style>

</resources>
