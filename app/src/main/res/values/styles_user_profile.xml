<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Profile" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Profile.ToggleButton">
        <item name="android:minHeight">@dimen/profile_btn_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Profile.ToggleButton.Follow">
        <item name="android:paddingLeft">@null</item>
        <item name="android:paddingRight">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_follow</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="Profile.ToggleButton.Follow.List">
        <item name="android:background">@drawable/btn_follow_list_item</item>
    </style>

    <style name="Profile.ToggleButton.Follow.Large">
        <item name="android:textSize">@dimen/follow_btn_text</item>
        <item name="android:textColor">@drawable/toggle_txt_user_follow_states</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_toggle_follow</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>

        <item name="android:textOn">@string/btn_following</item>
        <item name="android:textOff">@string/btn_follow</item>
    </style>

    <style name="Profile.ToggleButton.Follow.Large.TextToggle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="textOff">@string/btn_follow</item>
        <item name="textPaddingRight">12dp</item>

        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="Profile.ToggleButton.Station">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_station</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableLeft">@drawable/stations_default</item>
        <item name="android:textSize">@dimen/follow_btn_text</item>
    </style>

    <style name="Profile.ToggleButton.Station.Large" />

    <style name="Profile.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/list_secondary</item>
    </style>

    <style name="Profile.Text.Primary">
        <item name="android:textColor">@color/list_primary</item>
    </style>

    <style name="Profile.Text.Followers">
        <item name="android:drawableLeft">@drawable/stats_followers</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="Profile.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/raven</item>
        <item name="android:textColorLink">@color/cornflower</item>
    </style>

    <style name="Profile.Info.Link">
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@drawable/txt_blue_states</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- NEW PROFILE -->

    <style name="ProfileHeaderContainerBase" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Profile.HeaderContainer" parent="ProfileHeaderContainerBase" />

    <style name="HeaderInfoLayoutBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Profile.HeaderInfoLayout" parent="HeaderInfoLayoutBase" />

    <style name="Profile.HeaderImage">
        <item name="android:layout_width">@dimen/profile_image_dimen</item>
        <item name="android:layout_height">@dimen/profile_image_dimen</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cbiv_borderColor">@color/user_image_border_color</item>
        <item name="cbiv_borderWidth">@dimen/user_image_border_width</item>
    </style>

    <style name="Profile.Username">
        <item name="android:textAppearance">@style/TextAppearance.Profile.Username</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Profile" />

    <style name="TextAppearance.Profile.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/raven</item>
    </style>

    <style name="Profile.Toolbar" />

    <style name="Profile.CollapsingToolbar" />

    <style name="Profile.CollapsingToolbar.Elevation" />

    <style name="Profile.Stats" parent="ListItemText.Numeric">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Profile.Sounds" />

    <style name="Profile.Sounds.Card" />

    <style name="Profile.Sounds.Card.Container">
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="Profile.Sounds.Card.Item" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Profile.Sounds.Heading" parent="TextAppearance.SoundCloudRegularFont">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/user_profile_section_header</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Profile.InfoTab" />

    <style name="Profile.InfoTab.ViewFollows">
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Profile.InfoTab.ViewFollowsText" parent="TextAppearance.SoundCloudRegularFont">
        <item name="android:textColor">@color/user_profile_section_header</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Profile.InfoTab.ViewFollowsNumber" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:drawableRight">@drawable/inset_chevron</item>
        <item name="android:drawablePadding">@dimen/view_all_chevron_padding</item>
    </style>

    <style name="Profile.InfoTab.HeadingText" parent="TextAppearance.SoundCloudRegularFont">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/user_profile_section_header</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Profile.InfoTab.BioText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/raven</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">@color/cornflower</item>
    </style>

    <style name="Profile.InfoTab.Link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/raven</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
