<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AdText.Advertisement">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AdText.Companionless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/companionless_text</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="AdText.NextUp">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AdText.NextUp.Skip">
        <item name="android:textColor">@drawable/txt_white_states</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/btn_player_ad_skip</item>
    </style>
    <style name="AdText.NextUp.Title">
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="AdButton" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textColor">@drawable/txt_white_states</item>
    </style>
    <style name="AdButton.WhyAds">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AdButton.CallToAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ad_cta_button_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="PreviewArtwork">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PreviewArtworkOverlay">
        <item name="android:background">@color/preview_artwork_overlay</item>
    </style>

    <style name="SkipContainer">
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">18dip</item>
    </style>

    <style name="LeaveBehindImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ariv_aspectRatioEnabled">true</item>
        <item name="ariv_dominantMeasurement">width</item>
        <item name="ariv_aspectRatio">0.83</item>
    </style>

    <style name="InterstitialImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="AdOverlayClose" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/btn_close_ad</item>
    </style>

     <style name="AdVideoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
         <item name="android:visibility">gone</item>
    </style>

    <style name="AdVideoButton.Fullscreen">
        <item name="android:layout_marginTop">1.5dp</item>
        <item name="android:layout_marginLeft">1.5dp</item>
        <item name="android:background">@drawable/btn_video_ad_fullscreen</item>
    </style>

    <style name="AdVideoButton.Play">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/video_play_button</item>
    </style>

    <style name="AdVideoButton.Volume">
        <item name="android:layout_marginTop">1.5dp</item>
        <item name="android:layout_marginRight">1.5dp</item>
        <item name="android:background">@drawable/btn_video_ad_volume</item>
    </style>

    <style name="AdVideoButton.Shrink">
        <item name="android:layout_marginTop">12.5dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:background">@drawable/btn_video_ad_shrink</item>
    </style>

</resources>
