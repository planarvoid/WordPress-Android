<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Comments" parent="TextAppearance.SoundCloudLightFont" />
    <style name="Comments.Header"/>

    <style name="Comments.Header.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="Comments.Header.Text.Primary">
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>

    <style name="Comments.Header.CommentsCount">
        <item name="android:drawableLeft">@drawable/stats_comment</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
