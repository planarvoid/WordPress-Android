<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Onboarding" parent="TextAppearance.SoundCloudLightFont" />
    <style name="Onboarding.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/tour_buttons_height</item>
        <item name="android:layout_weight">1</item>

        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tour_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Onboarding.NextButton" parent="Onboarding.Button">
        <item name="android:background">@drawable/signup_next_button</item>
    </style>

    <style name="Onboarding.CancelButton" parent="Onboarding.Button">
        <item name="android:background">@drawable/signup_cancel_button</item>
    </style>

    <style name="Onboarding.LoginCreateAccountBar">
        <item name="android:layout_marginBottom">38dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Onboarding.CreateAccountButton" parent="Onboarding.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Onboarding.LoginButton" parent="Onboarding.Button">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="Onboarding.EmailSignUpButton" parent="Onboarding">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minWidth">251dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/btn_signup</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Onboarding.SocialLoginButton" parent="Onboarding">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Onboarding.FacebookButton" parent="Onboarding.SocialLoginButton">
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">10.5dp</item>
        <item name="android:paddingRight">25.5dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:drawablePadding">30dp</item>
    </style>

    <style name="Onboarding.GoogleButton" parent="Onboarding.SocialLoginButton">
        <item name="android:paddingLeft">43dp</item>
        <item name="android:background">@drawable/btn_google_sign_in</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Onboarding.Headline">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SignUp" parent="TextAppearance.SoundCloudLightFont" /> <!-- and Login, too! -->

    <style name="SignUp.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SignUp.Overlay">
        <item name="android:background">@color/tour_overlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SignUp.ScrollViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignUp.ScrollView" parent="SignUp.ScrollViewBase">

    </style>

    <style name="SignUp.Content.Stub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignUp.ContentBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SignUp.Content" parent="SignUp.ContentBase">
    </style>

    <style name="SignUp.TermsText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLargeInverse</item>
        <item name="android:textColorLink">@drawable/txt_blue_states</item>
    </style>

    <style name="SignUp.TermsMessage" parent="SignUp.TermsText">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SignUp.Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColorLink">@drawable/txt_blue_states</item>
    </style>

    <style name="SignUp.Header" parent="SignUp.Info">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignUp.LoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_field</item>

    </style>

    <style name="SignUp.LabelRow" />

    <style name="SignUp.SeparatorRow">
        <item name="android:background">@color/signup_separator</item>
        <item name="android:layout_span">2</item>
    </style>

    <style name="SignUp.SeparatorView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/signup_separator</item>
    </style>

    <style name="SignUp.SeparatorView.Vertical">
        <item name="android:layout_width">1px</item>
    </style>

    <style name="SignUp.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>

        <item name="android:padding">@dimen/signup_label_padding</item>
        <item name="android:layout_margin">4dp</item>

        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

        <item name="android:background">@null</item>
    </style>

    <style name="SignUp.AddImageLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:padding">10dp</item>

        <item name="android:background">@drawable/info_upload_image_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/list_text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignUp.MultiLineInfoLabel" parent="SignUp.Label">
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
    </style>

    <style name="SignUp.TextEntry" parent="SignUp.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SignUp.EmailEntry" parent="SignUp.TextEntry">
        <item name="android:inputType">textNoSuggestions|textEmailAddress</item>
        <item name="android:dropDownSelector">@drawable/ak_list_selector_gray</item>
    </style>

    <style name="SignUp.PasswordEntry" parent="SignUp.TextEntry">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="txt_auth_title" parent="TextAppearance.SoundCloudFont.ScLarge">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="txt_auth_input" parent="Widget.ScAppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>
    <style name="txt_auth_msg" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="TourOverlayTextHolderLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>
