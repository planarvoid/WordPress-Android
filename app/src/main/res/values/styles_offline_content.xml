<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="DownloadItem">
        <item name="queued">@drawable/entity_queued</item>
        <item name="downloaded">@drawable/entity_downloaded</item>
        <item name="downloading">@drawable/entity_downloading</item>
        <item name="unavailable">@drawable/entity_unavailable</item>
    </style>

    <style name="EngagementAction.OfflineState">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="defaultIcon">@drawable/button_download_default</item>
        <item name="downloadedIcon">@drawable/button_download_downloaded</item>
        <item name="downloadingIcon">@drawable/button_download_downloading</item>
        <item name="waitingIcon">@drawable/button_download_waiting</item>
    </style>

    <style name="SummaryRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="summarySize">14sp</item>
        <item name="summaryColor">?android:textColorSecondary</item>
    </style>

</resources>
