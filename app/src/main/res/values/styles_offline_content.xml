<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="DownloadItem">
        <item name="queued">@drawable/ic_download_item_queued_states</item>
        <item name="downloaded">@drawable/ic_download_item_downloaded_states</item>
        <item name="downloading">@drawable/ic_download_item_downloading_states</item>
        <item name="unavailable">@drawable/ic_download_item_unavailable_states</item>
    </style>

    <style name="DownloadButtonItem">
        <item name="queued">@drawable/button_download_queued</item>
        <item name="downloaded">@drawable/button_download_downloaded</item>
        <item name="downloading">@drawable/button_download_downloading</item>
        <item name="unavailable">@drawable/button_download_unavailable</item>
    </style>

    <style name="SummaryRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="summarySize">14sp</item>
        <item name="summaryColor">?android:textColorSecondary</item>
    </style>

</resources>
