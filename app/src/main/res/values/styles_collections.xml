<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Collections" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Collections.ItemArtwork">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Collections.CollectionPreview">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Collections.CollectionPreviewTitle" parent="ListItemText.PrimaryText">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Collections.CollectionPreviewArtwork">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Collections.PlaylistHeader">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/collections_recently_played_header</item>
        <item name="android:paddingLeft">@dimen/collection_default_margin</item>
        <item name="android:paddingRight">@dimen/collection_default_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Collections.PlaylistKillFilterText" parent="ListItemText.PrimaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/collections_kill_filter_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Collections.ItemTitle" parent="ListItemText.PrimaryText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Collections.Creator" parent="ListItemText.SecondaryText">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="Collections.ListContainer">
        <item name="android:background">@color/page_background</item>
    </style>

    <style name="Collections.OptionsToggle">
        <item name="android:background">@drawable/orange_toggle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:stateListAnimator" tools:targetApi="21">@null</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/orange_toggle_text</item>
    </style>

    <style name="Collections.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@drawable/orange_radio_text</item>
    </style>

    <style name="Collections.PlaylistsEmptyImage">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Collections.PlaylistsEmptyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/collections_empty_text_color</item>
    </style>

    <style name="Collections.SmallTrackCount" parent="TextAppearance.SoundCloudLightNumberFont">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@drawable/recently_played_circle_playlist_tracks_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:antialias">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Collections.Bucket">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Collections.BucketHeader">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/collections_recently_played_header</item>
        <item name="android:paddingLeft">@dimen/collection_default_margin</item>
        <item name="android:paddingRight">@dimen/collection_default_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Collections.BucketCarousel">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Collections.BucketEmptyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:paddingLeft">96dp</item>
        <item name="android:paddingRight">96dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/collections_empty_text_color</item>
    </style>

    <style name="Collections.BucketCarouselCard">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Collections.EngagementText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
