<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Search feature -->
    <style name="Search" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Search.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/search_query_text</item>
        <item name="android:textColorHint">@color/search_hint_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Search.TextView.Input">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Search.TextView.Link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SearchIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/search_link_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/search_link_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/search_link_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/search_link_padding_vertical</item>
    </style>

    <style name="Search.Suggestion" />

    <style name="Search.Suggestion.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/search_suggestions_list_item_padding</item>
        <item name="android:paddingRight">@dimen/search_suggestions_list_item_padding</item>
    </style>

    <style name="Search.Suggestion.AutocompleteIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Search.Suggestion.Icon">
        <item name="android:layout_height">@dimen/search_suggestion_icon_dimension</item>
        <item name="android:layout_width">@dimen/search_suggestion_icon_dimension</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Search.Suggestion.Icon.Type">
        <item name="android:layout_height">@dimen/search_suggestion_type_dimension</item>
        <item name="android:layout_width">@dimen/search_suggestion_type_dimension</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Search.Suggestion.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/search_suggestion_text</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/search_suggestion_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Search.PremiumContent" />

    <style name="Search.PremiumContent.Text">
        <item name="custom_font">@string/interstate_light</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Search.PremiumContent.Text.ViewAll">
        <item name="custom_font">@string/interstate_regular</item>
        <item name="android:textColor">@color/discovery_search_premium_view_all</item>
    </style>

    <style name="Search.PremiumContent.Text.Upsell">
        <item name="custom_font">@string/interstate_regular</item>
        <item name="android:textColor">@color/soundcloud_orange</item>
    </style>

    <!-- Carousel feature -->
    <style name="Carousel" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Carousel.Bucket">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Carousel.ReasonText">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Carousel.DiscoverNewTracks">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/recommended_for_you_text</item>
    </style>

    <style name="Carousel.RecommendationItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginRight">@dimen/recommendation_item_right_margin</item>
    </style>

    <style name="Carousel.Artwork">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Carousel.ItemTitle">
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textColor">@color/recommendation_card_track_title</item>
    </style>

    <style name="Carousel.ItemArtist">
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/recommendation_card_artist_name</item>
    </style>

    <style name="Carousel.ItemNowPlaying">
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/soundcloud_orange</item>
    </style>

    <style name="Carousel.OverflowButton">
        <item name="android:background">@drawable/btn_list_overflow</item>
    </style>

    <style name="Carousel.FooterItem">
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">48dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:background">@color/mist</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TODO Replace Recommendations styles with these styles -->
    <!-- Modules -->
    <style name="Module" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Module.Background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Module.Header" parent="Carousel.DiscoverNewTracks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/recommendations_cell_text_recommended_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/recommendations_cell_text_recommended_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/discovery_cell_text_padding</item>
        <item name="android:paddingRight">@dimen/discovery_cell_text_padding</item>
        <item name="android:paddingTop">@dimen/recommendations_cell_text_recommended_padding_top</item>
    </style>

    <!-- Charts -->
    <style name="Chart" parent="TextAppearance.SoundCloudLightFont" />

    <style name="Chart.TextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/discovery_cell_text_height</item>
        <item name="android:textSize">@dimen/chart_header_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/discovery_cell_text_padding</item>
        <item name="android:paddingRight">@dimen/discovery_cell_text_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- User Welcome Card -->
    <style name="WelcomeUser" parent="TextAppearance.SoundCloudLightFont" />

    <style name="WelcomeUser.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WelcomeUser.Description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/seventy_percent_white</item>
    </style>

    <!-- New for you -->
    <style name="NewForYouModule" parent="Module" />

    <style name="NewForYouModule.Title" parent="NewForYouModule">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/raven</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="NewForYouModule.Intro" parent="NewForYouModule">
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="NewForYouModule.IntroText" parent="NewForYouModule">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="NewForYouModule.Action" parent="NewForYouModule">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawableRight">@drawable/inset_chevron</item>
        <item name="android:drawablePadding">@dimen/view_all_chevron_padding</item>
    </style>

    <style name="NewForYouModule.BackStack" parent="NewForYouModule">
        <item name="android:background">@drawable/new_for_you_back_stack_bg</item>
        <item name="android:rotation">5</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="NewForYouModule.MidStack" parent="NewForYouModule">
        <item name="android:background">@drawable/new_for_you_mid_stack_bg</item>
        <item name="android:rotation">-5</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="SystemPlaylistHeader" parent="TextAppearance.SoundCloudLightFont" />

    <style name="SystemPlaylistHeader.Container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/stations_blur_overlay</item>
    </style>

    <style name="SystemPlaylistHeader.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minTextSize">18sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SystemPlaylistHeader.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SystemPlaylistHeader.DetailsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SystemPlaylistHeader.Duration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SystemPlaylistHeader.UpdatedAt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SystemPlaylistHeader.PlayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/btn_header_play</item>
    </style>

    <!--discovery backend cards-->

    <style name="Discovery" />

    <style name="Discovery.Selection" />

    <style name="Discovery.Selection.Card" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="Discovery.Selection.Title" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/raven</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Discovery.Selection.Description" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Discovery.Selection.SocialProofText" parent="TextAppearance.SoundCloudLightFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Discovery.Selection.SocialProofImage">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cbiv_borderColor">@color/white</item>
        <item name="android:padding">1dp</item>
        <item name="cbiv_borderWidth">2dp</item>
    </style>

    <style name="Discovery.Selection.SocialProofImageOverlap" parent="Discovery.Selection.SocialProofImage">
        <item name="android:layout_marginLeft">-8dp</item>
    </style>

</resources>
