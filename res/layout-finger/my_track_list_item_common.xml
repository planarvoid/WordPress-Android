<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
		<RelativeLayout android:id="@+id/track_info_row" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:gravity="center_vertical" android:ignoreGravity="@+id/icon">
			<ImageView
				android:layout_alignParentLeft="true"
				android:layout_width="47dip" 
				android:layout_height="47dip"
				android:gravity="center_vertical"
				android:id="@+id/icon" />
			<ImageView android:id="@+id/play_indicator"
			 	android:gravity="center_vertical"
			 	android:paddingLeft="5dip" 
			 	android:paddingTop="6dip"
			 	android:scaleType="center"
			 	android:layout_alignWithParentIfMissing="true"
			 	android:layout_toRightOf="@id/icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    <LinearLayout android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:id="@+id/track_layout"
		        android:paddingTop="3dip"
		        android:layout_toRightOf="@id/play_indicator"
		        android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					style="@style/txt_list_main" 
					android:singleLine="true"
	            	android:ellipsize="marquee"
					android:id="@+id/track"
					android:text="track" 
					android:layout_weight="1"/>
				<ImageView android:id="@+id/private_indicator"
					android:layout_marginTop="3dip"
				 	android:src="@drawable/very_private"
				 	android:scaleType="center"
			        android:layout_width="46dip"
			        android:layout_height="14dip" />
		    </LinearLayout>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				style="@style/txt_list_sub_secondary"
				android:layout_alignWithParentIfMissing="true"
				android:id="@+id/track_created_at"
		        android:layout_below="@id/track_layout"
		        android:paddingRight="0dip"
		        android:layout_toRightOf="@id/icon"
		        android:text="@string/track_by" />
		    <ProgressBar android:id="@+id/progress_bar"
                android:orientation="horizontal" android:layout_toRightOf="@id/icon"
                style="@style/ScProgressBarRound" android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/track_layout"
                android:layout_height="10dip" android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip" android:layout_marginTop="5dip" />
		</RelativeLayout>
</merge>
