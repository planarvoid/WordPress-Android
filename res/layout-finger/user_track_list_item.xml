<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RelativeLayout01" android:layout_height="wrap_content"
	android:orientation="vertical" android:layout_width="fill_parent">

	<com.soundcloud.utils.RemoteImageView
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:padding="5dip" 
		android:id="@+id/icon" />
	<TextView android:layout_width="wrap_content"
		android:textStyle="bold" 
		android:layout_height="wrap_content" 
		android:paddingLeft="5dip"
		android:paddingRight="5dip" 
		android:paddingTop="5dip" 
		android:id="@+id/track"
		android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/icon"
		android:text="track" 
		android:textSize="14sp" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:paddingLeft="5dip"
		android:paddingRight="5dip" 
		android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/user"
        android:layout_toRightOf="@id/track"
		android:id="@+id/duration" 
		android:text="duration"
		android:textSize="12sp" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:paddingLeft="5dip"
		android:paddingRight="5dip" 
		android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/duration"
        android:layout_toRightOf="@id/icon"
		android:id="@+id/favorited_by" 
		android:text="favorited_by"
		android:textSize="12sp" />
	 <ImageView android:id="@+id/play_indicator"
        android:layout_alignParentRight="true"
        android:layout_below="@id/duration"        
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dip" /> 
	

</RelativeLayout>