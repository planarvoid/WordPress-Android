<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:background="@drawable/comment_touch_bar"
                android:layout_height="@dimen/player_comment_bar_height"
                android:gravity="center_vertical">

    <RelativeLayout android:layout_height="fill_parent"
                    android:id="@+id/new_comment_bar"
                    android:layout_width="fill_parent">

        <TextView android:id="@+id/txt_instructions"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/txt_player_touch_bar"
                  android:text="@string/player_touch_bar"
                  android:layout_centerInParent="true"
                  android:gravity="center"/>
    </RelativeLayout>

    <ImageButton
            android:id="@+id/btn_toggle"
            android:src="@drawable/ic_hide_comments_states"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:paddingRight="15dip"
            android:paddingLeft="15dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/player_comment_bar_toggle_margin_right"
            />
</RelativeLayout>