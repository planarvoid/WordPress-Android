<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:panel="http://schemas.android.com/apk/res/org.miscwidgets"
	android:background="@color/playerControlBackground" 
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<Chronometer android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dip"
        style="@style/txt_record_instructions"
        android:layout_centerHorizontal="true"
        />
	<TextView
        android:id="@+id/txt_instructions"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/txt_record_instructions"
        android:text="@string/record_instructions"/>
    <ProgressBar android:id="@+id/progress_bar"
    	android:layout_marginTop="40dip"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       style="@style/ScProgressBarSmall"
       android:orientation="horizontal"  />
    <FrameLayout android:id="@+id/gauge_holder" android:layout_weight="1"
		android:paddingBottom="50dip"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
    <ImageButton android:id="@+id/btn_action" 
    	android:background="@drawable/btn_rec_states" 
    	android:layout_centerInParent="true"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <LinearLayout android:visibility="gone" android:paddingTop="20dip" android:paddingBottom="5dip"
   		android:layout_below="@+id/btn_action"
		android:orientation="horizontal" android:id="@+id/file_layout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"> 
	    <Button android:id="@+id/btn_reset" android:text="Reset" 
	    	android:padding="10dip" android:layout_weight="1"
	        android:layout_width="wrap_content" android:layout_height="50dip" />
	    <Button android:id="@+id/btn_upload" android:text="Upload"
	    	android:padding="15dip" android:layout_weight="1"
	        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>