<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/createBackground">

    <RelativeLayout android:id="@+id/RelativeLayout01"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_above="@+id/btn_action"
                    android:layout_alignParentTop="true">

        <TextView android:id="@+id/txt_instructions"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  style="@style/txt_record_instructions"
                  android:text="@string/record_instructions"
                  android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_above="@+id/btn_action"
                  android:layout_alignParentTop="true">

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

            <TextView android:id="@+id/chronometer"
                      android:layout_centerInParent="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      style="@style/txt_record_counter"/>
        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="fill_parent">

            <SeekBar android:id="@+id/progress_bar"
                     android:thumb="@drawable/empty"
                     android:layout_centerInParent="true"
                     android:orientation="horizontal"
                     style="@style/ScProgressBarRound"
                     android:layout_width="fill_parent"
                     android:layout_height="30dip"
                     android:layout_marginLeft="15dip"
                     android:layout_marginRight="15dip"/>

            <FrameLayout android:id="@+id/gauge_holder"
                         android:layout_width="fill_parent"
                         android:layout_centerInParent="true"
                         android:layout_marginLeft="15dip"
                         android:layout_marginRight="15dip"
                         android:layout_alignParentBottom="false"
                         android:layout_below="@+id/chronometer"
                         android:layout_height="80dip"/>
        </RelativeLayout>
    </LinearLayout>


    <ImageButton android:id="@+id/btn_action"
                 android:background="@drawable/btn_rec_states"
                 android:layout_centerInParent="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

    <TextView android:id="@+id/txt_record_status"
              android:layout_width="fill_parent"
              android:layout_marginTop="5dip"
              style="@style/txt_record_message"
              android:layout_alignParentBottom="true"
              android:layout_alignParentTop="false"
              android:layout_marginBottom="10dip"
              android:gravity="bottom|center"
              android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:paddingBottom="5dip"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/btn_action">

        <LinearLayout android:id="@+id/file_layout"
                      android:paddingBottom="5dip"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="false"
                      android:layout_centerInParent="true">

            <com.soundcloud.android.view.DarkButton android:id="@+id/btn_reset"
                                                    android:text="@string/delete"
                                                    android:layout_weight="1"
                                                    android:layout_width="wrap_content"
                                                    android:padding="15dip"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dip"
                                                    android:layout_marginRight="15dip"/>

            <com.soundcloud.android.view.DarkButton android:id="@+id/btn_save"
                                                    android:text="@string/save"
                                                    android:padding="15dip"
                                                    android:layout_weight="1"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="15dip"
                                                    android:layout_marginRight="10dip"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/progress_frame"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:background="@color/progressDarkAlphaBackground"
                    android:visibility="gone">

        <ProgressBar android:indeterminateOnly="true"
                     android:layout_centerInParent="true"
                     android:layout_width="40dip"
                     android:layout_height="40dip"/>
    </RelativeLayout>
</RelativeLayout>
