<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/createBackground">

    <RelativeLayout android:padding="10dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
        <TextView android:id="@+id/txt_title"
                  android:layout_height="wrap_content"
                  style="@style/txt_auth_title"
                  android:layout_width="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:text="@string/authentication_sign_up"/>

        <EditText android:id="@+id/txt_email_address"
                  android:layout_height="wrap_content"
                  android:hint="@string/authentication_your_email_address"
                  android:layout_below="@+id/txt_title"
                  android:layout_alignLeft="@+id/txt_login"
                  android:layout_width="fill_parent"
                  android:imeOptions="actionNext"
                  android:singleLine="true"
                  android:lines="1"
                  android:inputType="textNoSuggestions|textEmailAddress"
                  style="@style/txt_auth_input"
                />

        <EditText android:id="@+id/txt_choose_a_password"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:password="true" android:singleLine="true"
                  android:hint="@string/authentication_choose_a_password"
                  android:layout_below="@id/txt_email_address"
                  android:imeOptions="actionNext" android:lines="1"
                  android:layout_alignLeft="@id/txt_email_address"
                  android:layout_alignRight="@id/txt_email_address"
                  style="@style/txt_auth_input"
                />

        <EditText android:id="@+id/txt_repeat_your_password"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:password="true"
                  android:singleLine="true"
                  android:hint="@string/authentication_repeat_your_password"
                  android:layout_below="@id/txt_choose_a_password"
                  android:imeOptions="actionDone"
                  android:lines="1"
                  android:layout_alignLeft="@id/txt_choose_a_password"
                  android:layout_alignRight="@id/txt_choose_a_password"
                  style="@style/txt_auth_input"/>

        <TextView android:id="@+id/txt_msg"
                  android:layout_height="wrap_content"
                  style="@style/txt_auth_msg"
                  android:layout_width="wrap_content"
                  android:layout_alignLeft="@+id/txt_password"
                  android:layout_alignRight="@+id/txt_password"
                  android:layout_below="@+id/txt_repeat_your_password"
                  android:text="@string/authentication_by_signing_in_I_agree_to_the"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/control_layout"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/playerControlAlphaBackground"
                    android:layout_height="wrap_content">

        <LinearLayout android:paddingBottom="5dip"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="5dip"
                      android:layout_marginTop="5dip">

            <Button android:id="@+id/btn_signup"
                    android:text="@string/btn_signup"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip"
                    />
        </LinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="5dip"
              android:background="@drawable/drop_shadow_down"/>
    </RelativeLayout>
</RelativeLayout>
