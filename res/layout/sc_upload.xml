<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:orientation="vertical">

    <ScrollView android:id="@+id/ScrollView01" android:layout_weight="1" android:layout_height="wrap_content"
                android:layout_width="fill_parent" android:paddingTop="5dip">
        <RelativeLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
                        android:id="@+id/input_layout">
            <FrameLayout android:id="@+id/artwork_layout" android:layout_height="100dip" 
                android:layout_width="100dip" android:layout_below="@id/file_layout" android:layout_marginLeft="5dip">
                <TextView android:layout_height="fill_parent" android:background="@drawable/rec_upload_image_bg"
                        android:layout_width="fill_parent" style="@style/txt_record_add_image" 
                        android:gravity="center" android:padding="10dip" android:text="Add\nImage"/>
	            <ImageView android:id="@+id/artwork" android:layout_height="100dip" android:layout_width="100dip"
	                       android:scaleType="centerCrop" android:clickable="true"/>
            </FrameLayout>
            <EditText android:layout_height="wrap_content" android:id="@+id/where"
                      android:layout_toRightOf="@+id/artwork_layout" android:background="@drawable/rec_upload_text_bg"
                      android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
                      android:layout_width="fill_parent" android:ellipsize="end" style="@style/txt_record_input"
                      android:gravity="center" android:clickable="true" android:inputType="text"
                      android:fadingEdge="horizontal" android:fadeScrollbars="true" android:hint="Where"
                      android:layout_alignBottom="@+id/artwork_layout" android:layout_below="@+id/what"
                      android:layout_marginTop="10dip"/>
            <EditText android:layout_height="wrap_content" android:id="@+id/what"
                      android:layout_toRightOf="@+id/artwork_layout" android:background="@drawable/rec_upload_text_bg"
                      android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
                      android:layout_width="fill_parent" android:ellipsize="end" style="@style/txt_record_input"
                      android:gravity="center" android:inputType="text" android:hint="What"/>
            <RadioGroup android:id="@+id/rdo_privacy"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="false" android:layout_marginTop="5dip"
                        android:layout_below="@+id/artwork_layout">
                <RadioButton android:checked="true" android:id="@+id/rdo_public" android:text="\u00A0Public"
                             android:layout_weight="1" style="@style/txt_record_rdo"
                             android:layout_width="wrap_content"/>
                <RadioButton android:checked="false" android:id="@+id/rdo_private" android:text="\u00A0Private"
                             android:layout_weight="1" style="@style/txt_record_rdo"
                             android:layout_width="wrap_content"/>
            </RadioGroup>
            <TextView android:id="@+id/txt_record_options" android:background="@drawable/rec_upload_options_bg"
                        android:layout_width="fill_parent" style="@style/txt_record_share_options" 
                        android:gravity="left" android:padding="5dip" android:text="Sharing Options"
                        android:layout_below="@id/rdo_privacy" android:layout_height="30dip"/>
            <View android:id="@+id/share_options_seperator" android:background="@color/recordUploadBorder"
                        android:layout_width="fill_parent" 
                        android:layout_below="@id/txt_record_options" android:layout_height="1dip"/>
            <!-- sharing -->
            <com.soundcloud.android.view.SafeViewFlipper
                    android:id="@+id/vfSharing"
                    android:layout_weight="1"
	                android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/share_options_seperator">


                <com.soundcloud.android.view.ConnectionList
                          android:id="@+id/connectionList"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent">


                </com.soundcloud.android.view.ConnectionList>


                <com.soundcloud.android.view.AccessList
                          android:id="@+id/accessList"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent">

                </com.soundcloud.android.view.AccessList>


            </com.soundcloud.android.view.SafeViewFlipper>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true" android:id="@+id/control_layout"
                    android:background="@color/playerControlAlphaBackground" android:layout_height="wrap_content">
        <LinearLayout android:paddingBottom="5dip"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:paddingTop="5dip" android:layout_marginTop="5dip">
            <Button android:id="@+id/btn_cancel" android:text="Cancel"
                    android:layout_weight="1" android:layout_width="wrap_content"
                    android:layout_marginLeft="10dip" android:layout_marginRight="15dip"
                    android:layout_height="fill_parent"/>
            <Button android:id="@+id/btn_upload" android:text="Upload"
                    android:layout_weight="1"
                    android:layout_width="wrap_content" android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip" android:layout_height="fill_parent"/>
        </LinearLayout>
        <View android:layout_width="fill_parent" android:layout_height="5dip"
              android:background="@drawable/drop_shadow_down"/>
    </RelativeLayout>

</LinearLayout>
