<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:panel="http://schemas.android.com/apk/res/org.miscwidgets"
	android:background="@color/playerControlBackground"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip">
		<ImageView android:layout_below="@id/file_layout"
			android:background="@color/background_dark" android:id="@+id/artwork"
			android:layout_height="100dip" android:layout_width="100dip"
			android:src="@drawable/artwork_player" android:scaleType="centerCrop"
			android:clickable="true"></ImageView>
		<EditText android:layout_height="wrap_content"
			android:id="@+id/where" android:layout_toRightOf="@+id/artwork"
			android:background="@drawable/rec_upload_text_bg"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_width="fill_parent" android:ellipsize="end"
			style="@style/txt_record_input" android:gravity="center"
			android:clickable="true" android:inputType="text" android:fadingEdge="horizontal"
			android:fadeScrollbars="true" android:hint="Where"
			android:layout_alignBottom="@+id/artwork"></EditText>
		<EditText android:layout_height="wrap_content"
			android:id="@+id/what" android:layout_toRightOf="@+id/artwork"
			android:background="@drawable/rec_upload_text_bg"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_width="fill_parent" android:ellipsize="end"
			style="@style/txt_record_input" android:gravity="center"
			android:inputType="text" android:hint="What"></EditText>
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/record_artwork_instructions"
			android:id="@+id/txt_artwork_instructions"
			android:layout_below="@id/artwork" style="@style/txt_record_artwork_hint" android:layout_marginTop="5dip"></TextView>
		<RadioGroup android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:id="@+id/rdo_privacy" android:layout_alignParentBottom="false"
			android:layout_below="@id/txt_artwork_instructions" android:layout_marginTop="10dip">
			<RadioButton android:checked="false" android:id="@+id/rdo_public"
				android:text="\u00A0Public" android:layout_weight="1"
				style="@style/txt_record_rdo" android:layout_width="wrap_content" />
			<RadioButton android:checked="true" android:id="@+id/rdo_private"
				android:text="\u00A0Private" android:layout_weight="1"
				style="@style/txt_record_rdo" android:layout_width="wrap_content" />
		</RadioGroup>

	
</RelativeLayout>
	<LinearLayout android:paddingTop="20dip"
		android:paddingBottom="5dip" android:orientation="horizontal"
		android:id="@+id/file_layout" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_marginBottom="20dip">
		<Button android:id="@+id/btn_cancel" android:text="Cancel"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:padding="15dip" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />
		<Button android:id="@+id/btn_upload" android:text="Upload"
			android:padding="15dip" android:layout_weight="1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />
	</LinearLayout>



</RelativeLayout>