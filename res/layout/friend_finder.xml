<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#FFFFFFFF">
	<Button android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
		android:layout_marginBottom="5dip" android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
		android:textSize="18sp" android:layout_marginRight="10dip"
		android:textColor="#FFFFFFFF" android:layout_width="fill_parent"
		android:background="@drawable/btn_fb_bg_states" android:id="@+id/facebook_btn"
		android:text="@string/authentication_find_friends_on_facebook"></Button>
	<FrameLayout android:layout_width="match_parent"
		android:id="@+id/listHolder" android:layout_height="wrap_content"
		android:layout_below="@id/facebook_btn"
        android:layout_alignWithParentIfMissing="true"
		android:layout_alignParentBottom="true"></FrameLayout>
</RelativeLayout>