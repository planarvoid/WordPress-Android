<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" 
	android:id="@+id/main_holder" android:orientation="vertical" android:layout_height="fill_parent">
	<include android:id="@+id/track_info"  layout="@layout/track_info_player" />
	<RelativeLayout
        android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"  >
        <FrameLayout android:id="@+id/track_flipper" 
	        android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"  >
	        <LinearLayout android:id="@+id/comment_list_holder" android:paddingLeft="5dip" android:paddingRight="5dip"
	        	android:background="#FFFFFF"
				android:paddingTop="10dip"
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<com.soundcloud.utils.RemoteImageView
				android:layout_alignParentLeft="true"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:gravity="center_vertical"
				android:id="@+id/artwork" />
		</FrameLayout>
		<LinearLayout android:id="@+id/track_menu" android:background="@color/playerControlBackground" 
		 	 android:paddingTop="5dip" android:paddingBottom="5dip"
			 android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">
			<TableLayout android:stretchColumns="*" android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
					<ImageButton android:layout_alignWithParentIfMissing="true" android:layout_weight="1" android:id="@+id/btn_profile" style="@style/btn_oc_transport"
						android:src="@drawable/ic_profile_states" />
					<ImageButton android:layout_alignWithParentIfMissing="true" android:layout_weight="1" android:id="@+id/btn_favorite" style="@style/btn_oc_transport"
						android:src="@drawable/ic_favorite_states" />
					<ImageButton android:layout_alignWithParentIfMissing="true" android:layout_weight="1" android:id="@+id/btn_comment" style="@style/btn_oc_transport"
						android:src="@drawable/ic_comment_states" />
					<ImageButton android:layout_alignWithParentIfMissing="true" android:layout_weight="1" android:id="@+id/btn_share" style="@style/btn_oc_transport"
						android:src="@drawable/ic_share_states" />
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<FrameLayout android:layout_width="fill_parent" android:layout_marginBottom="-30dip"
			android:layout_height="80dip" android:layout_alignParentBottom="true">
			<com.soundcloud.android.WaveformController
				android:id="@+id/waveform_controller" android:layout_width="fill_parent"
				android:orientation="horizontal" android:layout_height="wrap_content" />
			
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="20dip" android:paddingTop="1dip"
				android:paddingBottom="1dip" android:orientation="horizontal">
				<TextView android:id="@+id/currenttime"
					android:textColor="@android:color/white"
					android:background="#775a5a5a" android:textAppearance="?android:attr/textAppearanceMedium"
					android:textSize="12sp" android:textStyle="bold"
					android:shadowColor="#ff000000" android:shadowDx="0"
					android:shadowDy="0" android:shadowRadius="3"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true" android:layout_gravity="top"
					android:gravity="left" android:layout_width="45dip"
					android:paddingRight="2dip" android:paddingLeft="2dip"
					android:layout_height="20dip" />
				<TextView android:id="@+id/totaltime" 
					android:textColor="@android:color/white"
					android:background="#775a5a5a"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true" android:textSize="12sp"
					android:textStyle="bold" android:shadowColor="#ff000000"
					android:shadowDx="0" android:shadowDy="0" android:shadowRadius="3"
					android:gravity="right" android:paddingRight="2dip"
					android:paddingLeft="2dip" android:layout_width="45dip"
					android:layout_height="20dip" />
				</RelativeLayout>
				<FrameLayout
					android:paddingBottom="10dip"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/connecting_holder"
					android:visibility="gone">
			</FrameLayout>
		</FrameLayout>
		<View android:layout_width="fill_parent" android:layout_alignParentTop="true"
				android:layout_height="5dip" android:background="@drawable/drop_shadow_down" />
		<View android:layout_width="fill_parent" android:layout_alignParentBottom="true"
				android:layout_height="5dip" android:background="@drawable/drop_shadow_up" />
	</RelativeLayout>
	
	
	 

	<LinearLayout android:id="@+id/transport_bar" android:background="@color/playerControlBackground"  android:paddingTop="5dip" android:paddingBottom="5dip"
		 android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">						
		<ImageButton android:layout_weight="1" android:layout_alignParentLeft="true" android:id="@+id/prev" style="@style/btn_oc_transport" android:src="@drawable/ic_prev_states" />
		<ImageButton android:layout_weight="1" android:id="@+id/pause" android:layout_toRightOf="@id/prev" style="@style/btn_oc_transport" android:src="@drawable/ic_play_states" />
		<ImageButton android:layout_weight="1" android:layout_toRightOf="@id/pause" android:id="@+id/next" style="@style/btn_oc_transport" android:src="@drawable/ic_next_states" />
	</LinearLayout>

</LinearLayout>
