<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@drawable/bg_rec"
            android:weightSum="6">

    <RelativeLayout android:layout_weight="4"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp">
        <LinearLayout android:layout_height="fill_parent"
                      android:layout_width="fill_parent"
                      android:layout_alignParentBottom="true"
                      android:orientation="vertical">
            <TextView android:id="@+id/chronometer"
                      android:gravity="center"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      style="@style/txt_record_chrono"
                      android:layout_width="fill_parent"
                      android:singleLine="true"/>
            <FrameLayout android:id="@+id/gauge_holder"
                         android:layout_below="@+id/chronometer"
                         android:layout_height="150dip"
                         android:layout_width="fill_parent"/>
        </LinearLayout>
        <TextView android:id="@+id/txt_instructions"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  style="@style/txt_record_instructions"
                  android:text="@string/record_instructions"
                  android:layout_centerInParent="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:paddingBottom="50dp"/>
    </RelativeLayout>

    <FrameLayout android:layout_width="fill_parent"
                 android:id="@+id/control_layout"
                 android:gravity="center"
                 android:layout_margin="5dip"
                 android:layout_height="0dp"
                 android:layout_weight="2">
        <LinearLayout android:layout_width="fill_parent"
                      android:id="@+id/rec_controls"
                      android:layout_height="fill_parent">
            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="fill_parent">
                <Button android:id="@+id/btn_play"
                        android:background="@drawable/btn_rec_play_states"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ImageButton android:id="@+id/btn_action"
                         android:background="@color/transparent"
                         android:src="@drawable/btn_rec_states"
                         android:layout_alignParentTop="true"
                         android:layout_centerHorizontal="true"
                         android:scaleType="centerInside"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="fill_parent">
                <Button android:id="@+id/btn_edit"
                        android:background="@drawable/btn_rec_edit_states"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/edit_controls"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="horizontal">
            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="fill_parent">
                <ToggleButton android:id="@+id/toggle_fade"
                              style="@style/toggle_record_edit"
                              android:textOn="@string/fade_toggle_on"
                              android:textOff="@string/fade_toggle_off"
                              android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="fill_parent">
                <Button android:id="@+id/btn_play_edit"
                        android:background="@drawable/btn_rec_play_states"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="fill_parent">
                <ToggleButton android:id="@+id/toggle_optimize"
                              style="@style/toggle_record_edit"
                              android:textOn="@string/optimize_toggle_on"
                              android:textOff="@string/optimize_toggle_off"
                              android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>


    <TextView android:id="@+id/txt_record_message"
              android:layout_width="match_parent"
              android:layout_margin="5dip"
              style="@style/txt_record_message"
              android:lines="2"
              android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/file_layout"
                  android:paddingBottom="5dip"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <Button android:id="@+id/btn_delete"
                style="@style/btn_orange"
                android:text="@string/delete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="15dip"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"/>

        <Button android:id="@+id/btn_reset"
                style="@style/btn_dark"
                android:text="@string/reset"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:singleLine="true"
                android:padding="15dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"/>

        <Button android:id="@+id/btn_save"
                style="@style/btn_dark"
                android:text="@string/btn_next"
                android:padding="15dip"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="10dip"/>
    </LinearLayout>
</LinearLayout>
