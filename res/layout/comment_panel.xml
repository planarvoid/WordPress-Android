<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/comment_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:background="@color/playerControlAlphaBackground">
    <ImageView android:id="@+id/icon"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_width="@dimen/list_icon_width"
               android:layout_height="@dimen/list_icon_height"
               android:layout_marginLeft="@dimen/list_icon_margin_left"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:background="@drawable/avatar_badge"
               android:scaleType="centerCrop"/>
    <TextView android:id="@+id/user"
              android:layout_height="wrap_content"
              style="@style/txt_comment_panel_user"
              android:text="Katharina"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_marginLeft="@dimen/list_text_margin_left"
              android:layout_width="wrap_content"
              android:layout_alignTop="@id/icon"
              android:layout_toRightOf="@+id/icon"/>
    <TextView android:id="@+id/timestamp"
              android:text="at 2.11"
              android:layout_alignBottom="@id/user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:layout_toRightOf="@+id/user"
              android:layout_toLeftOf="@+id/created_at"
              style="@style/txt_comment_panel_timestamp"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignTop="@id/icon"
              android:singleLine="true"
              android:ellipsize="marquee"/>
    <TextView android:id="@+id/created_at"
              android:text="Just now"
              android:layout_alignBottom="@id/timestamp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="right"
              style="@style/txt_comment_panel_created_at"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignTop="@id/icon"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_alignParentRight="true"/>
    <TextView android:id="@+id/body"
              android:layout_marginRight="@dimen/list_text_margin_right"
              android:layout_alignLeft="@id/user"
              android:layout_alignParentRight="true"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_below="@id/user"
              android:maxLines="2"
              android:ellipsize="marquee"
              style="@style/txt_comment_panel_body"
              android:text="it's always a blessing to hear the prince... the abbot... the rza... peace fam"/>
</merge>
