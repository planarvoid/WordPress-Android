<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <com.soundcloud.android.view.AvatarTiler android:layout_width="fill_parent"
                                             android:layout_height="0dp"
                                             android:layout_weight="1"/>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_gradient_bottom_half">
        <TextView android:id="@+id/txt_subject"
                  android:text="@string/tour_follow_subject"
                  android:layout_width="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="20dip"
                  style="@style/txt_tour_subject"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txt_message"
                  android:text="@string/tour_follow_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  style="@style/txt_tour_message"
                  android:layout_below="@+id/txt_subject"
                  android:layout_marginTop="15dp"/>
    </RelativeLayout>
</LinearLayout>
