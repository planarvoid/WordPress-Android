<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/orange_gradient"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/tour_bottom_bar_height">
    <ImageView android:src="@drawable/cloud_no_logo"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_width="fill_parent"
               android:id="@+id/imageView1"
               android:scaleType="centerInside" />
    <RelativeLayout android:layout_width="fill_parent"
                    android:id="@+id/middle_layout"
                    android:layout_height="0dp"
                    android:layout_weight="1">
        <TextView android:id="@+id/textView1"
                  android:text="@string/tour_start_hello"
                  android:layout_width="wrap_content"
                  style="@style/txt_tour_start_1"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"/>
        <TextView android:id="@+id/textView2"
                  android:text="@string/tour_start_welcome"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/txt_tour_start_2"
                  android:layout_below="@+id/textView1"
                  android:layout_centerHorizontal="true"/>
        <TextView android:gravity="center_horizontal"
                  android:id="@+id/txt_message"
                  android:text="@string/tour_start_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColorLink="@drawable/txt_light_states"
                  style="@style/txt_tour_start_3"
                  android:layout_below="@+id/textView2"
                  android:layout_alignParentLeft="true"
                  android:layout_marginTop="19dp"/>
    </RelativeLayout>
</LinearLayout>

