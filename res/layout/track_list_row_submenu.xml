<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@drawable/list_item_submenu_bottom"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent">
     <View android:layout_width="fill_parent"
           android:layout_height="1dip"
           android:background="#ffeeeeee" />
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal">
        <ImageButton android:layout_alignWithParentIfMissing="true"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:id="@+id/btn_play"
                     style="@style/btn_sc_transparent"
                     android:src="@drawable/ic_submenu_play_states"/>
        <ImageButton android:layout_alignWithParentIfMissing="true"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:id="@+id/btn_profile"
                     style="@style/btn_sc_transparent"
                     android:src="@drawable/ic_profile_states"/>
        <ImageButton android:layout_alignWithParentIfMissing="true"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:id="@+id/btn_favorite"
                     style="@style/btn_sc_transparent"
                     android:src="@drawable/ic_like_states_v1"/>
        <ImageButton android:layout_alignWithParentIfMissing="true"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:id="@+id/btn_comment"
                     style="@style/btn_sc_transparent"
                     android:src="@drawable/ic_comment_states_v1"/>
        <ImageButton android:layout_alignWithParentIfMissing="true"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:id="@+id/btn_share"
                     style="@style/btn_sc_transparent"
                     android:src="@drawable/ic_share_states"/>
    </LinearLayout>
 </FrameLayout>
