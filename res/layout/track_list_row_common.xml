<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/track_info_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ignoreGravity="@+id/icon">

    <ImageView android:id="@+id/icon"
               android:layout_alignParentLeft="true"
               android:layout_width="@dimen/list_icon_width"
               android:layout_height="@dimen/list_icon_height"
               android:gravity="center_vertical"
               android:background="@drawable/artwork_badge"
               android:scaleType="centerCrop"/>

    <ImageView android:id="@+id/play_indicator"
               android:gravity="center_vertical"
               android:layout_marginLeft="@dimen/track_list_indicator_margin_left"
               android:scaleType="center"
               android:layout_alignWithParentIfMissing="true"
               android:layout_toRightOf="@id/icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignTop="@+id/track"
               android:layout_alignBottom="@+id/track"/>

    <TextView android:id="@+id/track"
              android:layout_marginLeft="@dimen/track_list_text_margin_left"
              android:layout_toRightOf="@id/icon"
              android:layout_marginTop="3dip"
              android:layout_marginRight="3dip"
              android:layout_width="0dp"
              android:layout_alignParentRight="true"
              android:layout_height="wrap_content"
              style="@style/txt_list_main"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:text="@string/track"
              android:drawablePadding="@dimen/track_list_private_margin_left" />

    <TextView android:id="@+id/user"
              android:layout_height="wrap_content"
              style="@style/txt_list_sub"
              android:layout_alignLeft="@id/track"
              android:text="@string/user"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_width="wrap_content"
              android:layout_below="@id/track"/>

    <TextView android:id="@+id/track_created_at"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_alignParentRight="true"
              android:layout_alignTop="@id/user"
              android:layout_alignBottom="@id/user"
              android:layout_marginRight="3dip"
              style="@style/txt_list_sub_secondary"
              android:paddingLeft="0dip"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_below="@id/track"
              android:layout_toRightOf="@id/user"
            />
</RelativeLayout>
