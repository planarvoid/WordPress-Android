<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <ScrollView android:layout_width="fill_parent"
                android:id="@+id/info_view"
                android:layout_height="fill_parent">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_holder">
            <TextView android:id="@+id/favoriters_txt"
                      android:layout_width="fill_parent"
                      android:layout_height="60dip"
                      android:drawableRight="@drawable/arrow"
                      android:drawablePadding="15dip"
                      android:paddingLeft="5dip"
                      android:paddingRight="20dip"
                      style="@style/txt_list_main"
                      android:gravity="left|center_vertical"/>
            <View android:layout_width="fill_parent"
                  android:layout_height="1dip"
                  android:layout_below="@+id/favoriters_txt"
                  android:layout_alignWithParentIfMissing="true"
                  android:background="@color/horizontalRule"
                  android:id="@+id/tags_hr"/>
            <com.soundcloud.android.view.FlowLayout android:id="@+id/tags_holder"
                                                    android:layout_marginTop="10dip"
                                                    android:layout_below="@id/tags_hr"
                                                    android:layout_height="wrap_content"
                                                    android:layout_width="fill_parent"
                                                    android:padding="5dip"/>
            <TextView android:id="@+id/txtInfo"
                      android:layout_height="wrap_content"
                      style="@style/txt_player_track_info"
                      android:padding="3dip"
                      android:linksClickable="true"
                      android:layout_below="@id/tags_holder"
                      android:layout_width="fill_parent"/>
            <ViewStub android:id="@+id/stub_comments_list"
                      android:inflatedId="@+id/comments_list"
                      android:layout="@layout/info_comments_list"
                      android:layout_below="@+id/txtInfo"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
    <ViewStub android:id="@+id/stub_loading"
              android:inflatedId="@+id/loading_layout"
              android:layout="@layout/track_info_loading_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
            />
    <View android:layout_width="fill_parent"
          android:layout_alignParentTop="true"
          android:layout_height="5dip"
          android:background="@drawable/drop_shadow_down"/>
    <View android:layout_width="fill_parent"
          android:layout_alignParentBottom="true"
          android:layout_height="5dip"
          android:background="@drawable/drop_shadow_up"/>
</RelativeLayout>
