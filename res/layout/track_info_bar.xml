<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/track_info_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">
    <ImageView android:id="@+id/icon"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_width="@dimen/list_icon_width"
               android:layout_height="@dimen/list_icon_height"
               android:layout_marginLeft="@dimen/list_icon_margin_left"
               android:layout_marginRight="@dimen/list_icon_margin_right"
               android:background="@drawable/artwork_badge"
               android:scaleType="centerCrop"/>
    <TextView android:id="@+id/user"
              android:layout_height="wrap_content"
              style="@style/txt_list_sub"
              android:text="@string/user"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_width="wrap_content"
              android:layout_alignTop="@id/icon"
              android:layout_toRightOf="@+id/icon"/>
    <TextView android:id="@+id/track_created_at"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/txt_list_sub_secondary"
              android:layout_alignTop="@id/icon"
              android:paddingLeft="0dip"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_alignParentRight="true"/>
    <TextView android:id="@+id/track"
              android:layout_alignLeft="@id/user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/user"
              android:maxLines="2"
              android:ellipsize="marquee"
              style="@style/txt_list_main"
              android:text="@string/track"
              android:layout_weight="1"/>
    <RelativeLayout
            android:id="@+id/stats"
            android:layout_below="@id/track"
            android:layout_alignLeft="@id/track"
            android:layout_width="wrap_content"
            android:paddingTop="3dip"
            android:maxLines="4"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/private_indicator"
                  android:drawableLeft="@drawable/lock"
                  android:drawablePadding="2dp"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:textSize="@dimen/list_txt_sub_size"
                  android:background="@drawable/private_bg"
                  android:scaleType="center"
                  android:layout_width="wrap_content"
                  android:text="@string/tracklist_item_shared_with_x_people"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:drawableLeft="@drawable/stats_plays"
                  android:drawablePadding="3dip"
                  android:drawableRight="@drawable/vertical_divider"
                  android:layout_height="wrap_content"
                  android:id="@+id/play_count"
                  android:layout_toRightOf="@id/private_indicator"
                  android:paddingRight="5dip"
                  android:text="111"
                  style="@style/txt_list_sub"/>
        <View android:background="#ffcccccc"
              android:layout_toRightOf="@+id/play_count"
              android:layout_alignBottom="@+id/play_count"
              android:layout_alignTop="@+id/play_count"
              android:layout_height="0dp"
              android:layout_marginRight="3dip"
              android:layout_marginLeft="3dip"
              android:layout_width="1dip"
              android:id="@+id/vr_play_count"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:drawableLeft="@drawable/stats_comments"
                  android:drawablePadding="3dip"
                  android:drawableRight="@drawable/vertical_divider"
                  android:layout_height="wrap_content"
                  android:id="@+id/comment_count"
                  android:layout_toRightOf="@id/vr_play_count"
                  android:paddingRight="5dip"
                  android:text="123"
                  style="@style/txt_list_sub"/>
        <View android:background="#ffcccccc"
              android:layout_toRightOf="@+id/comment_count"
              android:layout_alignBottom="@+id/comment_count"
              android:layout_alignTop="@+id/comment_count"
              android:layout_height="0dp"
              android:layout_marginRight="3dip"
              android:layout_marginLeft="3dip"
              android:layout_width="1dip"
              android:id="@+id/vr_comment_count"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:drawableLeft="@drawable/stats_favorites"
                  android:drawablePadding="3dip"
                  android:drawableRight="@drawable/vertical_divider"
                  android:layout_height="wrap_content"
                  android:id="@+id/favorite_count"
                  android:layout_toRightOf="@id/vr_comment_count"
                  android:paddingRight="5dip"
                  android:text="321"
                  style="@style/txt_list_sub"/>
    </RelativeLayout>
</RelativeLayout>
