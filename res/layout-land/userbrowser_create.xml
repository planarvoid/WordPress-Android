<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.soundcloud.android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_rec">
    <RelativeLayout android:id="@+id/RelativeLayout03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btn_action"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/file_layout"
                    android:layout_marginBottom="10dip"
                    android:gravity="center">

        <TextView android:id="@+id/chronometer"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:keepScreenOn="true"
                  android:layout_alignParentLeft="true"
                  style="@style/txt_record_chrono"/>
        <FrameLayout android:id="@+id/gauge_holder"
                     android:layout_width="0dp"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="15dip"
                     android:layout_marginRight="15dip"
                     android:layout_alignParentRight="true"
                     android:layout_height="80dip"
                     android:layout_toRightOf="@+id/chronometer"/>
        <SeekBar android:id="@+id/progress_bar"
                 android:thumb="@drawable/empty"
                 android:layout_centerVertical="true"
                 android:orientation="horizontal"
                 style="@style/ScProgressBarRound"
                 android:layout_width="fill_parent"
                 android:layout_height="30dip"
                 android:layout_marginLeft="15dip"
                 android:layout_marginRight="15dip"
                 android:layout_alignParentRight="true"
                 android:layout_toRightOf="@+id/chronometer"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/instructions_holder"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/btn_action"
                    android:layout_centerVertical="true"
                    android:layout_width="fill_parent">

        <TextView android:id="@+id/txt_instructions"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/txt_record_instructions"
                  android:text="@string/record_instructions"
                  android:layout_centerInParent="true"
                  android:gravity="center"/>
    </RelativeLayout>

    <ImageButton android:id="@+id/btn_action"
                 android:background="@color/transparent"
                 android:src="@drawable/btn_rec_states"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:scaleType="centerInside"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="10dip"/>

    <TextView android:id="@+id/txt_record_status"
              android:layout_width="fill_parent"
              android:layout_toRightOf="@+id/btn_action"
              android:layout_alignParentBottom="true"
              android:layout_height="wrap_content"
              android:gravity="center"
              style="@style/txt_record_message"
              android:layout_marginBottom="10dip"/>

    <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:paddingBottom="5dip"
                    android:id="@+id/file_layout"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/btn_action"
                    android:layout_below="@+id/progress_bar">

        <LinearLayout android:paddingBottom="5dip"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="false"
                      android:layout_centerInParent="true">

            <Button android:id="@+id/btn_delete"
                    style="btn_orange"
                    android:text="@string/delete"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:padding="15dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"/>

            <Button android:id="@+id/btn_reset"
                    style="btn_dark"
                    android:text="@string/reset"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:padding="15dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"/>

            <Button android:id="@+id/btn_save"
                    style="btn_dark"
                    android:text="@string/btn_next"
                    android:padding="15dip"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/progress_frame"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:background="@color/progressDarkAlphaBackground"
                    android:visibility="gone">

        <ProgressBar android:indeterminateOnly="true"
                     android:layout_centerInParent="true"
                     android:layout_width="40dip"
                     android:layout_height="40dip"/>
    </RelativeLayout>
</RelativeLayout>