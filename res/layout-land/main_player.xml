<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/main_holder"
		android:orientation="vertical">
		<include layout="@layout/track_info_player"  android:background="@color/playerControlBackground"/>
		<FrameLayout android:layout_width="fill_parent" android:background="@color/white" android:layout_weight="1" android:layout_height="wrap_content">
			<RelativeLayout android:layout_width="fill_parent" android:id="@+id/streamable_layout" android:layout_height="fill_parent">
				<com.soundcloud.android.view.WaveformController
					android:id="@+id/waveform_controller" android:layout_width="fill_parent"
					android:orientation="horizontal" android:layout_height="wrap_content" />
				<TextView android:id="@+id/currenttime" style="@style/txt_player_time_land"
					android:layout_alignParentTop="true" />
				<RelativeLayout android:layout_width="fill_parent" android:background="@color/playerControlAlphaBackground"
					android:layout_height="fill_parent" android:id="@+id/connecting_bar">
					<ProgressBar android:indeterminateOnly="true" android:layout_centerInParent="true" 
						android:layout_width="40dip" android:layout_height="40dip"/>
				</RelativeLayout>
			</RelativeLayout>
			<FrameLayout android:layout_width="fill_parent" android:id="@+id/unstreamable_layout" 
				android:layout_height="fill_parent" android:background="@color/playerControlAlphaBackground">
				<TextView android:id="@+id/TextView01" android:layout_height="fill_parent" android:layout_width="fill_parent" android:text="This track is not streamable" android:gravity="center"></TextView>
			</FrameLayout>
			<View android:layout_width="fill_parent" android:layout_height="5dip" android:background="@drawable/drop_shadow_down" />
		</FrameLayout>
		
		<LinearLayout android:id="@+id/transport_bar" android:background="@color/playerControlBackground"  android:paddingTop="5dip" android:paddingBottom="5dip"
			 android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">						
			<ImageButton android:layout_weight="1" android:layout_alignParentLeft="true" android:id="@+id/prev" style="@style/btn_oc_transport" android:src="@drawable/ic_prev_states" />
			<ImageButton android:layout_weight="1" android:id="@+id/pause" android:layout_toRightOf="@id/prev" style="@style/btn_oc_transport" android:src="@drawable/ic_play_states" />
			<ImageButton android:layout_weight="1" android:layout_toRightOf="@id/pause" android:id="@+id/next" style="@style/btn_oc_transport" android:src="@drawable/ic_next_states" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
