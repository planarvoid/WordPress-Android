<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="1800dip" android:layout_height="fill_parent" android:id="@+id/waveform_frame" xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:id="@+id/comment_bar" android:background="#66333333"
			android:layout_gravity="left" android:layout_width="fill_parent"
			android:layout_height="30dip" android:layout_alignParentBottom="true" />
	<com.soundcloud.android.WaveformHolder android:id="@+id/waveform_holder"
		android:layout_gravity="bottom" android:layout_above="@id/comment_bar"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
			<com.soundcloud.android.CloudProgressBar
				style="@style/CloudProgressBar" android:id="@+id/progress_bar"
				android:layout_below="@id/comment_bar"
				android:layout_alignParentTop="true" android:layout_width="1800dip"
				android:layout_height="fill_parent" android:keepScreenOn="true" />
			<ImageView android:id="@+id/progress_overlay"
				android:layout_alignParentTop="true" android:layout_width="1800dip"
				android:layout_height="fill_parent" android:scaleType="fitXY"/>
			<RelativeLayout android:id="@+id/track_touch_bar"
				 android:background="#00000000"
				android:layout_gravity="left" android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
	</com.soundcloud.android.WaveformHolder>
</RelativeLayout>
