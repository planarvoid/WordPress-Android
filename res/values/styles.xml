<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


  	
  
  	<style name="txt_list_main">
		<item name="android:textColor">@color/listTxtValue</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>
	<style name="txt_list_secondary" parent="txt_list_main">
		<item name="android:textColor">@color/listTxtSecondary</item>
	</style>
	<style name="txt_list_sub">
		<item name="android:textColor">@color/listTxtValue</item>
		<item name="android:textSize">12sp</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>
	<style name="txt_list_sub_secondary" parent="txt_list_sub">
		<item name="android:paddingLeft">8dip</item>
		<item name="android:textColor">@color/listTxtSecondary</item>
	</style>
	
	<style name="txt_empty_view">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">italic</item>
	</style>
	
	<style name="TabWidgetTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget"> 
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
    </style> 
    
    <style name="txt_record_instructions">
		<item name="android:textColor">@color/listTxtValue</item>
		<item name="android:textSize">28sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingTop">20dip</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>
  
  
