  	<style name="txt_player_drawer_blue" parent="android:Widget.TextView">
		<item name="android:textColor">#2EC9FF</item>
	</style>
	
	<style name="txt_main_menu" parent="android:Widget.TextView">
		<item name="android:textSize">17sp</item>
	</style>
  
  	<style name="txt_details_table_label" parent="android:Widget.TextView">
		<item name="android:padding">3dip</item>
	</style>
	<style name="txt_refresh_bar" parent="android:Widget.TextView">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="txt_details_table_value" parent="android:Widget.TextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">3dip</item>
		<item name="android:gravity">right</item>
	</style>
	<style name="txt_details_table_value_desc" parent="android:Widget.TextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">3dip</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="CloudProgressBarSmall">
		<item name="android:background">@drawable/progress_bar_bg</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">20dip</item>
		<item name="android:maxHeight">20dip</item>
        <item name="android:minWidth">76dip</item>
		<item name="android:maxWidth">76dip</item>
		<item name="android:progressDrawable">@drawable/progress_bar</item>
		<item name="android:indeterminateDrawable">@drawable/progress_bar_indeterminate</item>
    </style> 
    
   <style name="CloudProgressBar">
   		<item name="android:background">@drawable/progress_bar_bg</item>
        <item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">60dip</item>
        <item name="android:minWidth">250dip</item>
        <item name="android:maxWidth">5000dip</item>
    </style> 
    
    <style name="Playlist">
    	<item name="android:windowBackground">@android:color/black</item>
	    <item name="android:background">@android:color/black</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:layout_marginTop">60dip</item>
	</style>

	
	 <style name="FloatingPlayer">
    	<item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>

	<style name="ZoomControls">
		<item name="android:gravity">bottom</item>
		<item name="android:paddingLeft">15dip</item>
		<item name="android:paddingRight">15dip</item>
	</style>
	
		<style name="progress_oc_player_loader"> 
		<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">300dip</item>
		<item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style> 
	
</resources>
