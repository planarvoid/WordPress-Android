<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Ak"/>
    <style name="Ak.EmptyViewContent">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Ak.EmptyViewContent.EmptyCollection">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">@dimen/empty_message_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/empty_message_margin_left_right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Ak.EmptyViewContent.EmptyCollection.Image">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Ak.EmptyViewContent.EmptyCollection.Main">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Ak.EmptyViewContent.EmptyCollection.Main.Error">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Ak.EmptyViewContent.EmptyCollection.Sub">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="Ak.EmptyViewContent.EmptyCollection.Sub.Error">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Ak.EmptyViewContent.EmptyCollection.Link">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Ak.EmptyCollectionErrorContentHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Ak.EmptyCollectionButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/soundcloud_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Ak.EmptyViewImage">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
