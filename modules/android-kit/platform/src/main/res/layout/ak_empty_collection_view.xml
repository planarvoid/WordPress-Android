<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@id/ak_emptyview_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Ak.EmptyViewContent.EmptyCollection.Image" />

    <TextView
        android:id="@id/ak_emptyview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        style="@style/Ak.EmptyViewContent.EmptyCollection" />

    <TextView
        android:id="@id/ak_emptyview_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="gone"
        style="@style/Ak.EmptyViewContent.EmptyCollection.Link" />

    <Button
        android:id="@id/ak_emptyview_btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="0"
        android:visibility="gone"
        style="@style/Ak.EmptyCollectionButton" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
